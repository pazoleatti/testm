<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd"
>
	<bean id="formDataModule" class="org.codehaus.jackson.map.module.SimpleModule">
		<constructor-arg index="0" value="taxaccounting:formData"/>
		<constructor-arg index="1">
			<bean class="org.codehaus.jackson.Version">
				<constructor-arg index="0" value="1"/>
				<constructor-arg index="1" value="0"/>
				<constructor-arg index="2" value="0"/>
				<constructor-arg index="3" value=""/>
			</bean>
		</constructor-arg>
	</bean>
    <context:component-scan base-package="com.aplana.sbrf.taxaccounting.controller.formData"/>
</beans>