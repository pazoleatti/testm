<?xml version="1.0" encoding="UTF-8"?>
<web-app id="com.aplana.sbrf.taxaccounting.portlets" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>Tax Accounting Portlets</display-name>
	<description>Портлеты для проекта "Учёт налогов"</description>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext.xml
			classpath:com/aplana/sbrf/taxaccounting/dao.xml
		</param-value>
	</context-param>	
	<listener> 
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>	
	<servlet>
		<servlet-name>ViewRendererServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.ViewRendererServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewRendererServlet</servlet-name>
		<url-pattern>/WEB-INF/servlet/view</url-pattern>
	</servlet-mapping>    
	<resource-ref id="ResourceRef_TaxAccDS">
		<description>Источник данных для доступа к БД АС "Учёт налогов"</description>
		<res-ref-name>jdbc/TaxAccDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
    <servlet>
        <servlet-name>dictionary</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dictionary</servlet-name>
        <url-pattern>/dictionary/*</url-pattern>
    </servlet-mapping>	
</web-app>