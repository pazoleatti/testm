<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/jee
       http://www.springframework.org/schema/jee/spring-jee.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <import resource="classpath:com/aplana/sbrf/taxaccounting/version-info.xml"/>

    <!-- Тут специфичная работа с двумя датасорсами - оставил старый код -->
    <jee:remote-slsb id="dsHolder"
                     jndi-name="ejblocal:${releaseName}/mdb.jar/DataSourceHolderBean#com.aplana.sbrf.taxaccounting.service.DataSourceHolderServiceLocal"
                     business-interface="com.aplana.sbrf.taxaccounting.service.DataSourceHolderService"/>

    <jee:local-slsb
            id="asyncTaskManager"
            jndi-name="ejblocal:${releaseName}/async-core.jar/AsyncManagerBean#com.aplana.sbrf.taxaccounting.async.manager.AsyncManagerLocal"
            business-interface="com.aplana.sbrf.taxaccounting.async.manager.AsyncManager"
            lookup-home-on-startup="true"
            />
    <jee:local-slsb
            id="asyncInterruptionManager"
            jndi-name="ejblocal:${releaseName}/async-core.jar/AsyncInterruptionManagerSingleton#com.aplana.sbrf.taxaccounting.async.manager.AsyncInterruptionManagerLocal"
            business-interface="com.aplana.sbrf.taxaccounting.async.manager.AsyncInterruptionManager"
            lookup-home-on-startup="true"
            />

    <bean id="dataSource" class="com.aplana.sbrf.taxaccounting.mdb.ApplicationDataSource" factory-method="getDataSource">
        <constructor-arg ref="dsHolder"/>
    </bean>
    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg index="0" ref="dataSource"/>
    </bean>
    <context:annotation-config/>
    <tx:jta-transaction-manager/>
    <tx:annotation-driven/>

    <context:component-scan base-package="com.aplana.sbrf.taxaccounting"/>
    <aop:config proxy-target-class="true"/>

</beans>