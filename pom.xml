<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.aplana.taxaccounting</groupId>
	<artifactId>taxaccounting</artifactId>

	<description>АС "Учёт налогов" - Родительский модуль</description>
	<version>0.3.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>model</module>
		<module>core</module>
		<module>dao</module>
		<module>service</module>		
		<module>gwtapp</module>
		<module>taxaccounting-ear</module>
		<module>dynacache-spring</module>
		<module>test-utils</module>
        <module>script-support</module>
		<module>fonts</module>
	</modules>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!--<maven.test.skip>false</maven.test.skip>-->
		<springframework.version>3.1.3.RELEASE</springframework.version>
		<springsecurity.version>3.1.3.RELEASE</springsecurity.version>
	</properties>
	<dependencies>
		<dependency>
			<artifactId>commons-logging</artifactId>
			<groupId>commons-logging</groupId>
			<version>1.0.3</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<version>${springframework.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.5.1</version>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-source-plugin</artifactId>
					<version>2.2</version>
					<executions>
						<execution>
							<id>attach-sources</id>
							<goals>
								<goal>jar</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

			</plugins>
		</pluginManagement>
	</build>
	<repositories>
		<repository>
			<id>codehaus.repo</id>
			<name>Codehaus repository (for latest groovy, jackson, etc.)</name>
			<url>http://repository.codehaus.org</url>
		</repository>
		<repository>
			<id>taxaccounting-thirdparty</id>
			<name>Сторонние библиотеки, используемые в проекте</name>
			<url>http://aplana.datateh.ru:8181/nexus/content/repositories/thirdparty/</url>
		</repository>
	</repositories>
	<scm>
		<connection>scm:svn:https://horse.aplana.com/svn/SBRFACCTAX/trunk</connection>
		<developerConnection>scm:svn:https://horse.aplana.com/svn/SBRFACCTAX/trunk</developerConnection>
		<url>https://horse.aplana.com/svn/SBRFACCTAX/trunk</url>
	</scm>
</project>
