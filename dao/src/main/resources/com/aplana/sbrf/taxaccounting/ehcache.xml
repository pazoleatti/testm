<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         updateCheck="false">
    <diskStore path="java.io.tmpdir"/>

    <!-- Кэш по умолчанию не используем -->

    <cache name="DeclarationTemplate" timeToIdleSeconds="180" timeToLiveSeconds="300" maxElementsInMemory="100" overflowToDisk="false"/>
    <cache name="DeclarationTemplateEventScript" timeToIdleSeconds="180" timeToLiveSeconds="300" maxElementsInMemory="100" overflowToDisk="false"/>
    <cache name="DeclarationType" timeToIdleSeconds="180" timeToLiveSeconds="300" maxElementsInMemory="100" overflowToDisk="false"/>
    <cache name="DepartmentReportPeriod" timeToIdleSeconds="180" timeToLiveSeconds="300" maxElementsInMemory="2000" overflowToDisk="false"/>
    <cache name="User" timeToIdleSeconds="180" timeToLiveSeconds="300" maxElementsInMemory="2000" overflowToDisk="false"/>
    <cache name="Department" timeToIdleSeconds="180" timeToLiveSeconds="300" maxElementsInMemory="2000" overflowToDisk="false"/>
    <cache name="RefBook" timeToIdleSeconds="180" timeToLiveSeconds="300" maxElementsInMemory="100" overflowToDisk="false"/>
    <cache name="RefBookAttribute" timeToIdleSeconds="180" timeToLiveSeconds="300" maxElementsInMemory="300" overflowToDisk="false"/>
</ehcache>