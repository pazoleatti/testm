<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         updateCheck="false">
    <diskStore path="java.io.tmpdir"/>

    <!-- Кэш по умолчанию не используем -->

    <cache name="DeclarationTemplate" timeToLiveSeconds="60" maxElementsInMemory="100" overflowToDisk="false"/>
    <cache name="DeclarationTemplateEventScript" timeToLiveSeconds="60" maxElementsInMemory="100" overflowToDisk="false"/>
    <cache name="DeclarationType" timeToLiveSeconds="60" maxElementsInMemory="100" overflowToDisk="false"/>
    <cache name="DepartmentReportPeriod" timeToLiveSeconds="60" maxElementsInMemory="2000" overflowToDisk="false"/>
    <cache name="User" timeToLiveSeconds="60" maxElementsInMemory="2000" overflowToDisk="false"/>
    <cache name="Department" timeToLiveSeconds="60" maxElementsInMemory="2000" overflowToDisk="false"/>
    <cache name="RefBook" timeToLiveSeconds="60" maxElementsInMemory="100" overflowToDisk="false"/>
    <cache name="RefBookAttribute" timeToLiveSeconds="60" maxElementsInMemory="300" overflowToDisk="false"/>
</ehcache>