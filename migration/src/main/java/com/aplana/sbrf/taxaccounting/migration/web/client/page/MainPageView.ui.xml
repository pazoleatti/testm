<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        * {
            margin: 10;
            padding: 10;
            font-family: helvetica, arial, sans-serif;
            font-size: 16px;
        }

        .magrinUp {
            margin-top: 30px;
        }

        .btnStart {
            margin-top: 30px;
            margin-left: 20px;
        }

    </ui:style>

    <g:FlowPanel>
        <g:Label height="30">Модуль миграции данных</g:Label>

        <g:HorizontalPanel>
            <g:VerticalPanel width="190px">
                <g:Label height="30">Выберите виды РНУ:</g:Label>
                <g:ListBox ui:field="listRnu" visibleItemCount="10"/>

                <g:VerticalPanel styleName="{style.magrinUp}" >
                    <g:CheckBox ui:field="all" text="Выбрать все" />
                    <g:Button ui:field="sendButton" text="Запустить" styleName="{style.btnStart}"/>
                </g:VerticalPanel>
            </g:VerticalPanel>

            <g:VerticalPanel spacing="5">
                <g:Label>Результат</g:Label>
                <g:TextArea ui:field="infoPanel" readOnly="true" width="700px" height="600px"/>
                <g:Button ui:field="clearButton" text="Очистить"/>
            </g:VerticalPanel>

        </g:HorizontalPanel>

    </g:FlowPanel>
</ui:UiBinder>