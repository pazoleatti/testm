<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'
             xmlns:dw="urn:import:com.aplana.gwt.client">
    <ui:style>

        .content {
            margin: 0 5px;
        }

        .footerPanel {
            margin-top: 10px;
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin:  8px 10px 8px 0 !important;
            width: 75px;
        }
    </ui:style>

    <dw:ModalWindow iconUrl="resources/img/add.png" title="Создание бухгалтерской отчётности" ui:field="title">
        <g:VerticalPanel height="100%" width="400px" addStyleNames="aplana-ModalWindow-contentBackWhite">

            <g:HorizontalPanel spacing="6" verticalAlignment="middle" addStyleNames="{style.content}">
                <g:cell horizontalAlignment="right">
                    <g:Label width="140px" wordWrap="false" text="Год:"/>
                </g:cell>
                <g:cell width="100%">
                    <dw:Spinner minValue="1920" maxValue="2100" width="100%" ui:field="yearBox"/>
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel spacing="6" verticalAlignment="middle" addStyleNames="{style.content}">
                <g:cell horizontalAlignment="right">
                    <g:Label width="140px" wordWrap="false" text="Период:"/>
                </g:cell>
                <g:cell width="100%">
                    <r:RefBookPickerWidget ui:field="accountPeriodIds" width="100%" versionEnabled="false"
                                           attributeIdInt="1062" isHierarchical="false" multiSelect="false"/>
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel spacing="6"  verticalAlignment="middle" addStyleNames="{style.content}">
                <g:cell horizontalAlignment="right">
                    <g:Label width="140px" wordWrap="false" text="Подразделение:"/>
                </g:cell>
                <g:cell width="100%">
                    <dep:DepartmentPickerPopupWidget ui:field="departmentPicker" multiselection="false" width="100%"/>
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel spacing="6"  verticalAlignment="middle" addStyleNames="{style.content}">
                <g:cell horizontalAlignment="right">
                    <g:Label width="140px" wordWrap="false" text="Вид бух.отчётности:"/>
                </g:cell>
                <g:cell width="100%">
                    <dw:ListBoxWithTooltip ui:field="bookerReportType" width="100%"/>
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel addStyleNames="{style.footerPanel}" horizontalAlignment="right">
                <g:cell width="100%">
                    <g:Label/>
                </g:cell>
                <g:Button addStyleNames="{style.footerButton}" ui:field="continueButton" text="Создать"/>
                <g:Button addStyleNames="{style.footerButton}" ui:field="cancelButton" text="Закрыть"/>
            </g:HorizontalPanel>

        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder> 