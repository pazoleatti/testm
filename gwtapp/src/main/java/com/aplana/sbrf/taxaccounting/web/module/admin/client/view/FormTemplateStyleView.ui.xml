<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:c='urn:import:com.aplana.sbrf.taxaccounting.web.widget.colorpicker'>
    <ui:style>
        .marginLeft {
            margin-left: 50px;
        }
    </ui:style>

    <g:HTMLPanel width="100%" height="100%">
        <g:HorizontalPanel width="100%" height="100%">
            <g:cell width="25%" height="100%">
                <g:VerticalPanel width="100%" height="100%">
                    <g:Label text="Стили"/>
                    <g:cell height="100%">
                        <g:ListBox width="100%" height="100%" visibleItemCount="25" ui:field="styleListBox"/>
                    </g:cell>
                    <t:Bar>
                        <t:LeftBar>
                            <g:Button text="Добавить" ui:field="addStyle"/>
                            <g:Button text="Удалить" ui:field="removeStyle"/>
                        </t:LeftBar>
                    </t:Bar>
                </g:VerticalPanel>
            </g:cell>

            <g:cell width="75%">
                <g:HTMLPanel addStyleNames="{style.marginLeft}">
                    <g:Label height="50px" text="Список атрибутов"/>

                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Имя:</g:Label>
                        <g:TextBox width="300px" ui:field="alias"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Курсивный</g:Label>
                        <g:CheckBox ui:field="italic"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Жирный шрифт</g:Label>
                        <g:CheckBox ui:field="bold"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Цвет штрифта</g:Label>
                        <g:ValueListBox width="200px" ui:field="fontColor"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Цвет фона</g:Label>
                        <g:ValueListBox width="200px" ui:field="backColor"/>
                    </g:HorizontalPanel>

                </g:HTMLPanel>
            </g:cell>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>