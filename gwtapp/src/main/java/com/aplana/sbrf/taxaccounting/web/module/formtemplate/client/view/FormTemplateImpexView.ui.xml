<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>

    <ui:style>
        .panel {
            padding: 20px;
        }
        .export {
            margin: 5px;
        }
        .submit {
            margin-top: 2px;;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.panel}">
        <g:FormPanel ui:field="uploadFormTemplatePanel" encoding="multipart/form-data"
                 method="post">
            <t:LeftBar>
                <g:FileUpload name="uploadFormFile" />
                <g:SubmitButton text="Импорт" addStyleNames="{style.submit}"/>
            </t:LeftBar>
        </g:FormPanel>
        <g:Button text="Экспорт" ui:field="downloadFormTemplateButton"
                  title="Экспорт шаблона формы" addStyleNames="{style.export}"/>
    </g:FlowPanel>
</ui:UiBinder>