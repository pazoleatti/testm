<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:rep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client"
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'
             xmlns:dw="urn:import:com.aplana.gwt.client">
    <ui:style>
        .content {
            margin: 0 5px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
            width: 75px;
        }
    </ui:style>

    <dw:ModalWindow iconUrl="resources/img/add.png" title="Создание налоговой формы" ui:field="modalWindowTitle">
        <g:VerticalPanel height="100%" width="400px" addStyleNames="aplana-ModalWindow-contentBackWhite">

            <g:HorizontalPanel spacing="6" verticalAlignment="middle" addStyleNames="{style.content}">
                <g:cell horizontalAlignment="right">
                    <g:Label width="140px" wordWrap="false" text="Период:"/>
                </g:cell>
                <g:cell width="100%">
                    <rep:PeriodPickerPopupWidget width="100%" ui:field="periodPicker" multiselect="false"/>
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel ui:field="correctionPanel" spacing="6" verticalAlignment="middle" addStyleNames="{style.content}">
                <g:cell horizontalAlignment="right">
                    <g:Label width="140px" wordWrap="false" text="Дата сдачи корректировки:"/>
                </g:cell>
                <g:cell width="100%">
                    <g:ValueListBox width="100%" ui:field="correction" />
                </g:cell>
            </g:HorizontalPanel>


            <g:HorizontalPanel spacing="6" verticalAlignment="middle" addStyleNames="{style.content}">
                <g:cell horizontalAlignment="right">
                    <g:Label width="140px" wordWrap="false" text="Подразделение:"/>
                </g:cell>
                <g:cell width="100%">
                    <dep:DepartmentPickerPopupWidget ui:field="departmentPicker" width="100%" multiselection="false"/>
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel spacing="6" verticalAlignment="middle" addStyleNames="{style.content}">
                <g:cell horizontalAlignment="right">
                    <g:Label ui:field="declarationTypeLabel" width="140px" wordWrap="false" text="Вид налоговой формы:" height="16px"/>
                </g:cell>
                <g:cell width="100%">
                    <r:RefBookPickerWidget ui:field="declarationTypeId" attributeIdInt="2071" isHierarchical="false"  versionEnabled="false"
                                           multiSelect="false"  width="100%" />
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel addStyleNames="{style.footerPanel}" horizontalAlignment="right">
                <g:cell width="100%">
                    <g:Label/>
                </g:cell>
                <g:Button addStyleNames="{style.footerButton}" ui:field="continueButton" text="Выгрузить"/>
                <g:Button addStyleNames="{style.footerButton}" ui:field="cancelButton" text="Закрыть"/>
            </g:HorizontalPanel>

        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder>