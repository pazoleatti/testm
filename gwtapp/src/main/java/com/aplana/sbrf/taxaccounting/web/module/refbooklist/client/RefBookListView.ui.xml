<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>

        .titleText {
            font-size: 14px;
            color: #636460;
        }

        .btnPanel {
            width: 100%;
            padding-left: 10px;
            padding-top: 5px;
        }

        .table {
            position: absolute !important;
            bottom: 30px;
            right: 0;
            left: 0;
            top: 42px;
        }

        .marginRight5 {
            margin-right: 5px;
        }

        .separator {
            height: 26px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }

        .btnFind {
            margin-left: 6px;
            margin-right: 15px;
        }

        .labelBlockMargin {
            margin-right: 5px;
        }

    </ui:style>

    <fm:MainContainer>

        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <g:Label ui:field="formHeader" addStyleNames="{style.titleText}, {style.marginRight5}"
                                     text="Администрирование"/>
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar marginRight="10" childValign="middle" height="100%">
                            <style:LinkAnchor text="Загрузить справочники" ui:field="loadButton" img="resources/img/import-file.png"
                                              title="Загрузить справочники"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Список справочников"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>

        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel verticalAlignment="middle" spacing="2" addStyleNames="{style.btnPanel}">
                    <g:cell horizontalAlignment="right"  width="180px">
                        <g:Label addStyleNames="{style.labelBlockMargin}" wordWrap="false" text="Наименование справочника:"/>
                    </g:cell>
                    <g:cell width="217px" >
                        <g:TextBox width="210px" ui:field="filterText"/>
                    </g:cell>
                    <g:cell width="18px" horizontalAlignment="right">
                        <g:HTML addStyleNames="{style.separator}"/>
                    </g:cell>
                    <g:cell horizontalAlignment="left">
                        <g:Button ui:field="findButton" addStyleNames="{style.btnFind}" text="Найти"/>
                    </g:cell>
                </g:HorizontalPanel>
                <g:ResizeLayoutPanel addStyleNames="{style.table}">
                    <style:GenericDataGrid height="100%" ui:field="formDataTable"/>
                </g:ResizeLayoutPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>