<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dw="urn:import:com.aplana.gwt.client"
             xmlns:dep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'
             xmlns:per="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client">


    <ui:style>
        .separator {
            height: 65px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }

        .btnFind {
            margin-left: 6px;
            margin-right: 15px;
        }

        .labelBlockMargin{
            margin-right: 5px;
            width: 180px;
        }

    </ui:style>

    <g:HorizontalPanel width="100%">
        <g:VerticalPanel>
                <g:HorizontalPanel>
                    <g:cell>
                        <g:VerticalPanel horizontalAlignment="right" addStyleNames="{style.labelBlockMargin}">
                            <g:Label text="Тип налоговой формы:" ui:field="formDataKindLbl"/>
                            <g:Label text="Вид налоговой формы:" ui:field="formTypeIdLbl"/>
                        </g:VerticalPanel>
                    </g:cell>
                    <g:cell width="25%">
                        <g:VerticalPanel width="100%">
                            <r:RefBookMultiPickerModalWidget ui:field="formDataKind" attributeIdInt="837" modal="true" multiSelect="true" width="100%"/>
                            <dw:ListBoxWithTooltip width="100%"
                                                      ui:field="formTypeId" showTooltip="true"/>
                        </g:VerticalPanel>
                    </g:cell>

                    <g:cell>
                        <g:VerticalPanel horizontalAlignment="right" addStyleNames="{style.labelBlockMargin}">
                            <g:Label text="Подразделение: " ui:field="departmentPickerLbl"/>
                            <g:Label text="Период: " ui:field="reportPeriodIdsLbl"/>
                        </g:VerticalPanel>
                    </g:cell>
                    <g:cell width="25%">
                        <g:VerticalPanel width="100%">
                            <dep:DepartmentPickerPopupWidget width="100%" ui:field="departmentPicker"
                                                             multiselection="true" header="Выберите подразделение"
                                                             modal="true"/>
                            <per:PeriodPickerPopupWidget multiselect="true" ui:field="reportPeriodIds" width="100%"/>
                        </g:VerticalPanel>
                    </g:cell>

                    <g:cell>
                        <g:VerticalPanel horizontalAlignment="right" addStyleNames="{style.labelBlockMargin}">
                            <g:Label text="Состояние: " ui:field="formStateLbl"/>
                            <g:Label text="Признак возврата: " ui:field="returnStateLbl"/>
                        </g:VerticalPanel>
                    </g:cell>
                    <g:cell width="25%">
                        <g:VerticalPanel width="100%">
                            <g:ValueListBox width="100%" ui:field="formState"/>
                            <g:ValueListBox width="100%" ui:field="returnState"/>
                        </g:VerticalPanel>
                    </g:cell>


                </g:HorizontalPanel>
        </g:VerticalPanel>


        <g:cell verticalAlignment="middle" horizontalAlignment="right">
            <g:HTML addStyleNames="{style.separator}"/>
        </g:cell>
        <g:cell verticalAlignment="middle">
            <g:Button ui:field="apply" text="Найти" addStyleNames="{style.btnFind}"/>
        </g:cell>
    </g:HorizontalPanel>


</ui:UiBinder>