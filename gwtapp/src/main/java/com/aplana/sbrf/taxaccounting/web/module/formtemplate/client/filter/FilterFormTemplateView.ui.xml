<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .separator {
            height: 22px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }
    </ui:style>
    <g:HorizontalPanel spacing="5">
        <g:cell horizontalAlignment="right" verticalAlignment="middle">
            <g:Label ui:field="taxTypeLbl" width="70px" text="Вид налога:"/>
        </g:cell>
        <g:cell verticalAlignment="middle">
            <g:ValueListBox width="200px" ui:field="taxType"/>
        </g:cell>

        <g:cell verticalAlignment="middle">
            <g:CheckBox width="150px" ui:field="active" text="Признак активности"/>
        </g:cell>

        <g:cell verticalAlignment="middle">
            <g:HTML addStyleNames="{style.separator}"/>
        </g:cell>

        <g:cell verticalAlignment="middle">
            <g:Button ui:field="apply" text="Поиск"/>
        </g:cell>
    </g:HorizontalPanel>


</ui:UiBinder> 