<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">

	<g:VerticalPanel>
		<g:cell height="50px">
			<g:HorizontalPanel>
				<g:cell width="250px">
					<g:VerticalPanel>
						<g:Label width="200px" text="Вид налога" ui:field="taxTypeLbl"/>
						<g:ValueListBox width="200px"
							ui:field="taxType"/>
					</g:VerticalPanel>
				</g:cell>
                <g:cell verticalAlignment="bottom">
                    <g:CheckBox width="200px"
                                    ui:field="active" text="Признак активности"/>
                </g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell height="50px">
			<g:HorizontalPanel>
				<g:cell verticalAlignment="bottom">
					<style:Bar>
						<style:LeftBar>
							<g:Button ui:field="create">Создать</g:Button>
							<g:Button ui:field="apply">Поиск</g:Button>
                            <g:Button ui:field="delete">Удалить</g:Button>
						</style:LeftBar>
					</style:Bar>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>

</ui:UiBinder> 