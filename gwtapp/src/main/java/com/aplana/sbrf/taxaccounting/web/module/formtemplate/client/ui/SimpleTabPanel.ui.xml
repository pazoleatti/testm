<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style src='defines.css'>
        .container {
            background-color: whitePanelColor;
            bottom: 25px;
            left: 5px;
            position: absolute;
            right: 5px;
            top: 10px
        }

        .bar {
            background-color: whitePanelColor;
        }

        .panel {
            background-color: whitePanelColor;
            overflow: hidden;
            border: 2px solid lightPanelColor;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.container}">
            <g:HTMLPanel addStyleNames="{style.bar} ">
                <g:FlowPanel ui:field="tabPanel" />
                <div style="clear: both;" />
            </g:HTMLPanel>
            <g:HTMLPanel height="100%" ui:field="tabContentContainer"
                         addStyleNames="{style.panel}" />
        </div>
    </g:HTMLPanel>

</ui:UiBinder>