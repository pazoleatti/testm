<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:m='urn:import:com.aplana.sbrf.taxaccounting.web.module.taxformnomination.client'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker'>


    <ui:style field="css"
              type="com.aplana.sbrf.taxaccounting.web.module.taxformnomination.client.TaxFormNominationView.LinkStyle">
        .enabled {
            cursor: pointer;
        }

        .disabled {
            cursor: default;
        }
    </ui:style>

    <ui:style>
        .titleLabel {
            font-size: 26px;
            margin: 10px;
        }

        .label {
            margin-right: 5px;
            margin-left: 5px;
            font-weight: bold;
        }

        .taxTypePanel {
            margin-left: 30px;
        }

    </ui:style>
    <g:DockLayoutPanel>

        <g:north size="120">
            <g:VerticalPanel>
                <g:Label addStyleNames="{style.titleLabel}">Назначение налоговых форм и деклараций</g:Label>

                <g:HorizontalPanel height="45px">
                    <g:HorizontalPanel width="210px">
                        <g:Label addStyleNames="{style.label}" text="Назначение:"/>
                        <g:VerticalPanel>
                            <g:Anchor ui:field="formAnchor" href="#!destination;isForm=true">Налоговые формы</g:Anchor>
                            <g:Label ui:field="formLabel">Налоговые формы</g:Label>
                            <g:Anchor ui:field="declarationAnchor" href="#!destination;isForm=false">Декларации
                            </g:Anchor>
                            <g:Label ui:field="declarationLabel">Декларации</g:Label>
                        </g:VerticalPanel>
                    </g:HorizontalPanel>

                    <g:FlowPanel width="400px" addStyleNames="{style.taxTypePanel}">
                        <g:Label styleName="{style.label}">Вид налога</g:Label>
                        <m:MyValueListBox ui:field="boxTaxType"/>
                    </g:FlowPanel>

                    <g:cell width="100px" verticalAlignment="bottom">
                        <style:LinkAnchor ui:field="assignAnchor" text="Назначить"/>
                    </g:cell>

                    <g:cell verticalAlignment="bottom">
                        <style:LinkAnchor ui:field="cancelAnchor" text="Отменить назначение"/>
                    </g:cell>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:north>

        <g:center>
            <g:SplitLayoutPanel>
                <g:north size="350">
                    <g:SplitLayoutPanel>
                        <g:west size="600">
                            <g:DockLayoutPanel>
                                <g:north size="30">
                                    <g:Label addStyleNames="{style.label}">Подразделение</g:Label>
                                </g:north>
                                <g:center>
                                    <t:DepartmentPickerWidget ui:field="tree"/>
                                </g:center>
                            </g:DockLayoutPanel>
                        </g:west>
                        <g:center>
                            <g:DockLayoutPanel ui:field="panelFormDataKind">
                                <g:west size="200">
                                    <g:DockLayoutPanel ui:field="panelFormDataKind2">
                                        <g:north size="30">
                                            <g:Label addStyleNames="{style.label}">Тип налоговой формы</g:Label>
                                        </g:north>
                                        <g:center>
                                            <m:MyValueListBox ui:field="boxFormDataKind" width="100%"
                                                              visibleItemCount="15"/>
                                        </g:center>
                                    </g:DockLayoutPanel>
                                </g:west>
                                <g:center>
                                    <g:DockLayoutPanel>
                                        <g:north size="30">
                                            <g:Label addStyleNames="{style.label}" ui:field="labelKind"/>
                                        </g:north>
                                        <g:center>
                                            <m:MyValueListBox ui:field="boxTaxFormKind" width="100%"
                                                              visibleItemCount="15"/>
                                        </g:center>
                                    </g:DockLayoutPanel>
                                </g:center>

                            </g:DockLayoutPanel>
                        </g:center>
                    </g:SplitLayoutPanel>
                </g:north>

                <g:center>
                    <style:GenericDataGrid ui:field="grid" width="100%" height="100%"/>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>


    </g:DockLayoutPanel>

</ui:UiBinder>