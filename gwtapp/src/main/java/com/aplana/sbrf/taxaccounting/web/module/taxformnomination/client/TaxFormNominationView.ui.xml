<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:m='urn:import:com.aplana.sbrf.taxaccounting.web.module.taxformnomination.client'
             xmlns:a='urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker'>


    <ui:style field="css"
              type="com.aplana.sbrf.taxaccounting.web.module.taxformnomination.client.TaxFormNominationView.LinkStyle">
        .enabled {
            cursor: pointer;
        }

        .disabled {
            cursor: default;
        }
    </ui:style>

    <ui:style>
        .titleLabel {
            font-size: 26px;
            margin: 10px;
        }

        .delimiter{
            font-size: 26px;
            margin-right: 10px;
        }



        .taxTypePanel {
            margin-left: 30px;
        }

        .forTree {
            border-style: none !important;
            width: 100% !important;
            height: 350px;
            min-width: 150px;
        }
    </ui:style>
    <g:DockLayoutPanel>

        <g:north size="120">
            <g:VerticalPanel>
                <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
                    <g:Label ui:field="formLabel" addStyleNames="{style.titleLabel}">Назначение налоговых форм</g:Label>
                    <g:Label ui:field="declarationLabel" visible="false" addStyleNames="{style.titleLabel}">Назначение деклараций</g:Label>
                    <g:Label addStyleNames="{style.delimiter}">|</g:Label>
                    <g:Anchor ui:field="declarationAnchor" href="#">Назначение деклараций</g:Anchor>
                    <g:Anchor ui:field="formAnchor" visible="false" href="#" >Назначение налоговых форм</g:Anchor>
                </g:HorizontalPanel>


                <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">

                    <g:HorizontalPanel spacing="10" verticalAlignment="ALIGN_MIDDLE">
                        <g:Label>Вид налога</g:Label>
                        <m:MyValueListBox enabled="false" ui:field="boxTaxType"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel  spacing="10" verticalAlignment="ALIGN_MIDDLE">
                        <g:Label>Подразделение</g:Label>
                        <a:DepartmentPickerPopupWidget ui:field="departmentPicker" header="Выберите подразделение" modal="true" multiselection="true"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel spacing="10" verticalAlignment="ALIGN_MIDDLE">
                        <g:Button ui:field="search" title="Поиск" text="Найти..."/>
                        <g:Button ui:field="assign" title="Назначить" text="Назначить..."/>
                    </g:HorizontalPanel>


                    <g:HorizontalPanel spacing="10" verticalAlignment="ALIGN_MIDDLE">
                        <style:LinkAnchor ui:field="editAnchor" text="Редактировать"/>
                        <style:LinkAnchor ui:field="assignAnchor" text="Назначить"/>
                        <style:LinkAnchor enabled="false" ui:field="cancelAnchor" text="Отменить назначение"/>
                    </g:HorizontalPanel>

                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:north>

        <g:center>
            <g:SplitLayoutPanel>
                <g:center>
                    <g:HTMLPanel>
                        <style:GenericDataGrid ui:field="formGrid" width="100%" height="100%"/>
                        <style:GenericDataGrid ui:field="declarationGrid" width="100%" height="100%" visible="false"/>
                    </g:HTMLPanel>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>



    </g:DockLayoutPanel>

</ui:UiBinder>