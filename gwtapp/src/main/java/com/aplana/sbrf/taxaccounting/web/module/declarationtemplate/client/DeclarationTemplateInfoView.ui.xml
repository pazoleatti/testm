<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fileuplod='urn:import:com.aplana.sbrf.taxaccounting.web.widget.fileupload'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'
             xmlns:w='urn:import:com.aplana.gwt.client.mask.ui'>
    <ui:style>
        .marginLeft {
            margin-left: 5px;
        }

        .formStyle {
            background-color: #949494;
            padding: 15px;
            margin: 30px 30px 0px 30px;
            color: white;
            border-color: #828282;
        }

        .upload {
            margin-top: 30px;
            margin-left: 30px;
        }

        .fix{
            padding-left: 2px;
        }

        .margin5 {
            margin-right: 5px;
        }

        .minWidth {
            width: 32px;
        }
    </ui:style>


    <g:VerticalPanel width="100%">
        <g:FlowPanel styleName="{style.formStyle}">
            <g:VerticalPanel>
                <g:HorizontalPanel verticalAlignment="middle">
                    <g:Label width="250px" wordWrap="false" text="Период актуальности:"/>
                    <g:HorizontalPanel verticalAlignment="middle">
                        <g:Label wordWrap="false" text="C 1 января" width="67px" addStyleNames="{style.margin5}"/>
                        <w:YearMaskBox ui:field="versionDateBegin" mayBeNull="true" width="32" addStyleNames="{style.margin5}, {style.fix}, {style.minWidth}" />
                        <g:Label wordWrap="false" width="120px" text="года по 31 декабря"/>
                        <w:YearMaskBox ui:field="versionDateEnd" mayBeNull="true" width="32" addStyleNames="{style.margin5}, {style.fix}, {style.minWidth}" />
                        <g:Label wordWrap="false" text="года"/>
                    </g:HorizontalPanel>
                </g:HorizontalPanel>
            </g:VerticalPanel>
            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label width="250px" text="Наименование налоговой формы:"/>
                <g:TextBox width="500px" ui:field="decName" addStyleNames="{style.fix}"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label width="250px" text="Тип налоговой формы:"/>
                <r:RefBookPickerWidget ui:field="formKindPicker" width="100%" searchEnabled="false"
                                       versionEnabled="false" manualUpdate="false"
                                       attributeIdInt="9321" isHierarchical="false" multiSelect="false"
                                       filter="id = 2 or id = 3 or id = 7"
                                       title="Выбор типа налоговой формы"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label width="250px" text="Вип налоговой формы:"/>
                <r:RefBookPickerWidget ui:field="formTypePicker" width="100%" versionEnabled="false" manualUpdate="false"
                                       attributeIdInt="9312" isHierarchical="false" multiSelect="false"
                                       title="Выбор вида налоговой формы"/>
            </g:HorizontalPanel>

        </g:FlowPanel>

        <g:HorizontalPanel>
            <g:VerticalPanel addStyleNames="{style.upload}" height="30px">
                <g:cell>
                    <fileuplod:FileUploadWidget ui:field="uploadXsdFile" extension="xsd" text="Загрузить xsd"/>
                </g:cell>
                <g:cell>
                    <fileuplod:FileUploadWidget isJrxml="true" ui:field="uploadJrxmlFile" extension="jrxml" text="Загрузить jrxml"/>
                </g:cell>
            </g:VerticalPanel>
            <g:VerticalPanel addStyleNames="{style.upload}" height="30px">
                <g:cell>
                    <style:LinkAnchor text="Скачать xsd" ui:field="downloadXsd" img="resources/img/down_cc.png"
                                      addStyleNames="{style.marginLeft}" title="Скачать xsd"/>
                </g:cell>
                <g:cell>
                    <style:LinkAnchor text="Скачать jrxml" ui:field="downloadJrxmlButton" img="resources/img/down_cc.png"
                                      title="Скачать jrxml файл" addStyleNames="{style.marginLeft}"/>
                </g:cell>
            </g:VerticalPanel>
            <g:VerticalPanel addStyleNames="{style.upload}" height="30px">
                <g:cell>
                    <style:LinkButton text="Удалить xsd" ui:field="deleteXsd" img="resources/img/row-delete.png"
                                      addStyleNames="{style.marginLeft}" title="Удалить xsd"/>
                </g:cell>
                <g:cell>
                    <style:LinkButton text="Удалить jrxml" ui:field="deleteJrxml" img="resources/img/row-delete.png"
                                      title="Удалить jrxml файл" addStyleNames="{style.marginLeft}"/>
                </g:cell>
            </g:VerticalPanel>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>