<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>
    <ui:style>
        .margin {
            margin: 5px;
        }
    </ui:style>
    <g:HTMLPanel>
        <h3>
            <g:Label ui:field="title" />
        </h3>

        <g:HorizontalPanel height="25px" addStyleNames="{style.margin}">
            <g:Label width="120px">Стиль:</g:Label>
            <g:ValueListBox width="200px" ui:field="styleAlias"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="25px" addStyleNames="{style.margin}">
            <g:Label width="120px">Цвет шрифта:</g:Label>
            <g:ValueListBox width="200px" ui:field="fontColor"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="25px" addStyleNames="{style.margin}">
            <g:Label width="120px">Цвет фона:</g:Label>
            <g:ValueListBox width="200px" ui:field="backColor"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="25px" addStyleNames="{style.margin}">
            <g:Label width="120px">Курсивный:</g:Label>
            <g:CheckBox ui:field="italic"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="25px" addStyleNames="{style.margin}">
            <g:Label width="120px">Жирный шрифт:</g:Label>
            <g:CheckBox ui:field="bold"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="25px" addStyleNames="{style.margin}">
            <g:Label width="120px">Изменяемая:</g:Label>
            <g:CheckBox ui:field="editable"/>
        </g:HorizontalPanel>
        <t:LeftBar>
            <g:Button text="Сохранить" ui:field="saveButton"/>
        </t:LeftBar>
    </g:HTMLPanel>
</ui:UiBinder>