<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>
    <g:HTMLPanel>
        <h3>
            <g:Label ui:field="title" />
        </h3>

        <g:HorizontalPanel height="25px">
            <g:Label width="90px">Стиль</g:Label>
            <g:ValueListBox width="100px" ui:field="styleAlias"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="25px">
            <g:Label width="90px">Изменяемая</g:Label>
            <g:CheckBox ui:field="editable"/>
        </g:HorizontalPanel>
        <t:LeftBar>
            <g:Button text="Сохранить" ui:field="saveButton"/>
        </t:LeftBar>
    </g:HTMLPanel>
</ui:UiBinder>