<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
        >
    <ui:style>
        @external .gwt-DialogBox .Caption;
        .gwt-DialogBox .Caption {
            font-weight: bold;
            text-align: left;
            color: white;
            background: url("img/top_grad.gif") repeat-x scroll center bottom #F1F1F1;
        }

        .panelWithFilter {
            background-color: #ccc9b0;
            margin-top: 10px;
            margin-bottom: 5px;
            border-radius: 1%;
        }

        .filter {
            margin: 10px;
        }

        .buttonLayout {
            margin: 4px auto;
        }

        .actionButton {
            width: 70px;
            margin-right: 3px;
            margin-left: 3px;
        }
    </ui:style>

	<g:DialogBox height="100%" glassEnabled="true" text="Создание налоговой формы">
        <g:VerticalPanel height="100%">
            <g:VerticalPanel addStyleNames="{style.panelWithFilter}">

                <g:VerticalPanel addStyleNames="{style.filter}" ui:field="reportPeriodPanel"/>

                <g:VerticalPanel addStyleNames="{style.filter}" ui:field="departmentSelectionTreePanel"/>

                <g:VerticalPanel addStyleNames="{style.filter}">
                    <g:Label width="200px" text="Тип налоговой формы"/>
                    <g:ValueListBox width="200px" ui:field="formDataKind" />
                </g:VerticalPanel>

                <g:VerticalPanel addStyleNames="{style.filter}">
                    <g:Label width="200px" text="Вид налоговой формы"/>
                    <style:ListBoxWithTooltip width="200px" ui:field="formType" showTooltip="true"/>
                </g:VerticalPanel>

            </g:VerticalPanel>

            <g:HorizontalPanel addStyleNames="{style.buttonLayout}">
                <g:Button addStyleNames="{style.actionButton}" text="Далее" ui:field="okButton"/>
                <g:Button addStyleNames="{style.actionButton}" text="Отмена" ui:field="cancelButton"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
	</g:DialogBox>

</ui:UiBinder> 