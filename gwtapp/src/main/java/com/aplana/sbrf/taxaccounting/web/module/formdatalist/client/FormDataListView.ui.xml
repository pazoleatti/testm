<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cell="urn:import:com.google.gwt.user.cellview.client"
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">

	<g:DockLayoutPanel unit='PX' height="100%" width="100%">


		<g:north size="160">

			<g:VerticalPanel>
				<g:Label ui:field="taxTypeLabel" />


				<g:HorizontalPanel width="100%" ui:field="filterContentPanel" />

				<style:Bar>
					<style:LeftBar>
						<g:Button ui:field="create">Создать</g:Button>
						<g:Button ui:field="apply">Применить</g:Button>
					</style:LeftBar>
				</style:Bar>
			</g:VerticalPanel>

		</g:north>

		<g:center>

			<g:ScrollPanel height="100%">
				<style:GenericCellTable ui:field="formDataTable"
					width="100%" height="100%"/>
			</g:ScrollPanel>

		</g:center>

	</g:DockLayoutPanel>

</ui:UiBinder> 