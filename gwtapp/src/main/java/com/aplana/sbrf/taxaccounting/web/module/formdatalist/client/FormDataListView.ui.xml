<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
	xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager">

	<ui:style>
		@external .gwt-PopupPanel;
		.gwt-PopupPanel {
			border: 2px solid #3dbf0e;
			padding: 2px;
			background: white;
		}
		
		.pager {
			margin-right: auto;
			margin-left: auto;
		}

        .topPanel{
            height: 100px;
        }

        .titlePanel{
            width: 310px;
        }

        .titleText{
            margin-left: 5px;
            margin-top: 5px;
            font-size: 25px;
        }

        .titleDesc{
            margin-left: 5px;
            margin-top: 5px;
            font-size: 15px;
        }
	</ui:style>

	<g:DockLayoutPanel unit='PX' height="100%" width="100%">

		<g:north size="100">
            <g:HorizontalPanel addStyleNames="{style.topPanel}">
                <g:VerticalPanel addStyleNames="{style.titlePanel}">
                    <g:Label addStyleNames="{style.titleText}">Список налоговых форм</g:Label>
                    <g:Label addStyleNames="{style.titleDesc}">Налог на прибыль</g:Label>
                </g:VerticalPanel>
                <g:FlowPanel width="100%" ui:field="filterContentPanel" />
            </g:HorizontalPanel>
		</g:north>

		<g:center>
			<g:ScrollPanel>
				<g:VerticalPanel width="100%">
					<style:GenericCellTable ui:field="formDataTable"
						width="100%" height="100%" />
					<pager:FlexiblePager ui:field="pager" location="CENTER"
						showFastForwardButton="false" fastForwardRows="0"
						showLastPageButton="true" rangeLimited="true" styleName="{style.pager}" />
				</g:VerticalPanel>
			</g:ScrollPanel>
		</g:center>

	</g:DockLayoutPanel>

</ui:UiBinder> 