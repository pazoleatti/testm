<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror">
    <ui:style>
        @external .CodeMirror-scroll;
        .CodeMirror-scroll {
            height: 100%;
            background-color: white;
            border-top: 1px solid #92C1F0;
            outline: medium none;
            overflow: hidden;
            position: inherit;
        }

        @external .CodeMirror-gutter;
        .CodeMirror-gutter {
            border-right: 1px solid #92C1F0;
        }
    </ui:style>

	<g:HTMLPanel>
		<g:Label text="Название"/>

		<g:TextBox width="50%" ui:field="name"/>

        <g:VerticalSplitPanel height="550px" width="100%">
            <g:VerticalPanel width="100%">
                <g:Label text="Условие"/>
                <c:CodeMirror ui:field="condition"/>
            </g:VerticalPanel>
            <g:VerticalPanel width="100%">
                <g:HorizontalPanel>
                    <g:CheckBox ui:field="perRow"/>
                    <g:Label text="применять для каждой строки"/>
                </g:HorizontalPanel>
                <c:CodeMirror ui:field="body"/>
            </g:VerticalPanel>
        </g:VerticalSplitPanel>
	</g:HTMLPanel>
</ui:UiBinder>
