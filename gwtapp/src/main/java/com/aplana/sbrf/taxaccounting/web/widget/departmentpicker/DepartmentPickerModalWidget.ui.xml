<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker">

    <g:FlowPanel width="200px">
        <g:HorizontalPanel verticalAlignment="middle" height="100%" ui:field="panel">
            <g:cell width="100%">
                <g:TextBox enabled="false" ui:field="selected" width="100%" />
            </g:cell>
            <g:cell>
                <g:Button ui:field="selectButton" text="..." width="25px" />
            </g:cell>
            <g:cell>
                <g:Button text="X" ui:field="clearButton" width="25px" />
            </g:cell>
        </g:HorizontalPanel>
        <g:FlowPanel visible="false">
            <g:PopupPanel ui:field="popupPanel" autoHideEnabled="false" modal="true" width="300px" height="300px">
                <g:VerticalPanel>
                    <g:cell verticalAlignment="top">
                        <p:DepartmentTreeWidget ui:field="departmentTree" height="270px" width="300px"/>
                    </g:cell>
                    <g:cell verticalAlignment="bottom">
                        <g:Button ui:field="okButton" text="ОК" />
                    </g:cell>
                </g:VerticalPanel>
            </g:PopupPanel>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>
