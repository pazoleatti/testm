<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style src='defines.css'>
        .container {
            background-color: whitePanelColor;
            padding: 0 3px 3px;
        }

        .bar {
            background-color: whitePanelColor;
        }

        .panel {
            background-color: lightPanelColor;
            padding: 2px;
            overflow: hidden;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.container}">
            <g:HTMLPanel addStyleNames="{style.bar} ">
                <g:FlowPanel ui:field="tabPanel" />
                <div style="clear: both;" />
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="tabContentContainer" width="100%" height="600px"
                         addStyleNames="{style.panel}" />
        </div>
    </g:HTMLPanel>

</ui:UiBinder>