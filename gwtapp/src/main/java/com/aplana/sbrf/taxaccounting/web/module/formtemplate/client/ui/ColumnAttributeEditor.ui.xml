<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:HorizontalPanel height="30px">
            <g:Label width="150px">Краткое наименование</g:Label>
            <g:TextBox width="200%" ui:field="shortName"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel height="30px">
            <g:Label width="150px">Псевдоним</g:Label>
            <g:TextBox width="200%" ui:field="alias"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel height="30px">
            <g:Label width="150px">Ширина</g:Label>
            <g:IntegerBox width="100px" ui:field="width"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel height="30px">
            <g:Label width="150px">Контрольное поле</g:Label>
            <g:CheckBox ui:field="checking"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>