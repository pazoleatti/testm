<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cm='urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror.client'
             xmlns:fm="urn:import:com.aplana.gwt.client.form"
             xmlns:fileupload='urn:import:com.aplana.sbrf.taxaccounting.web.widget.fileupload'>
    <ui:style>

        .btnPanel {
            padding-left: 10px;
            padding-top: 5px;
        }

        .btnMargin {
            margin-left: 6px;
            margin-right: 15px;
        }

        .table {
            position: absolute !important;
            bottom: 30px;
            right: 0;
            left: 0;
            top: 40px;
            border: 1px solid #aeaeac;
            background: #FFFFFF;
        }

    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Выполнение скриптов"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>

        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel verticalAlignment="middle" spacing="2" addStyleNames="{style.btnPanel}">
                    <g:cell horizontalAlignment="left">
                        <g:Button ui:field="execButton" addStyleNames="{style.btnMargin}" text="Выполнить"/>
                    </g:cell>
                    <g:cell horizontalAlignment="left">
                        <fileupload:FileUploadWidget simpleButton = "true" text="Обзор"
                                ui:field="uploadScript"/>
                    </g:cell>
                </g:HorizontalPanel>
                <cm:CodeMirror ui:field="script" addStyleNames="{style.table}"/>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>