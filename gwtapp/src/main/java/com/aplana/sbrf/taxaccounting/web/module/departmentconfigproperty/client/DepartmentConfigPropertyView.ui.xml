<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker'
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:rep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:fm="urn:import:com.aplana.gwt.client.form"
			 xmlns:aplana="urn:import:com.aplana.gwt.client">

    <ui:style>
        .titleText {
            font-size: 14px;
            color: #636460;
        }

        .filterPanel {
            padding-left: 7px;
            padding-right: 7px;
            border-bottom: 1px solid #aeaeac;
        }

        .filterWidgets {
            min-width: 150px;
            max-height: 32px;
            overflow: hidden;
        }

        .separator {
            height: 22px;
            margin-left: 5px;
            margin-right: 9px;
            border-right: 1px solid #aeaeac;
        }

        .btnPanel {
            position: absolute;
            bottom: 0;
            right: 0;
            padding-left: 7px;
            padding-right: 7px;
            height: 35px;
        }

        .scrolPanelStyle {
            background-color: white;
            position: absolute !important;
            top: 45px;
            bottom: 35px;
            left: 0;
            right: 0;
            border-bottom: 1px solid #aeaeac;
        }

        .formPanel {
            min-height: 440px;
            min-width: 900px;
            padding: 5px 10px;
        }

        .labelSeparetors{
            padding-left: 5px;
            margin-bottom: 5px;
        }

        .leftLabels{
            text-align: right;
            width: 250px;
            padding-right: 3px;
        }

        .marginRight5{
            margin-right: 5px;
        }

        .mgnl {
            margin-left: 15px;
            margin-right: 5px;
            margin-bottom: 10px;
        }
        .mgnr {
            margin-right: 40px;
            margin-bottom: 10px;
        }

    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <g:Label text="" ui:field="taxTypeLbl" addStyleNames="{style.titleText}, {style.marginRight5}" />
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <g:Label ui:field="editModeLabel" visible="false" text="Редактирование" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Настройки подразделений" />
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="5" height="44px" addStyleNames="{style.filterPanel}" verticalAlignment="middle">
                    <g:cell horizontalAlignment="right">
                        <g:Label width="100px" text="Подразделение:"/>
                    </g:cell>
                    <g:cell width="50%">
                        <d:DepartmentPickerPopupWidget ui:field="departmentPicker" multiselection="false" width="100%"
                                                       addStyleNames="{style.filterWidgets}"/>
                    </g:cell>
                    <g:cell horizontalAlignment="right">
                        <g:Label width="65px" text="Период:"/>
                    </g:cell>
                    <g:cell width="50%">
                        <rep:PeriodPickerPopupWidget width="100%" ui:field="periodPickerPopup" multiselect="false"
                                                     addStyleNames="{style.filterWidgets}"/>
                    </g:cell>

                    <g:cell>
                        <g:HorizontalPanel ui:field="findButtonPanel" verticalAlignment="middle">
                            <g:HTML addStyleNames="{style.separator}"/>
                            <g:Button title="Найти" width="70px" text="Найти" ui:field="findButton"/>
                        </g:HorizontalPanel>
                    </g:cell>

                </g:HorizontalPanel>
                <g:ScrollPanel addStyleNames="{style.scrolPanelStyle}">
                    <g:FormPanel ui:field="formPanel" addStyleNames="{style.formPanel}">
                        <g:HorizontalPanel spacing="2" width="100%">
                            <g:VerticalPanel spacing="2" width="100%">
                                <g:HorizontalPanel width="100%" spacing="1" verticalAlignment="middle">
                                    <g:cell width="1%" height="22px">
                                        <g:Label text="ИНН:" addStyleNames="{style.leftLabels}"/>
                                    </g:cell>
                                    <g:cell width="99%">
                                        <aplana:TextBox ui:field="inn" width="150px"  maxLength="20" enabled="false"/>
                                    </g:cell>
                                </g:HorizontalPanel>
                                <style:LabelSeparator text="Сведения о налогоплательщике" addStyleNames="{style.labelSeparetors}"/>
                                <g:HorizontalPanel>
                                    <g:cell>
                                        <style:LinkAnchor ui:field="addLink" text="Добавить запись" img="resources/img/row-add.png"
                                                          addStyleNames="{style.mgnl}" visible="false"/>
                                    </g:cell>
                                    <g:cell>
                                        <style:LinkAnchor ui:field="delLink" text="Удалить запись" img="resources/img/row-delete.png"
                                                          addStyleNames="{style.mgnr}" visible="false"/>
                                    </g:cell>
                                </g:HorizontalPanel>
                                <g:ResizeLayoutPanel height="300px" width="100%">
                                    <style:GenericDataGrid ui:field="table" height="100%" width="100%"/>
                                </g:ResizeLayoutPanel>
                                <style:LabelSeparator text="Прочие сведения" addStyleNames="{style.labelSeparetors}"/>
                                <g:HorizontalPanel width="100%" spacing="1" verticalAlignment="middle">
                                    <g:cell width="1%" height="22px">
                                        <g:Label text="Версия формата декларации:" addStyleNames="{style.leftLabels}"/>
                                    </g:cell>
                                    <g:cell width="99%">
                                        <aplana:TextBox ui:field="formatVersion" width="50px"  maxLength="20" enabled="false"/>
                                    </g:cell>
                                </g:HorizontalPanel>
                                <g:HorizontalPanel ui:field="versionBlock" width="100%" spacing="1" verticalAlignment="middle">
                                    <g:cell width="1%" height="22px">
                                        <g:Label text="Версия формата расчета по авансовому платежу:" addStyleNames="{style.leftLabels}"/>
                                    </g:cell>
                                    <g:cell width="99%">
                                        <aplana:TextBox ui:field="version" width="50px"  maxLength="20" enabled="false"/>
                                    </g:cell>
                                </g:HorizontalPanel>
                            </g:VerticalPanel>
                        </g:HorizontalPanel>
                    </g:FormPanel>
                </g:ScrollPanel>

                <style:LeftBar childValign="middle" marginRight="9" addStyleNames="{style.btnPanel}">
                    <g:Button ui:field="editButton" text="Редактировать" enabled="true"/>
                    <g:Button ui:field="saveButton" text="Сохранить" visible="false"/>
                    <g:Button ui:field="deleteButton" text="Удалить" visible="false"/>
                    <g:Button ui:field="cancelButton" text="Выход" visible="false"/>
                </style:LeftBar>

            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>