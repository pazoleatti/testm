<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
<ui:style>
    .titlePanel{
        padding-left: 10px
    }

    .titleText{
        font-size: 26px;
    }

    .titleDesc{
        font-size: 16px;
    }
</ui:style>
    <g:DockLayoutPanel unit='PX' height="100%" width="100%">

        <g:north size="100">
            <g:HorizontalPanel height="100px">
                <g:cell width="335px">
                    <g:VerticalPanel width="310px" addStyleNames="{style.titlePanel}">
                        <g:cell height="45px">
                            <g:Label addStyleNames="{style.titleText}">Список деклараций</g:Label>
                        </g:cell>
                        <g:Label ui:field="titleDesc" addStyleNames="{style.titleDesc}"/>
                    </g:VerticalPanel>
                </g:cell>
                <g:VerticalPanel>
                    <g:cell height="50px">
                        <g:FlowPanel width="100%" ui:field="filterContentPanel" />
                    </g:cell>
                    <g:cell height="50px" verticalAlignment="middle">
                        <style:Bar>
                            <style:LeftBar>
                                <g:Button ui:field="create">Создать</g:Button>
                                <g:Button ui:field="apply">Поиск</g:Button>
                            </style:LeftBar>
                        </style:Bar>
                    </g:cell>
                </g:VerticalPanel>
            </g:HorizontalPanel>
        </g:north>

        <g:center>
            <g:ScrollPanel>
                <g:VerticalPanel ui:field="tablePanel" width="100%">
                    <style:GenericCellTable ui:field="declarationTable" width="100%" height="100%"/>
                </g:VerticalPanel>
            </g:ScrollPanel>
        </g:center>

    </g:DockLayoutPanel>

</ui:UiBinder> 
