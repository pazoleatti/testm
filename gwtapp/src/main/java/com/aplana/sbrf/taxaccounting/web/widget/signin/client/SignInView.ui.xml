<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .whiteColor {
            color: #FFFFFF !important;
            text-decoration: none;
        }

        .forLabel {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
            max-width: 300px;
            height: 16px;
            width:300px;
            line-height: 1;     /*хитрый трюк*/
        }

        .separatorLikeInMenuLeft {
            height: 32px;
            border-left: 1px solid #e4e4e4;
            margin-left: 5px;
            margin-right: 10px;
            float: left;
        }

        .separatorLikeInMenuRight {
            height: 32px;
            border-left: 1px solid #e4e4e4;
            margin-right: 10px;
            float: right;
        }

    </ui:style>

    <g:HTMLPanel>
        <g:HTML addStyleNames="{style.separatorLikeInMenuLeft}"/>
        <div style="float: left; text-align: center; margin-right: 10px;">
            <g:Label ui:field="roleAndDepartment" addStyleNames="{style.forLabel}"/>
            <g:Label ui:field="userName" addStyleNames="{style.forLabel}"/>
        </div>

	    <div style="float: right; margin-top: 5px">
            <g:Anchor ui:field="logout" styleName="{style.whiteColor}" text="Выход" href=""/>
        </div>

        <g:FormPanel ui:field="formPanelLogout" method="get" action="j_spring_security_logout"/>

        <g:HTML addStyleNames="{style.separatorLikeInMenuRight}"/>
	</g:HTMLPanel>
</ui:UiBinder> 