<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .whiteColor {
            color: #FFFFFF !important;
        }

        .forLabel {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }

    </ui:style>

    <g:HTMLPanel>
        <div style="float: left; text-align: center; margin-right: 20px; margin-top: -2px; max-width: 300px;">
            <g:Label ui:field="roleAndDepartment" addStyleNames="{style.forLabel}"/>
            <g:Label ui:field="userName" addStyleNames="{style.forLabel}"/>
        </div>
	    <div style="float: right; margin-top: 5px">
            <g:Anchor styleName="{style.whiteColor}" href="j_spring_security_logout" text="Выход"/>
        </div>
	</g:HTMLPanel>
</ui:UiBinder> 