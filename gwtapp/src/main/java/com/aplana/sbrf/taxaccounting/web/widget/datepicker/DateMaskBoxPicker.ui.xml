<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:mask="urn:import:com.aplana.gwt.client.mask.ui">
    <ui:style>
        .selected {
            border-right: 0;
            margin-top: 0;
            margin-bottom: 0;
        }

        .clearButton {
            border: 1px solid #009900;
            border-right-width: 0;
            border-left-width: 0;
            vertical-align: middle;
            display: inline-block;
            margin-left: -14px;
        }

        .selectButton {
            border: 1px solid #009900;
            vertical-align: middle;
            cursor: pointer;
            display: inline-block;
        }

        .main {
            padding: 0;
            min-width: 100px;
        }
    </ui:style>

    <g:HorizontalPanel ui:field="mainPanel" verticalAlignment="middle" addStyleNames="{style.main}">
        <g:cell width="100%">
            <mask:DateMaskBox ui:field="dateBox" width="100%" addStyleNames="{style.selected}"/>
        </g:cell>
        <g:Image ui:field="clearImage" addStyleNames="{style.clearButton}"
                 url="resources/img/picker-icons/clear-icon-dummy.png"/>
        <g:Image ui:field="calendarImage" title="Открыть для выбора" addStyleNames="{style.selectButton}"
                 url="resources/img/picker-icons/calendar-icon.png"/>
    </g:HorizontalPanel>

</ui:UiBinder>