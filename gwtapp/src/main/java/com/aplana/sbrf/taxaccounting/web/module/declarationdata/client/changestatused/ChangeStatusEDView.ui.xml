<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dw="urn:import:com.aplana.gwt.client"
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'>

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
            width: 94px;
        }
    </ui:style>

    <dw:ModalWindow title="Изменить Состояние ЭД">
        <g:VerticalPanel addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell>
                <g:HorizontalPanel spacing="6" verticalAlignment="middle" addStyleNames="{style.content}">
                    <g:cell horizontalAlignment="right">
                        <g:Label ui:field="docStateLabel" width="140px" wordWrap="false" text="Состояние ЭД:" height="16px"/>
                    </g:cell>
                    <g:cell width="100%">
                        <r:RefBookPickerWidget ui:field="docStatePicker" attributeIdInt="9292" isHierarchical="false"  versionEnabled="false"
                                               multiSelect="false"  width="200px" />
                    </g:cell>
                </g:HorizontalPanel>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" text="Изменить" ui:field="okButton"/>
                    <g:Button addStyleNames="{style.footerButton}" text="Закрыть" ui:field="cancelButton"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder> 