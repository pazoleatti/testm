<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:fm="urn:import:com.aplana.gwt.client.form">

    <ui:style>
        .titleText {
            font-size: 14px;
            color: #636460;
        }

        .btnPanel {
            width: 100%;
            height: 60px;
        }

        .pager {
            position: absolute;
            bottom: 0;
            right: 0;
        }

        .table {
            position: absolute !important;
            bottom: 30px;
            right: 10px;
            left: 10px;
            top: 68px;
        }

        .marginRight5 {
            margin-right: 5px;
        }

        .lableStyle {
            font-weight: bold;
        }

    </ui:style>

    <fm:MainContainer>

        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <g:Label ui:field="formHeader" addStyleNames="{style.titleText}, {style.marginRight5}"
                                     text="Администрирование"/>
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar marginRight="10" childValign="middle" height="100%">
                            <g:Label text="Дата последней архивации: " ui:field="archiveLbl"/>
                            <g:Label ui:field="archiveDateLbl" styleName="{style.lableStyle}" />
                            <style:LinkAnchor text="Архивировать" ui:field="archive" img="resources/img/starfish-16.png"
                                              title="Архивировать"/>
                            <style:LinkAnchor text="Выгрузить в xlsx" ui:field="printButton"
                                              img="resources/img/download-xls-16.png"
                                              title="Выгрузить в xlsx"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Журнал аудита"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>

        <fm:body>
            <fm:BodyContainer>
                <g:HTMLPanel ui:field="filterContentPanel" addStyleNames="{style.btnPanel}"/>
                <g:ResizeLayoutPanel addStyleNames="{style.table}">
                    <style:GenericDataGrid ui:field="table" height="100%" width="100%"/>
                </g:ResizeLayoutPanel>
                <pager:FlexiblePager ui:field="pager" location="CENTER"
                                     showFastForwardButton="false" fastForwardRows="0"
                                     showLastPageButton="true" styleName="{style.pager}" type="audit"/>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>