<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .forTree {
            border-style: none !important;
            width: 100% !important;
        }
    </ui:style>
        <g:VerticalPanel width="100%" height="100">
            <g:Label ui:field="header"/>
            <!--<g:Tree ui:field="tree" width="100%" height="350px"/>-->
            <t:DepartmentTreeWidget ui:field="tree" height="350px"
                                    headerVisible="false" styleName="{style.forTree}"/>
            <g:Button ui:field="ok">Ok</g:Button>
        </g:VerticalPanel>
</ui:UiBinder>
