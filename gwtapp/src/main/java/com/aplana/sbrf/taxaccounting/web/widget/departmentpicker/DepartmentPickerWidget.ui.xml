<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .infolabel {
            margin: 5px 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 50px;
        }

        .footerButton {
            margin:  14px 17px 14px 0px !important;
        }
    </ui:style>
        <g:VerticalPanel width="100%" height="100">
            <g:Label addStyleNames="{style.infolabel}" ui:field="header"/>
            <g:ScrollPanel width="100%" height="350px">

                <g:Tree ui:field="tree" width="100%" height="350px"/>
            </g:ScrollPanel>
            <style:Bar addStyleNames="{style.footerPanel}">
                <style:RightBar>
                    <g:Button addStyleNames="{style.footerButton}" ui:field="ok">Ok</g:Button>
                </style:RightBar>
            </style:Bar>
        </g:VerticalPanel>
</ui:UiBinder>
