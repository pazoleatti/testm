<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:cm='urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror.client'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .execute{
            position: fixed;
            text-align: right;
        }

    </ui:style>

    <g:ScrollPanel width="100%" height="100%">
        <g:VerticalPanel>
            <g:cell height="30px">
                <g:Button text="Тест" ui:field="executeScript" addStyleNames="{style.execute}"/>
            </g:cell>
            <g:cell>
                <cm:CodeMirror ui:field="script"/>
            </g:cell>
        </g:VerticalPanel>
    </g:ScrollPanel>

</ui:UiBinder>