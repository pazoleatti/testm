<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
	xmlns:w='urn:import:com.aplana.sbrf.taxaccounting.web.widget.incrementbutton'
	xmlns:date="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
	xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookpicker.client'
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">

	<g:DialogBox width="400px" glassEnabled="true" text="Открыть период">
		<g:VerticalPanel width="100%" spacing="3">
			<g:DecoratorPanel width="90%">
				<g:VerticalPanel>
					<g:VerticalPanel>
						<g:HorizontalPanel verticalAlignment="middle" width="100%" spacing="3">
							<g:cell horizontalAlignment="right">
								<g:Label text="Подразделение: " width="150px" />
							</g:cell>
							<g:cell width="100%" horizontalAlignment="left">
								<picker:DepartmentPickerPopupWidget width="100%" header="Подразделение" ui:field="departmentPicker"	multiselection="false" modal="true" />
							</g:cell>
						</g:HorizontalPanel>

						<g:HorizontalPanel ui:field="yearPnl" verticalAlignment="middle"
							width="100%" spacing="3">
							<g:cell horizontalAlignment="right">
								<g:Label text="Год: " width="150px" />
							</g:cell>
							<g:cell width="100%" horizontalAlignment="left">
								<w:IncrementButton ui:field="yearBox" minValue="1900" maxValue="2100" />
							</g:cell>
						</g:HorizontalPanel>

						<g:HorizontalPanel verticalAlignment="middle"
							width="100%" spacing="3">
							<g:cell horizontalAlignment="right">
								<g:Label ui:field="periodLbl" text="Период: " width="150px" />
							</g:cell>
							<g:cell width="100%" horizontalAlignment="left">
								<r:RefBookPickerPopupWidget ui:field="period" modal="true" width="100%" attributeIdInt="26" />
							</g:cell>
						</g:HorizontalPanel>

						<g:HorizontalPanel ui:field="termPnl" verticalAlignment="middle" visible="false"
							width="100%" spacing="3">
							<g:cell horizontalAlignment="right">
								<g:Label text="Период сдачи корректировки: " width="150px" />
							</g:cell>
							<g:cell width="100%" horizontalAlignment="left">
								<date:CustomDateBox width="60px" ui:field="term" />
							</g:cell>
						</g:HorizontalPanel>
					</g:VerticalPanel>

					<g:VerticalPanel>
						<g:HorizontalPanel spacing="3">
							<g:CheckBox ui:field="balancePeriod" />
							<g:Label text="Ввод остатков" />
						</g:HorizontalPanel>

						<g:HorizontalPanel spacing="3">
							<g:CheckBox ui:field="correctPeriod" />
							<g:Label text="Корректирующий" />
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:VerticalPanel>

			</g:DecoratorPanel>

			<style:Bar>
				<style:LeftBar>
					<g:Button ui:field="continueButton" text="Открыть период"
						width="150px" />
					<g:Button ui:field="cancelButton" text="Отмена" />
				</style:LeftBar>
			</style:Bar>

		</g:VerticalPanel>

	</g:DialogBox>

</ui:UiBinder> 