<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        @external .gwt-MenuBar-horizontal .gwt-MenuItem;
        .gwt-MenuBar-horizontal .gwt-MenuItem {
            color: white;
        }
        @external .gwt-MenuBar .gwt-MenuItem-selected;
        .gwt-MenuBar .gwt-MenuItem-selected {
            background: none;
            color: #3964C2 !important;
            cursor: pointer;
        }

        @external .gwt-MenuBar-vertical .gwt-MenuItem;
        .gwt-MenuBar-vertical .gwt-MenuItem {
            background-color: #76BD43;
            padding: 5px;
        }

        <!--убрать рамку для подменю-->
        @external .gwt-MenuBarPopup .menuPopupBottomRightInner, .gwt-MenuBarPopup .menuPopupBottomLeftInner;
        @external .gwt-MenuBarPopup .menuPopupTopLeftInner .gwt-MenuBarPopup .menuPopupTopRightInner;
        .gwt-MenuBarPopup .menuPopupBottomRightInner, .gwt-MenuBarPopup .menuPopupBottomLeftInner,
        .gwt-MenuBarPopup .menuPopupTopLeftInner, .gwt-MenuBarPopup .menuPopupTopRightInner {
            width: 0;
            height: 0;
        }
        @external .gwt-MenuBar-horizontal;
        .gwt-MenuBar-horizontal {
            background: none;
            border: none;
        }
    </ui:style>

	<g:FlowPanel ui:field="panel"/>

</ui:UiBinder> 