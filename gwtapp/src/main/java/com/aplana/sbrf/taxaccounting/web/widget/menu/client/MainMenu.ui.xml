<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style type='com.aplana.sbrf.taxaccounting.web.widget.menu.client.MainMenu.MainMenuStyle'>
        @external .gwt-MenuBar-horizontal .gwt-MenuItem;
        .gwt-MenuBar-horizontal .gwt-MenuItem {
            color: white;
            font-size: 14px;
            font-weight: normal;
            height: 30px;
            vertical-align: middle;
        }

        @external .gwt-MenuBar .gwt-MenuItem-selected;
        .gwt-MenuBar .gwt-MenuItem-selected {
            cursor: pointer;
            color: #000000;
            background-color: #FFDC82;
        }

        @external .gwt-MenuBar-vertical .subMenuIcon-selected;
        .gwt-MenuBar-vertical .subMenuIcon-selected {
            background-color: #FFDC82;
        }

        @external .gwt-MenuBar-vertical .gwt-MenuItem;
        .gwt-MenuBar-vertical .gwt-MenuItem {
            margin-left: 15px !important;
            width: 150px;
            width: 135px;
            font-size: 12px;
            padding: 3px 5px 3px 14px;
        }

        @external .gwt-MenuBarPopup;
        .gwt-MenuBarPopup {
            top: 35px !important;
        }

        @external .gwt-MenuBar-horizontal;
        .gwt-MenuBar-horizontal {
            background: none;
            border: none;
            vertical-align: middle;
            height: 32px;
            padding-top: 3px;
            padding-bottom: 5px;
            padding-left: 135px;
        }

        .grayMenuItem:hover {
            background-color: #FFDC82;
        }
    </ui:style>

	<g:HTMLPanel ui:field="panel"/>

</ui:UiBinder> 