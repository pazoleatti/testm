<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .showTextLabelStyle{
            color: #0000ff;
            text-decoration: underline;
            cursor: help;
        }
    </ui:style>

	<g:VerticalPanel>
		<g:Label ui:field="showTextLabel" visible="true" text="Показать технические детали ошибки" addStyleNames="{style.showTextLabelStyle}"/>
        <g:TextArea ui:field="text" readOnly="true" visibleLines="10" characterWidth="100"/>
	</g:VerticalPanel>
	
</ui:UiBinder> 