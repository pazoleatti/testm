<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .showTextLabelStyle{
            color: #0000ff;
            text-decoration: underline;
            cursor: help;
        }
    </ui:style>

	<g:HTMLPanel ui:field="htmlPanel">
		<g:Label ui:field="message"/>
		<g:Label ui:field="showTextLabel" visible="true" text="Показать детали ошибки" addStyleNames="{style.showTextLabelStyle}"/>
        <g:TextArea ui:field="text" readOnly="true" width="100%" height="100px"/>
	</g:HTMLPanel>
</ui:UiBinder> 