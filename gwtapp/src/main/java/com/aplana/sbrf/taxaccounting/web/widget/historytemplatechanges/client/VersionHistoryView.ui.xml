<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
        }
    </ui:style>

    <dw:ModalWindow title="Информация по форме/декларации">
        <g:VerticalPanel addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell>
                <style:GenericDataGrid ui:field="versionHistoryCellTable" height="500px" width="450px"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel width="100%" addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" text="Закрыть" ui:field="hideButton"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder>