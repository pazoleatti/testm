<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>

        @external .gwt-MenuBar-horizontal .gwt-MenuItem;
        .gwt-MenuBar-horizontal .gwt-MenuItem {
            color: white;
            font-size: 14px;
            font-weight: normal;
            height: 32px;
            vertical-align: middle;
            padding: 0 10px;
            white-space: nowrap;
        }

        @external .gwt-MenuBar .gwt-MenuItem-selected;
        .gwt-MenuBar .gwt-MenuItem-selected {
            cursor: pointer;
            color: #000000;
            background-color: #FFDC82;
        }

        @external .gwt-MenuBar-vertical .subMenuIcon-selected;
        .gwt-MenuBar-vertical .subMenuIcon-selected {
            background-color: #FFDC82;
        }

        @external .gwt-MenuBar-vertical .gwt-MenuItem;
        .gwt-MenuBar-vertical .gwt-MenuItem {
            font-size: 12px;
        }

        @external .gwt-MenuBar-horizontal;
        .gwt-MenuBar-horizontal {
            background: none;
            border: none;
            vertical-align: middle;
            height: 32px;
            padding: 5px 0;
            overflow: hidden;
        }

        @external gwt-MenuBar-horizontal .gwt-MenuItem-selected;
        .gwt-MenuBar-horizontal .gwt-MenuItem-selected {
            background-color: white;
            border-top: 1px solid #e4e4e4;
            height: 28px;
            border-bottom: 1px solid #e4e4e4;
        }

        .signin {
            margin-top: 5px;
            margin-bottom: 5px;
            float: right;
            color: #FFFFFF;
            font-size: 14px;
            height: 30px;
        }

        .menuLeftElements {
            float: left;
        }

        .menuRightElements {
            float: right;
        }

        .helpMenu table {
            border-spacing: 0;
            height: 100%;
        }

        .helpMenu .gwt-MenuItem {
            padding: 0 7px;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:InlineHTML ui:field="loadingMessage" addStyleNames="loadingStatusLabel">
            <div>
                <img src="resources/img/load-panel.gif" alt="" width="64px" height="64px"/>
                <span>Загрузка...</span>
            </div>
        </g:InlineHTML>
        <g:DockLayoutPanel ui:field="dockPanel" unit="PX" height="100%" width="100%">
            <g:north size="44">
                <g:HTMLPanel>
                    <div class="topNavigation">
                        <!--Сначала выроненные по леву-->
                        <div style="cursor:pointer" class="topLeftLogo" onclick="location.href='#!homePage';"/>

                        <g:HTMLPanel ui:field="mainMenuContentPanel" addStyleNames="{style.menuLeftElements}"/>

                        <!--Потом по праву (отображаться будет в обратном порядке)-->
                        <div class="topRightLogo"/>

                        <g:HTMLPanel ui:field="signInContentPanel" styleName="{style.signin}"/>

                        <g:HTMLPanel ui:field="manualMenuPanel" addStyleNames="{style.menuRightElements}" />
                    </div>
                </g:HTMLPanel>
            </g:north>

            <g:center>
                <g:HTMLPanel height="100%">
                    <div class="topGradient">
                        <div class="bodyTopLeft" />
                        <div class="bodyTopRight" />
                    </div>
                    <g:HTMLPanel height="100%">
                        <div class="rightGradient" />
                        <div class="leftGradient" />
                        <div class="bodyContent">
                            <g:SplitLayoutPanel height="100%" ui:field="splitPanel">
                                <g:center>
                                    <g:ResizeLayoutPanel ui:field="mainContentPanel" />
                                </g:center>
                                <g:south size="0">
                                    <g:FlowPanel ui:field="logAreaPanel" />
                                </g:south>
                            </g:SplitLayoutPanel>
                        </div>
                    </g:HTMLPanel>
                </g:HTMLPanel>
            </g:center>

            <g:south size="32">
                <g:HTMLPanel>
                    <g:HTMLPanel ui:field="footerPanel" styleName="footerGradient">
                        <div class="footerLeft"/>
                        <div class="footerRight"/>
                    </g:HTMLPanel>
                    <g:FlowPanel ui:field="projectVersion" styleName="versionProjectStyle"/>
                </g:HTMLPanel>
            </g:south>
        </g:DockLayoutPanel>
    </g:HTMLPanel>

</ui:UiBinder> 