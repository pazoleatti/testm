<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.panelTitle {
			padding: 10px;
		}
		
		.panelContent {
			padding: 10px;
			margin: 10px;
			border-style: solid;
			border-width: 2px;
			border-radius: 5px;
			border-color: #76bd43;
		}
	</ui:style>

	<g:DockLayoutPanel ui:field="dockPanel" unit='PX'
		height="100%" width="100%">
		<g:north size="90">
			<g:HTMLPanel>
				<div ui:field="loadingMessage" class="loadingStatusLabel">
					<div>Загрузка...</div>
				</div>

				<div class="topHeader">
					<div class="topLogo">
						<img border="0" src="img/sber_logo.png" />
					</div>
					<div class="topLogoMsg">СБРФ - Учет налогов</div>
					<g:FlowPanel ui:field="signInContentPanel" styleName="signIn" />
				</div>

				<div class="topNavigation">
					<g:FlowPanel ui:field="mainMenuContentPanel" styleName="mainMenuNavigation" />
				</div>
			</g:HTMLPanel>
		</g:north>

		<g:north size="53">
			<g:HTMLPanel ui:field="titlePanel" styleName="{style.panelTitle}">
				<h2>
					<g:Label text="Название презентора" ui:field="title" />
				</h2>
			</g:HTMLPanel>
		</g:north>

		<g:north size="45">

			<g:HTMLPanel ui:field="descPanel" styleName="{style.panelTitle}">
				<h3>
					<g:Label text="Длинный комментарий для этого презентора"
						ui:field="desc" />
				</h3>

			</g:HTMLPanel>
		</g:north>

		<g:center>
			<g:HTMLPanel styleName="{style.panelContent}">
				<g:FlowPanel ui:field="mainContentPanel" height="100%" />
			</g:HTMLPanel>
		</g:center>

		<!-- <g:south size='20'> <g:HTML>FOOTER</g:HTML> </g:south> -->

	</g:DockLayoutPanel>


</ui:UiBinder> 