<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel width="100%" height="100%">

		<div ui:field="loadingMessage"
			style="position:absolute; top:0; left:0; background-color:yellow;">Loading...</div>
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER">
			<g:cell>
			<g:HorizontalPanel width="100%">
				<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT">
					<g:FlowPanel ui:field="mainMenuContentPanel" />
				</g:HorizontalPanel>
				<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT">
					<g:FlowPanel ui:field="signInContentPanel" />
				</g:HorizontalPanel>
			</g:HorizontalPanel>
			</g:cell>
			<g:cell height="100%">
			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER" height="100%">
				<g:cell height="100%">
					<g:FlowPanel ui:field="mainContentPanel" width="100%" height="100%"/>
				</g:cell>
			</g:VerticalPanel>
			</g:cell>
		</g:VerticalPanel>


	</g:HTMLPanel>

</ui:UiBinder> 