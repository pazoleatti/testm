<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel styleName="mainContent">
			
		<div ui:field="loadingMessage" class="loadingStatusLabel">
			<div>Загрузка...</div>
		</div>
		
		<div class="topHeader">
			<div class="topLogo"><img border="0" src="img/sber_logo.png" /></div>
			<div class="topLogoMsg">СБРФ - Учет налогов</div>
			<g:FlowPanel ui:field="signInContentPanel" styleName="signIn"/>
		</div>
		<div class="topNavigation">
			<g:FlowPanel ui:field="mainMenuContentPanel" styleName="mainMenuNavigation"/>
		</div>
		
		<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER">
			<g:cell>
			<g:HorizontalPanel width="100%">
				
				<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT">
					
				</g:HorizontalPanel>
			</g:HorizontalPanel>
			</g:cell>
			<g:cell height="100%">
			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER" height="100%">
				<g:cell height="100%">
					<g:FlowPanel ui:field="mainContentPanel" width="100%" height="100%"/>
				</g:cell>
			</g:VerticalPanel>
			</g:cell>
		</g:VerticalPanel>


	</g:HTMLPanel>

</ui:UiBinder> 