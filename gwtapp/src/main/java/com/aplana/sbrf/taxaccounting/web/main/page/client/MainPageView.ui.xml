<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.panelTitle {
			padding-left: 10px;
		}

		.panelContent {
			padding: 10px;
			margin: 10px;
			border-style: solid;
			border-width: 2px;
			border-color: #76bd43;
		}
		
		.footerStyle {
			font-style: italic;
			font-size: x-small;
		}
	</ui:style>

	<g:DockLayoutPanel ui:field="dockPanel" unit='PX'
		height="100%" width="100%">
		<g:north size="90">
			<g:HTMLPanel>
				<div ui:field="loadingMessage" class="loadingStatusLabel">
					<div>Загрузка...</div>
				</div>

				<div class="topHeader">
					<div class="topLogo">
						<img border="0" src="img/sber_logo.png" />
					</div>
					<div class="topLogoMsg">СБРФ - Учет налогов</div>
					<g:FlowPanel ui:field="signInContentPanel" styleName="signIn" />
				</div>

				<div class="topNavigation">
					<g:FlowPanel ui:field="mainMenuContentPanel" styleName="mainMenuNavigation" />
				</div>
			</g:HTMLPanel>
		</g:north>

		<g:north size="40">
			<g:HTMLPanel ui:field="titlePanel" styleName="{style.panelTitle}">
				<h3>
					<g:Label text="Название презентора" ui:field="title" />
				</h3>
			</g:HTMLPanel>
		</g:north>

		<g:center>
			<g:SplitLayoutPanel ui:field="splitPanel" styleName="{style.panelContent}">
				<g:center>
					<g:FlowPanel ui:field="mainContentPanel" />
				</g:center>
				<g:south size="0">
					<g:FlowPanel ui:field="logAreaPanel" />
				</g:south>
			</g:SplitLayoutPanel>
		</g:center>

		<!-- <g:south size='20'> <g:HTML>FOOTER</g:HTML> </g:south> -->
		<g:south size="20">
			<g:AbsolutePanel ui:field="footerPanel">
				<g:Label ui:field="projectVersion" styleName="{style.footerStyle}" />
			</g:AbsolutePanel>
		</g:south>
	</g:DockLayoutPanel>

</ui:UiBinder> 