<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel>

		<div ui:field="loadingMessage"
			style="position:absolute; top:0; left:0; background-color:yellow;">Loading...</div>
		<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
			<g:HorizontalPanel width="100%">
				<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT">
					<g:FlowPanel ui:field="mainMenuContentPanel" />
				</g:HorizontalPanel>
				<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT">
					<g:FlowPanel ui:field="signInContentPanel" />
				</g:HorizontalPanel>
			</g:HorizontalPanel>
			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
				<g:FlowPanel ui:field="mainContentPanel" />
			</g:VerticalPanel>
		</g:VerticalPanel>


	</g:HTMLPanel>

</ui:UiBinder> 