<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:multiselecttree="urn:import:com.aplana.sbrf.taxaccounting.web.widget.multiselecttree">

    <ui:style>

        .mainPanel {
            background-color: #E8E1CF;
            height: 500px;
            width: 500px;
        }

        .mainPanel td {
            border-spacing: 0;
            padding: 0 !important;
        }

        .tableWrapper {
            background-color: #ffffff;;
            border: 1px solid #000000;

            margin: 0 10px;
            position: absolute !important;
            top: 100px;
            bottom: 42px;
            left: 0;
            right: 0;
        }

        .table {
            background-color: #ffffff;
            width: 100%;
            height: 100%;
        }

        .footerPanel {
            position: absolute;
            bottom: 0;
            right: 0;
            left: 0;
            width: 100%;
        }

        .forMargin0 {
            margin: 0;
        }

        .forVervionPanel {
            margin-top: 8px;
        }

        .forVersion {
            margin-right: 10px;
            text-align: right;
        }

        .count {
        }

    </ui:style>

    <g:VerticalPanel addStyleNames="{style.mainPanel}">
        <g:HorizontalPanel spacing="10" width="100%">
            <g:cell width="99%">
                <g:VerticalPanel width="100%">
                    <g:TextBox ui:field="txtFind" width="100%" addStyleNames="{style.forMargin0}"/>
                    <g:HorizontalPanel width="100%" addStyleNames="{style.forVervionPanel}" verticalAlignment="middle">
                        <g:cell horizontalAlignment="right" width="100%">
                            <g:Label text="Дата актуальности:" wordWrap="false" width="100%"
                                     addStyleNames="{style.forVersion}"/>
                        </g:cell>
                        <g:cell horizontalAlignment="left">
                            <d:DateMaskBoxPicker width="150px" ui:field="version"/>
                        </g:cell>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:cell>
            <g:cell width="1%">
                <g:Button ui:field="searchButton" text="Найти" width="70px"/>
            </g:cell>
        </g:HorizontalPanel>

        <g:ScrollPanel addStyleNames="{style.tableWrapper}">
            <multiselecttree:LazyTree ui:field="tree" addStyleNames="{style.table}"/>
        </g:ScrollPanel>

        <g:HorizontalPanel addStyleNames="{style.footerPanel}" spacing="10"
                           horizontalAlignment="right" verticalAlignment="middle">
            <g:cell horizontalAlignment="left" width="100%">
                <g:Label ui:field="selectionCountLabel" text="Выбрано: 0" addStyleNames="{style.count}"/>
            </g:cell>
            <g:Button ui:field="clearButton" text="Очистить" width="70px"/>
            <g:Button ui:field="okButton" text="Выбрать" width="70px"/>
            <g:Button ui:field="cancel" text="Закрыть" width="70px"/>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>