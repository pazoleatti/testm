<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:VerticalPanel width="100%" height="100%">
		<g:cell>
			<g:Label text="Название"/>
		</g:cell>
		<g:cell width="100%">
			<g:TextBox width="100%" ui:field="name"/>
		</g:cell>
		<g:cell>
			<g:Label text="Условие"/>
		</g:cell>
		<g:cell width="100%">
			<g:TextBox width="100%" ui:field="condition"/>
		</g:cell>

		<g:cell>
			<g:HorizontalPanel>
				<g:cell>
					<g:CheckBox ui:field="perRow"/>
				</g:cell>
				<g:cell>
					<g:Label text="применять для каждой строки"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>

		<g:cell width="100%" height="600px">
			<g:TextArea width="100%" height="100%" ui:field="body"/>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder>
