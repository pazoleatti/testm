<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .formStyle {
            top: 50px;
            left: 30px;
            position: absolute;
            background-color: #949494;
            padding: 15px;
            text-decoration-color: white;
            color: white;
            border-color: #828282;
        }
    </ui:style>
    <g:HTMLPanel height="100%">
        <g:HTMLPanel addStyleNames="{style.formStyle}">
            <g:HorizontalPanel height="30px">
                <g:Label width="300px">Версия</g:Label>
                <g:TextBox width="100px" ui:field="versionBox"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel>
                <g:Label width="300px">Использовать нумерованные столбцы</g:Label>
                <g:CheckBox ui:field="numberedColumnsBox"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel>
                <g:Label width="300px">Фиксированный набор строк</g:Label>
                <g:CheckBox ui:field="fixedRowsCheckBox"/>
            </g:HorizontalPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>