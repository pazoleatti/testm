<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:dep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:rep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client">
    <ui:style>
        .content {
            padding: 10px;
            border: 1px solid #949494;
            border-radius: 3px;
            margin: 10px 0px;
        }

        .buttonBar {
            left: 25%;
        }
    </ui:style>

	<g:DialogBox height="100%" width="250px" glassEnabled="true" text="Создание налоговой формы">
        <g:VerticalPanel height="100%" width="100%">
            <g:FlowPanel addStyleNames="{style.content}">

                <g:FlowPanel height="60px">
                    <g:Label text="Подразделение"/>
                    <dep:DepartmentPickerPopupWidget ui:field="departmentPicker" multiselection="false" header="Выбор подразделения"/>
                </g:FlowPanel>

                <g:FlowPanel height="60px">
                    <g:Label text="Отчетный период"/>
                    <rep:PeriodPickerPopupWidget ui:field="reportPeriodIds" multiselect="false"/>
                </g:FlowPanel>

                <g:FlowPanel height="60px">
                    <g:Label text="Тип налоговой формы"/>
                    <g:ValueListBox width="205px" ui:field="formDataKind" />
                </g:FlowPanel>

                <g:FlowPanel height="60px">
                    <g:Label text="Вид налоговой формы"/>
                    <style:ListBoxWithTooltip width="205px" ui:field="formTypeId" showTooltip="true"/>
                </g:FlowPanel>

            </g:FlowPanel>

            <style:Bar>
                <style:LeftBar addStyleNames="{style.buttonBar}">
                    <g:Button ui:field="continueButton" text="Далее"/>
                    <g:Button ui:field="cancelButton" text="Отмена"/>
                </style:LeftBar>
            </style:Bar>

        </g:VerticalPanel>
	</g:DialogBox>

</ui:UiBinder> 