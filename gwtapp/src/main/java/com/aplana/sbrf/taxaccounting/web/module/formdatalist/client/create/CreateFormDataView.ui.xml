<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:dep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:rep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client"
             xmlns:dw="urn:import:com.aplana.gwt.client">
    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin:  8px 10px 8px 0px !important;
            width: 64px;
        }
    </ui:style>

    <dw:ModalWindow iconUrl="resources/img/add.png" title="Создание налоговой формы" >
        <g:VerticalPanel height="100%">
            <g:FlowPanel addStyleNames="{style.content}">

                <g:FlowPanel height="60px">
                    <g:Label text="Подразделение"/>
                    <dep:DepartmentPickerPopupWidget width="400px" ui:field="departmentPicker" multiselection="false" header="Выбор подразделения" modal="true"/>
                </g:FlowPanel>

                <g:FlowPanel height="60px">
                    <g:Label text="Отчетный период"/>
                    <rep:PeriodPickerPopupWidget width="400px" ui:field="reportPeriodIds" multiselect="false"/>
                </g:FlowPanel>

                <g:FlowPanel height="60px">
                    <g:Label text="Тип налоговой формы"/>
                    <g:ValueListBox width="400px" ui:field="formDataKind" />
                </g:FlowPanel>

                <g:FlowPanel height="60px">
                    <g:Label text="Вид налоговой формы"/>
                    <style:ListBoxWithTooltip width="400px" ui:field="formTypeId" showTooltip="true"/>
                </g:FlowPanel>

            </g:FlowPanel>

            <style:Bar addStyleNames="{style.footerPanel}">
                <style:RightBar>
                    <g:Button addStyleNames="{style.footerButton}"  ui:field="continueButton" text="Создать"/>
                    <g:Button addStyleNames="{style.footerButton}"  ui:field="cancelButton" text="Закрыть"/>
                </style:RightBar>
            </style:Bar>

        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder> 