<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror.client">
	<ui:style>
		@external .CodeMirror-scroll;
		.CodeMirror-scroll {
			height: 100%;
			background-color: white;
			border-top: 1px solid #92C1F0;
			outline: medium none;
			overflow: hidden;
			position: inherit;
		}
		
		@external .CodeMirror-gutter;
		.CodeMirror-gutter {
			border-right: 1px solid #92C1F0;
		}
	</ui:style>

	<g:VerticalSplitPanel height="100%" width="100%">
		<g:HTMLPanel width="100%">
			<g:Label text="Название" />
			<g:TextBox width="80%" ui:field="name" />
			<g:Label text="Условие" />
			<c:CodeMirror ui:field="condition" />
		</g:HTMLPanel>
		<g:HTMLPanel height="100%" width="100%">
			<g:HorizontalPanel>
				<g:CheckBox ui:field="perRow" />
				<g:Label text="применять для каждой строки" />
			</g:HorizontalPanel>
			<c:CodeMirror ui:field="body" />
		</g:HTMLPanel>
	</g:VerticalSplitPanel>

</ui:UiBinder>
