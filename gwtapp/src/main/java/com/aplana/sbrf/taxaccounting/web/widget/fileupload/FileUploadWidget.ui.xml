<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:FormPanel ui:field="uploadFormDataXls" encoding="multipart/form-data" method="post" width="150px">
        <g:HorizontalPanel ui:field="uploadPanel" height="100%">
        	<g:cell height="100%">
            	<g:FileUpload ui:field="uploader" title="Файл: " name="uploader" visible="false"/>
            </g:cell>
            <g:cell>
                <g:TextBox ui:field="textBox" />
            </g:cell>
            <g:cell>
           		<g:Button ui:field="uploadButton" text="Загрузить"/>
            </g:cell>
        </g:HorizontalPanel>
    </g:FormPanel>
</ui:UiBinder>