<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .max{
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }
    </ui:style>
    <g:FormPanel ui:field="uploadFormDataXls" encoding="multipart/form-data" method="post">
        <g:HorizontalPanel ui:field="uploadPanel" height="100%" >
        	<g:cell height="100%">
            	<g:FileUpload ui:field="uploader" name="uploader" visible="false"/>
            </g:cell>
            <g:cell verticalAlignment="middle">
                <g:Label ui:field="label" addStyleNames="{style.max}"/>
            </g:cell>
            <g:cell>
           		<g:Button ui:field="uploadButton" text="Загрузить"/>
            </g:cell>
        </g:HorizontalPanel>
    </g:FormPanel>
</ui:UiBinder>