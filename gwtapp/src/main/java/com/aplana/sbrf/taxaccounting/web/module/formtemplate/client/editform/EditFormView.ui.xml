<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .editPadding {
            padding: 5px;
            width: 100%;
            height: 100%;
        }

        .childMiddle td {
            vertical-align: middle !important;

        }

        .scrPanel {
            position: absolute !important;
            left: 0;
            right: 0;
            bottom: 32px;
            top: 0;
        }

        .saveCancel {
            position: absolute;
            bottom: 0;
            border-top: 1px solid #aeaeac;
        }

        .editFieldsPanel {
            vertical-align: middle;
            padding-bottom: 5px;
            width: 100%;
        }

        .leftLabel {
            width: 150px;
        }

        .editFields {
            width: 280px;
            margin-left: 5px;
        }

    </ui:style>

    <g:HTMLPanel>
        <g:ScrollPanel addStyleNames="{style.scrPanel}">
            <g:VerticalPanel styleName="{style.editPadding}">
                <g:cell>
                    <g:VerticalPanel>
                        <g:HorizontalPanel addStyleNames="{style.editFieldsPanel}">
                            <g:cell horizontalAlignment="right" verticalAlignment="middle">
                                <g:Label text="Наименование макета:" addStyleNames="{style.leftLabel}"/>
                            </g:cell>
                            <g:cell>
                                <g:TextBox ui:field="formTypeName" addStyleNames="{style.editFields}"/>
                            </g:cell>
                        </g:HorizontalPanel>

                        <g:HorizontalPanel addStyleNames="{style.editFieldsPanel}">
                            <g:cell horizontalAlignment="right" verticalAlignment="middle">
                                <g:Label text="Код формы:" addStyleNames="{style.leftLabel}"/>
                            </g:cell>
                            <g:cell>
                                <g:TextBox ui:field="formTypeCode" addStyleNames="{style.editFields}"/>
                            </g:cell>
                        </g:HorizontalPanel>

                        <g:HorizontalPanel ui:field="ifrsPanel">
                            <g:cell horizontalAlignment="right" verticalAlignment="middle">
                                <g:Label text="Отчетность для МФСО:" addStyleNames="{style.leftLabel}"/>
                            </g:cell>
                            <g:cell>
                                <g:CheckBox ui:field="isIfrs" addStyleNames="{style.editFields}"/>
                            </g:cell>
                        </g:HorizontalPanel>

                        <g:HorizontalPanel addStyleNames="{style.editFieldsPanel}" ui:field="ifrsNamePanel">
                            <g:cell horizontalAlignment="right" verticalAlignment="middle">
                                <g:Label text="Наименование для МСФО:" addStyleNames="{style.leftLabel}"/>
                            </g:cell>
                            <g:cell>
                                <g:TextBox ui:field="ifrsName" addStyleNames="{style.editFields}"/>
                            </g:cell>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                </g:cell>
            </g:VerticalPanel>
        </g:ScrollPanel>
        <g:HorizontalPanel ui:field="buttonBlock" width="100%" height="30px" spacing="5" addStyleNames="{style.saveCancel}">
            <g:cell width="50%" horizontalAlignment="right">
                <g:Button ui:field="save" text="Сохранить" width="80px"/>
            </g:cell>
            <g:cell width="50%" horizontalAlignment="left">
                <g:Button ui:field="cancel" text="Отменить" width="80px"/>
            </g:cell>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>
