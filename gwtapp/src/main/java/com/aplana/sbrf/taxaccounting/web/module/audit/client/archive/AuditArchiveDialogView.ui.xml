<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:dw="urn:import:com.aplana.gwt.client">
    <ui:style>
        .content {
            margin: 0 10px 0 10px;
        }

        .label {
            font-size: 11px;
            color: #959595;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
        }

        .margin {
           margin-right: 4px;
        }
    </ui:style>


    <dw:ModalWindow title="Архивация журнала аудита" width="200px">
        <g:VerticalPanel verticalAlignment="middle" width="100%" height="100%" addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:HorizontalPanel height="50px" verticalAlignment="middle" addStyleNames="{style.content}">
                    <g:Label text="Архивировать по дату: " addStyleNames="{style.margin}"/>
                    <d:DateMaskBoxPicker ui:field="toSearchDate" width="120px"/>
                </g:HorizontalPanel>
            <g:cell height="45px" verticalAlignment="top">
                <g:Label text="До выбранной даты, будет производится архивация всех текущих записей журнала аудита." addStyleNames="{style.content} {style.label}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="bottom">
                <g:FlowPanel width="100%" addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" ui:field="archiveButton" text="Перенести в архив"/>
                    <g:Button addStyleNames="{style.footerButton}" ui:field="cancelButton" text="Закрыть"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>
</ui:UiBinder>