<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:dw="urn:import:com.aplana.gwt.client">
    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
        }
    </ui:style>


    <dw:ModalWindow title="Архивация" width="200px" height="120px">
        <g:VerticalPanel width="100%" height="100%" addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell height="100%" verticalAlignment="middle">
                <d:DateMaskBoxPicker ui:field="toSearchDate" width="120px" addStyleNames="{style.content}"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="bottom">
                <g:FlowPanel width="100%" addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" ui:field="archiveButton" text="Перенести в архив"/>
                    <g:Button addStyleNames="{style.footerButton}" ui:field="cancelButton" text="Закрыть"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>
</ui:UiBinder>