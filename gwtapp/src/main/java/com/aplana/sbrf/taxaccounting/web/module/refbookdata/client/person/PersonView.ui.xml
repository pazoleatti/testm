<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager='urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager'
             xmlns:dw="urn:import:com.aplana.gwt.client"
        >

<ui:style>
    .content {
        margin: 10px;
    }

    .footerPanel {
        background-color: #E8E1CF;
        width: 100%;
        height: 38px;
    }

    .footerButton {
        margin: 8px 10px 8px 0 !important;
        width: 84px;
    }

    .table {
        border: 1px solid #aeaeac;
        border-top: 0;
    }

    .label {
        border: 1px solid #aeaeac;
    }

    .pager {
        top:0;
    }
</ui:style>

    <dw:ModalWindow ui:field="modalWindow"
                    iconUrl="resources/img/star.png"
                    title="Назначение дублей, оригинала записи справочника ФЛ">
        <g:VerticalPanel addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell>
                <g:VerticalPanel addStyleNames="{style.content}">
                    <g:cell>
                        <g:Label ui:field="note" width="800px" text="" addStyleNames="{style.label}"/>
                    </g:cell>

                    <g:VerticalPanel width="100%">
                        <g:cell>
                            <g:Label width="800px" text="Оригинал:"/>
                        </g:cell>
                        <g:HorizontalPanel ui:field="buttonOriginalPanel" spacing="3" verticalAlignment="middle">
                            <style:LinkButton text="Добавить" ui:field="addOriginalPerson" img="resources/img/row-add.png"/>
                            <style:LinkButton text="Удалить" ui:field="removeOriginalPerson" img="resources/img/row-delete.png"/>
                        </g:HorizontalPanel>
                        <g:cell>
                            <g:HorizontalPanel height="90px" width="100%">
                                <g:cell width="100%" height="100%">
                                    <style:GenericDataGrid ui:field="tableOriginal" height="80px" width="100%"
                                                           addStyleNames="{style.table}"/>
                                </g:cell>
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:VerticalPanel>

                    <g:VerticalPanel width="100%">
                        <g:cell>
                            <g:Label width="100px" text="Дубли:"/>
                        </g:cell>
                        <g:HorizontalPanel ui:field="buttonDuplicatePanel" spacing="3" verticalAlignment="middle">
                            <style:LinkButton text="Добавить" ui:field="addDuplicatePerson" img="resources/img/row-add.png"/>
                            <style:LinkButton text="Удалить" ui:field="removeDuplicatePerson" img="resources/img/row-delete.png"/>
                        </g:HorizontalPanel>
                        <g:HorizontalPanel height="200px" width="100%">
                            <g:cell width="100%" height="100%">
                                <style:GenericDataGrid ui:field="tableDuplicate" height="200px" width="100%"
                                                   addStyleNames="{style.table}"/>
                            </g:cell>
                        </g:HorizontalPanel>
                        <pager:FlexiblePager ui:field="pager" location="CENTER" addStyleNames="{style.pager}"
                                             showFastForwardButton="false" fastForwardRows="0"
                                             showLastPageButton="true" type="person"/>
                    </g:VerticalPanel>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" text="Сохранить" ui:field="saveButton"/>
                    <g:Button addStyleNames="{style.footerButton}" text="Отмена" ui:field="cancelButton"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder>