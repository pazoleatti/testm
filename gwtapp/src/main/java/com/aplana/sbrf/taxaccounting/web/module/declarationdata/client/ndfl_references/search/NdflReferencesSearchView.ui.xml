<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:dw="urn:import:com.aplana.gwt.client"
             xmlns:datepicker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
>

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
            width: 84px;
        }

        .table {
            border: 1px solid #aeaeac;
            border-top: 0;
        }

    </ui:style>

    <dw:ModalWindow ui:field="modalWindow"
                    title="Поиск справок">
        <g:VerticalPanel addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell>
                <g:VerticalPanel addStyleNames="{style.content}">
                    <g:HorizontalPanel>
                        <g:VerticalPanel spacing="3" width="100%" horizontalAlignment="align_left">
                            <g:Label text="Номер справки:"/>
                            <g:Label text="Фамилия:"/>
                        </g:VerticalPanel>
                        <g:VerticalPanel spacing="3" width="100%" horizontalAlignment="align_right">
                            <g:TextBox ui:field="refNumberTextBox"/>
                            <g:TextBox ui:field="lastNameTextBox"/>
                        </g:VerticalPanel>


                        <g:VerticalPanel spacing="3" width="100%" horizontalAlignment="align_left">
                            <g:Label text="Имя:"/>
                            <g:Label text="Отчество:"/>
                        </g:VerticalPanel>
                        <g:VerticalPanel spacing="3" width="100%" horizontalAlignment="align_right">
                            <g:TextBox ui:field="firstNameTextBox"/>
                            <g:TextBox ui:field="middleNameTextBox"/>
                        </g:VerticalPanel>

                        <g:VerticalPanel spacing="3" width="100%" horizontalAlignment="align_left">
                            <g:Label text="Дата рождения с:"/>
                            <g:Label text="Дата рождения по:"/>
                        </g:VerticalPanel>
                        <g:VerticalPanel spacing="3" width="100%" horizontalAlignment="align_right">
                            <datepicker:DateMaskBoxPicker ui:field="birthDateFromTextBox"/>
                            <datepicker:DateMaskBoxPicker ui:field="birthDateBeforeTextBox"/>
                        </g:VerticalPanel>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="align_right"
                                       width="100%">
                        <g:HorizontalPanel spacing="3">
                            <g:Button text="Найти" ui:field="findButton"/>
                            <g:Button text="Очистить" ui:field="clearButton"/>
                        </g:HorizontalPanel>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel spacing="3" verticalAlignment="middle">
                        <g:Label text="Найденные:"/>
                    </g:HorizontalPanel>
                    <g:VerticalPanel width="100%">
                        <g:HorizontalPanel height="200px" width="100%">
                                <style:GenericDataGrid ui:field="table" height="200px" width="100%"
                                                       addStyleNames="{style.table}"/>
                        </g:HorizontalPanel>
                        <pager:FlexiblePager ui:field="pager"
                                             location="CENTER" showFastForwardButton="false" visible="true"
                                             fastForwardRows="0" showLastPageButton="true" type="resultTable"/>
                    </g:VerticalPanel>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" text="Выбрать" ui:field="chooseButton"/>
                    <g:Button addStyleNames="{style.footerButton}" text="Закрыть" ui:field="closeButton"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder>
