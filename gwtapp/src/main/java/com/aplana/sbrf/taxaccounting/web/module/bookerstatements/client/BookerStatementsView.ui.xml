<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:fm="urn:import:com.aplana.gwt.client.form"
             xmlns:periodpicker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client">
    <ui:style>
        .header {
            font-size: 14px;
            color: #636460;
        }

        .btnFindPanel {
            padding-left: 10px;
            padding-right: 10px;
        }

        .pager {
            position: absolute;
            bottom: 0;
            right: 0;
        }

        .table {
            position: absolute !important;
            bottom: 30px;
            right: 10px;
            left: 10px;
            top: 40px;
        }

        .paddingRight15 {
            padding-right: 15px;
        }

        .marginRight3 {
            margin-right: 3px;
        }

        .separator {
            height: 26px;
            margin: 0 10px 0 10px;
            border-right: 1px solid #aeaeac;
        }

        .horSep {
            height: 1px;
            margin: 1px 10px 3px 10px;
            border-top: 1px solid #aeaeac;
        }

        .listBox {
            min-width: 100px;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar childValign="middle" height="100%">
                            <g:Label text="НСИ" addStyleNames="{style.header}"/>
                            <g:Label text="—" addStyleNames="{style.header}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>

                <fm:right>
                    <fm:Right>
                        <style:LeftBar childValign="middle" height="100%">
                            <style:LinkButton ui:field="create" text="Создать..."
                                              img="resources/img/add.png" title="Создать"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Бухгалтерская отчётность"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="0" verticalAlignment="middle" height="30px" width="100%"
                                   addStyleNames="{style.btnFindPanel}">

                    <g:cell width="33%">
                        <g:HorizontalPanel verticalAlignment="middle" width="100%" addStyleNames="{style.paddingRight15}">
                            <g:cell horizontalAlignment="right">
                                <g:Label text="Период:" addStyleNames="{style.marginRight3}"/>
                            </g:cell>
                            <g:cell width="100%">
                                <periodpicker:PeriodPickerPopupWidget ui:field="accountPeriodIds" width="100%"  title="Выбор периода" multiselect="true"/>
                            </g:cell>
                        </g:HorizontalPanel>
                    </g:cell>
                    <g:cell width="33%">
                        <g:HorizontalPanel verticalAlignment="middle" width="100%" addStyleNames="{style.paddingRight15}">
                            <g:cell horizontalAlignment="right">
                                <g:Label text="Подразделение:" addStyleNames="{style.marginRight3}"/>
                            </g:cell>
                            <g:cell width="100%">
                                <picker:DepartmentPickerPopupWidget ui:field="departmentIds" multiselection="true"
                                                                    width="100%"/>
                            </g:cell>

                        </g:HorizontalPanel>
                    </g:cell>
                    <g:cell width="33%">
                        <g:HorizontalPanel verticalAlignment="middle" width="100%">

                            <g:cell horizontalAlignment="right">
                                <g:Label wordWrap="false" text="Вид бух. отчётности:" addStyleNames="{style.marginRight3}"/>
                            </g:cell>
                            <g:cell width="100%">
                                <g:ValueListBox ui:field="bookerReportType" width="100%" addStyleNames="{style.listBox}"/>
                            </g:cell>
                        </g:HorizontalPanel>
                    </g:cell>
                    <g:Label addStyleNames="{style.separator}"/>

                    <g:Button ui:field="searchButton" text="Найти"/>

                </g:HorizontalPanel>

                <g:HTML addStyleNames="{style.horSep}"/>

                <g:ResizeLayoutPanel addStyleNames="{style.table}">
                    <style:GenericDataGrid ui:field="table" height="100%" width="100%"/>
                </g:ResizeLayoutPanel>

                <pager:FlexiblePager ui:field="pager" location="CENTER"
                                     showFastForwardButton="false" fastForwardRows="0"
                                     showLastPageButton="true" styleName="{style.pager}" type="BookerStatementsView"/>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>