<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:pager='urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager'>
    <ui:style>
        .titleLabel {
            font-size: 26px;
            margin: 10px;
        }
        .pager {
            margin-right: auto;
            margin-left: auto;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:north size="110">
            <g:VerticalPanel>
                <g:Label styleName="{style.titleLabel}" text="Загрузка бухгалтерской отчётности"/>
                <g:HorizontalPanel>
                    <g:cell width="220px">
                        <g:Label text="Подразделение"/>
                    </g:cell>
                    <g:cell width="220px">
                        <g:Label text="Период" />
                    </g:cell>
                    <g:cell width="220px">
                        <g:Label text="Вид бухгалтерской отчётности" />
                    </g:cell>
                </g:HorizontalPanel>
                <g:HorizontalPanel verticalAlignment="MIDDLE">
                    <g:cell width="220px">
                        <d:DepartmentPicker width="200px" ui:field="departmentPicker" withCheckBox="false" header="Выберите подразделение"/>
                    </g:cell>
                    <g:cell width="220px">
                        <g:SimplePanel ui:field="reportPeriodPanel" width="200px"/>
                    </g:cell>
                    <g:cell width="220px">
                        <g:ListBox ui:field="bookerReportType" width="200px"/>
                    </g:cell>
                    <g:cell>
                        <g:FormPanel ui:field="uploadFormDataXls" encoding="multipart/form-data" method="post"
                                     action="" >
                            <g:HorizontalPanel ui:field="uploadPanel">
                                <g:FileUpload ui:field="uploader" title="Файл xls" name="uploader"/>
                                <g:Button ui:field="uploadButton" text="Загрузить"/>
                            </g:HorizontalPanel>
                        </g:FormPanel>
                    </g:cell>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:north>
        <g:center>
            <g:DockLayoutPanel>
                <g:center>
                    <g:ResizeLayoutPanel>
                        <style:GenericDataGrid height="100%" ui:field="formDataTable"/>
                    </g:ResizeLayoutPanel>
                </g:center>
                <g:south size="30">
                    <pager:FlexiblePager ui:field="pager" location="CENTER"
                                         showFastForwardButton="false" fastForwardRows="0"
                                         showLastPageButton="true" rangeLimited="true" styleName="{style.pager}" />
                </g:south>
            </g:DockLayoutPanel>
        </g:center>

    </g:DockLayoutPanel>
</ui:UiBinder>