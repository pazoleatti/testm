<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:log="urn:import:com.aplana.sbrf.taxaccounting.web.widget.log">
    <ui:style>
        @external .gwt-DialogBox .Caption;
        .gwt-DialogBox .Caption {
            font-weight: bold;
            text-align: left;
            color: white;
            background: url("img/top_grad.gif") repeat-x scroll center bottom #F1F1F1;
        }
    </ui:style>

	<g:DialogBox ui:field="dialogBox" modal="false" text="Сообщение">
		<g:VerticalPanel spacing="5" width="600px">
			<g:Label ui:field="message" />
			<log:ThrowableWidget ui:field="throwableView" height="100%" width="100%"/>
            <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_BOTTOM">
			    <g:Button width="50%" ui:field="okButton">Закрыть сообщение</g:Button>
            </g:cell>
		</g:VerticalPanel>
	</g:DialogBox>

</ui:UiBinder> 