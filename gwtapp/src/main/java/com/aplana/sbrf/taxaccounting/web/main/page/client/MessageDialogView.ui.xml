<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:log="urn:import:com.aplana.sbrf.taxaccounting.web.widget.log"
    xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            /*padding: 10px;
            border: 1px solid #949494;
            border-radius: 3px;*/
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 50px;
        }

        .footerButton {
            margin:  14px 17px 14px 0px !important;
        }
    </ui:style>

	<dw:ModalWindow ui:field="dialogBox" modal="false" iconUrl="" title="Сообщение">
		<g:VerticalPanel width="600px">
            <g:VerticalPanel addStyleNames="{style.content}">
                <g:Label ui:field="message" />
                <log:ThrowableWidget ui:field="throwableView" height="100%" width="100%"/>
            </g:VerticalPanel>
            <g:VerticalPanel addStyleNames="{style.footerPanel}" >
                <g:cell horizontalAlignment="ALIGN_CENTER">
			        <g:Button addStyleNames="{style.footerButton}" ui:field="okButton">Закрыть сообщение</g:Button>
                </g:cell>
            </g:VerticalPanel>
		</g:VerticalPanel>
	</dw:ModalWindow>

</ui:UiBinder> 