<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:log="urn:import:com.aplana.sbrf.taxaccounting.web.widget.log"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px 10px 35px 10px;
        }

        .content2 {
            min-height: 50px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 100%;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
        }

        .image {
            margin-right: 10px;
            vertical-align: middle;
        }
    </ui:style>

    <dw:ModalWindow ui:field="dialogBox" title="Информация">
        <g:VerticalPanel width="450px" addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:VerticalPanel addStyleNames="{style.content}">
                <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="{style.content2}">
                    <g:Image ui:field="image" addStyleNames="{style.image}"/>
                    <g:Label ui:field="message"/>
                </g:HorizontalPanel>

                <log:ThrowableWidget ui:field="throwableView" height="100%" width="100%"/>
            </g:VerticalPanel>
            <g:VerticalPanel addStyleNames="{style.footerPanel}">
                <g:cell horizontalAlignment="ALIGN_RIGHT">
                    <g:Button addStyleNames="{style.footerButton}" ui:field="okButton">Закрыть</g:Button>
                </g:cell>
            </g:VerticalPanel>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder> 