<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .dataLayout{
            margin: 5px;
        }

        .textArea{
            resize: none;
            width: 350px;
            height: 150px;
        }
    </ui:style>

    <g:DialogBox height="100%" glassEnabled="true" text="Укажите причину возврата">
        <g:DockPanel addStyleNames="{style.dataLayout}">
            <g:Dock direction="NORTH" size="40px">
                <g:Label>Причина возврата:</g:Label>
            </g:Dock>
            <g:Dock direction="CENTER">
                <g:TextArea addStyleNames="{style.textArea}" focus="true" ui:field="data"/>
            </g:Dock>
            <g:Dock direction="SOUTH" size="35px">
                <g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" width="100%">
                    <g:HorizontalPanel spacing="5">
                        <g:Button text="Продолжить" ui:field="okButton"/>
                        <g:Button text="Отмена" ui:field="cancelButton"/>
                    </g:HorizontalPanel>
                </g:HorizontalPanel>
            </g:Dock>
        </g:DockPanel>
    </g:DialogBox>

</ui:UiBinder> 