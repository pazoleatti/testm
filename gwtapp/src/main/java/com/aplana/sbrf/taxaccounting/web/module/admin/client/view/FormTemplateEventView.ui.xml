<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:HorizontalPanel width="100%" height="100%">
            <g:cell width="20%">
                <g:VerticalPanel width="100%" height="100%">
                    <g:cell>
                        <g:Label text="События"/>
                    </g:cell>
                    <g:cell height="100%">
                        <g:ListBox width="100%" height="100%" visibleItemCount="10" ui:field="eventListBox"/>
                    </g:cell>
                </g:VerticalPanel>
            </g:cell>
            <g:cell width="80%">
                <g:VerticalPanel height="100%" width="100%">
                    <g:cell>
                        <g:Label text="Скрипты события"/>
                    </g:cell>
                    <g:cell height="50%">
                        <g:ListBox height="100%" width="100%" visibleItemCount="10" ui:field="eventScriptListBox"/>
                    </g:cell>
                    <g:cell>
                        <g:HorizontalPanel>
                            <g:cell>
                                <g:Button text="Вверх" ui:field="upEventScript"/>
                            </g:cell>
                            <g:cell>
                                <g:Button text="Вниз" ui:field="downEventScript"/>
                            </g:cell>
                            <g:cell>
                                <g:Button text="Удалить" ui:field="removeScriptFromEvent"/>
                            </g:cell>
                        </g:HorizontalPanel>
                    </g:cell>
                    <g:cell>
                        <g:Label text="Остальные скрипты"/>
                    </g:cell>
                    <g:cell height="50%">
                        <g:ListBox height="100%" width="100%" visibleItemCount="10" ui:field="remainScriptListBox"/>
                    </g:cell>
                    <g:cell>
                        <g:Button text="Добавить" ui:field="addScriptToEvent"/>
                    </g:cell>
                </g:VerticalPanel>
            </g:cell>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>