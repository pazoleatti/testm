<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
    xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 50px;
        }

        .footerButton {
            margin:  14px 17px 14px 0px !important;
        }
    </ui:style>

    <dw:ModalWindow iconUrl="resources/img/exclamation_mark.png" title="Информация по форме/декларации" glassEnabled="true" animationEnabled="true">
        <g:VerticalPanel>
            <g:cell>
                <g:VerticalPanel addStyleNames="{style.content}">
                <style:GenericDataGrid ui:field="logsTable" height="250px" width="1000px" />
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
            <g:FlowPanel styleName="{style.footerPanel}">
                <g:Button addStyleNames="{style.footerButton}" text="Закрыть" ui:field="hideButton"/>
            </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder>