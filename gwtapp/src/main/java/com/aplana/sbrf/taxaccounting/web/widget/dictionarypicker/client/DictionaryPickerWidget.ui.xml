<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			 xmlns:g="urn:import:com.google.gwt.user.client.ui" 
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
			 >
	<g:VerticalPanel>
		<g:HorizontalPanel width="auto" height="auto">

				<g:TextBox ui:field="txtFind" text=""/>


				<g:Button ui:field="btnFind" text="Найти"/>

		</g:HorizontalPanel>
		<g:FlowPanel height="350px">
			<g:HorizontalPanel height="300px" width="100%">
				<style:GenericCellTable width="100%" height="auto" ui:field="cellTable" />
			</g:HorizontalPanel>
			<g:HorizontalPanel verticalAlignment='ALIGN_BOTTOM' width="100%">
				<c:SimplePager ui:field='pager' location='CENTER'/>
				<g:cell horizontalAlignment='ALIGN_RIGHT' >
					<g:Button ui:field="btnClear" text="Очистить"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:FlowPanel>
		

				

	</g:VerticalPanel>
</ui:UiBinder>