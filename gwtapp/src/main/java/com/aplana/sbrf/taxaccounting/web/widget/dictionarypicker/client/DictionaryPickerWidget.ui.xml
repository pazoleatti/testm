<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
		>
	<g:VerticalPanel>
		<g:cell width="100%">
			<g:TextBox ui:field="txtFind" text="" width="100%"/>
		</g:cell>
		<g:cell height="300px" width="100%">
				<style:GenericCellTable width="100%" height="auto" ui:field="cellTable"/>
		</g:cell>
		<g:cell>
			<g:HorizontalPanel verticalAlignment='ALIGN_BOTTOM' width="100%">
				<g:cell>
					<c:SimplePager ui:field='pager' location='CENTER'/>
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_RIGHT'>
					<g:Button ui:field="btnClear" text="Очистить"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder>