<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>
    <ui:style>
        .align {
            margin-left: 5px;
            margin-right: 5px;
        }
    </ui:style>

    <g:VerticalPanel width="100%" height="100%">
        <style:Bar height="5%">
            <style:LeftBar>
                <g:Button ui:field="addRowButton">Добавить строку</g:Button>
                <g:Button ui:field="addNumberedHeaderButton">Добавить нумерацию</g:Button>
                <g:Button ui:field="removeRowButton">Удалить строку</g:Button>
                <g:Button enabled="false" ui:field="upRowButton">Вверх</g:Button>
                <g:Button enabled="false" ui:field="downRowButton">Вниз</g:Button>
                <g:Button visible="false" ui:field="uniteCellsButton">Объединить ячейки</g:Button>
                <g:Button visible="false" ui:field="disuniteCellsButton">Разъединить ячейки</g:Button>
            </style:LeftBar>
        </style:Bar>
        <g:cell height="95%">
            <style:GenericDataGrid ui:field="formDataTable" height="100%" addStyleNames="{style.align}"/>
        </g:cell>
    </g:VerticalPanel>
</ui:UiBinder>
