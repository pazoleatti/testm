<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .important {
            font-weight: bold;
        }

        .departmentTextBox{
            font-weight: bold;
            background-color: #ffffff;
        }

        .departmentSelectionButton{
            text-align: center;
            font-weight: bold;
        }

    </ui:style>


    <g:HTMLPanel>
        <g:HorizontalPanel >
            <g:TextBox  enabled="false" ui:field="selected" width="170px" addStyleNames="{style.departmentTextBox}"/>
            <g:Button ui:field="selectButton" text="..." addStyleNames="{style.departmentSelectionButton}"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>