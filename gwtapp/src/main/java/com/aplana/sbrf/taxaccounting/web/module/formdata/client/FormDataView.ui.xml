<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
    <ui:style>
        @external .gwt-PopupPanel;
        .gwt-PopupPanel {
            border: 2px solid #3dbf0e;
            padding: 2px;
            background: white;
        }

        .lockInformation {
            font-weight: bold;
            color: #ff4500;
        }

        .headerRight {
            float: right;
            top: 0;
            width: 790px;
        }

        .headerLeft {
            float: left;
            top: 0;
        }

        .titleLabel {
            font-family: Tahoma;
            font-size: 16px;
            float: left;
            margin-top: 10px;
            text-align: left;
        }

        .marginTop7 {
            margin-top: 7px;
        }

        .paddingTop7 {
            padding-top: 7px;
        }

        .marginLeft15 {
            margin-left: 15px;
        }

        .headerAttr {
            margin-left: 5px;
            text-align: right;
            font-size: 12px;
            font-weight: bold;
            font-family: Tahoma;
        }

        .headerAttrName {
            text-align: right;
            font-size: 12px;
            font-family: Tahoma;
        }

        .showCheckedColumns {
            font-size: 12px;
            font-family: Tahoma;
            float: left;
        }

        .headerTopRight {
            height: 70px;
        }

        .workArea {
            border: 1px solid #969696;
            border-radius: 3px;
            padding: 5px;
            margin-top: 5px;
        }
    </ui:style>

	<g:DockLayoutPanel ui:field="dockPanel" unit='PX' height="100%" width="100%">
        <g:north size="100">
            <g:HTMLPanel height="100px" width="100%">
                <div class="{style.headerLeft}">
                    <g:HorizontalPanel height="35px">
                        <g:FlowPanel styleName="{style.marginTop7}">
                            <style:ButtonLink ui:field="returnAnchor" img="img/btn-l.gif"/>
                        </g:FlowPanel>
                        <g:Label ui:field="title" styleName="{style.titleLabel}"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="35px">
                        <g:FlowPanel styleName="{style.marginTop7}">
                            <style:ButtonLink ui:field="signersAnchor" text="Исполнитель и подписанты"/>
                        </g:FlowPanel>
                        <g:FlowPanel styleName="{style.marginLeft15} {style.marginTop7}">
                             <style:ButtonLink ui:field="printAnchor" text="Печать" img="img/print.png" />
                        </g:FlowPanel>
                    </g:HorizontalPanel>
                    <g:FlowPanel height="30px">
                        <style:Bar>
                            <style:LeftBar>
                                <g:Button ui:field="checkButton">Проверить</g:Button>
                                <g:Button ui:field="recalculateButton">Рассчитать</g:Button>
                                <g:Button ui:field="addRowButton">Добавить строку</g:Button>
                                <g:Button ui:field="removeRowButton">Удалить строку</g:Button>
                                <g:Button ui:field="originalVersionButton">Исходная версия</g:Button>
                                <g:Button ui:field="deleteFormButton">Удалить</g:Button>
                            </style:LeftBar>
                            <style:LeftBar ui:field="workflowButtons" />
                        </style:Bar>
                    </g:FlowPanel>
                </div>
                <div class="{style.headerRight}">
                    <div class="{style.headerTopRight}">
                        <g:HorizontalPanel addStyleNames="{style.paddingTop7}">
                            <g:Label width="100px" text="Подразделение:" styleName="{style.headerAttrName}"/>
                            <g:Label ui:field="departmentIdLabel" styleName="{style.headerAttr}"/>
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Тип:" styleName="{style.headerAttrName}"/>
                            <g:Label ui:field="formKindLabel" styleName="{style.headerAttr}"/>
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Период:" styleName="{style.headerAttrName}"/>
                            <g:Label ui:field="reportPeriodLabel" styleName="{style.headerAttr}"/>
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Состояние:" styleName="{style.headerAttrName}"/>
                            <g:Label ui:field="stateLabel" styleName="{style.headerAttr}"/>
                        </g:HorizontalPanel>
                    </div>
                    <g:HorizontalPanel height="30px">
                        <g:FlowPanel width="245px" ui:field="manualInputPanel">
                            <g:SimplePanel styleName="{style.paddingTop7}">
                                <style:ButtonLink text="Ручной ввод" ui:field="manualInputAnchor" />
                            </g:SimplePanel>
                            <style:Bar>
                                <style:LeftBar>
                                    <style:Button ui:field="saveButton" text="Сохранить" />
                                    <style:Button ui:field="cancelButton" text="Отмена" />
                                </style:LeftBar>
                            </style:Bar>
                        </g:FlowPanel>
                        <g:SimplePanel styleName="{style.paddingTop7}">
                            <g:CheckBox ui:field="showCheckedColumns" value="true" styleName="{style.showCheckedColumns}"
                                text="Показывать контрольные поля"/>
                        </g:SimplePanel>
                    </g:HorizontalPanel>
                </div>
            </g:HTMLPanel>
        </g:north>

        <g:north size="30">
            <g:Label ui:field="lockInformation" visible="false" addStyleNames="{style.lockInformation}" />
        </g:north>

        <g:center>
            <g:ResizeLayoutPanel>
                <g:SimplePanel styleName="{style.workArea}">
                    <style:GenericDataGrid height="100%" ui:field="formDataTable" />
                </g:SimplePanel>
            </g:ResizeLayoutPanel>
        </g:center>
	</g:DockLayoutPanel>


</ui:UiBinder>
