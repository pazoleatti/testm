<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
    <ui:style>
        .lockInformation {
            height: 30px;
            background: #FFDC82;
            padding-left: 15px;
            margin-bottom: 5px;
            padding-top: 10px;
            font-size: 16px;
            border: 1px solid #DBDBDB;
        }

        .titleLabel {
            font-size: 16px;
            max-height: 28px;
            overflow: hidden;
            line-height: 28px;
        }

        .titleGradient {
            position: absolute;
            background: url("resources/img/form_title_gradient.png");
            width: 64px;
            height: 32px;
            right: 790px;
        }

        .headerAttr {
            margin-left: 5px;
            font-size: 12px;
            font-weight: bold;
            margin-right: 20px;
        }

        .headerAttrName {
            font-size: 12px;
            text-align: right;
        }

        .manualInput {
            margin-top: 5px;
        }

        .showCheckedColumns {
            margin-top: 5px;
            font-size: 12px;
        }

        .attrPanel {
            float: right;
        }
    </ui:style>

	<g:DockLayoutPanel ui:field="dockPanel" unit='PX' height="100%" width="100%">
        <g:north size="100">
            <g:HorizontalPanel height="100px" width="100%">
                <g:FlowPanel>
                    <g:HorizontalPanel height="28px">
                        <g:cell width="25px">
                            <style:ButtonLink title="Перейти к списку налоговых форм" ui:field="returnAnchor" img="resources/img/arrow-left-24.png"/>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:HorizontalPanel>
                                <g:Label ui:field="title" addStyleNames="{style.titleLabel}"/>
                                <g:SimplePanel styleName="{style.titleGradient}"/>
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="35px">
                        <g:cell width="220px" verticalAlignment="middle">
                            <style:ButtonLink ui:field="signersAnchor" text="Исполнитель и подписанты"
                                img="resources/img/businessperson-16.png" title="Указать исполнителя и список подписантов налоговой формы"/>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <style:ButtonLink ui:field="printAnchor" text="Печать" img="resources/img/printer-16.png" title="Отобразить печатное представление документа"/>
                        </g:cell>
                    </g:HorizontalPanel>
                    <style:Bar height="30px">
                        <style:LeftBar>
                            <g:Button ui:field="checkButton">Проверить</g:Button>
                            <g:Button ui:field="recalculateButton">Рассчитать</g:Button>
                            <g:Button ui:field="addRowButton">Добавить строку</g:Button>
                            <g:Button ui:field="removeRowButton">Удалить строку</g:Button>
                            <g:Button ui:field="originalVersionButton">Исходная версия</g:Button>
                            <g:Button ui:field="deleteFormButton">Удалить</g:Button>
                        </style:LeftBar>
                        <style:LeftBar ui:field="workflowButtons" />
                    </style:Bar>
                </g:FlowPanel>
                <g:FlowPanel width="790px" addStyleNames="{style.attrPanel}">
                    <g:FlowPanel height="63px">
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Подразделение:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="departmentIdLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Тип:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="formKindLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Период:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="reportPeriodLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Состояние:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="stateLabel" addStyleNames="{style.headerAttr}" />
                            <style:ButtonLink ui:field="historyAnchor" text="Информация" />
                        </g:HorizontalPanel>
                    </g:FlowPanel>
                    <g:HorizontalPanel height="30px">
                        <g:SimplePanel width="245px" ui:field="manualInputPanel" addStyleNames="{style.manualInput}">
                            <style:ButtonLink text="Ручной ввод" ui:field="manualInputAnchor" img="resources/img/pencil-16.png"
                                 title="Перейти в режим редактирования"/>
                        </g:SimplePanel>
                        <style:Bar width="245px" ui:field="saveCancelBar">
                            <style:LeftBar>
                                <g:Button ui:field="saveButton" text="Сохранить" />
                                <g:Button ui:field="cancelButton" text="Отмена" />
                            </style:LeftBar>
                        </style:Bar>
                        <g:CheckBox ui:field="showCheckedColumns" value="true" addStyleNames="{style.showCheckedColumns}"
                                text="Показывать контрольные поля"/>
                    </g:HorizontalPanel>
                </g:FlowPanel>
            </g:HorizontalPanel>
        </g:north>

        <g:north size="30">
            <g:Label ui:field="lockInformation" visible="false" addStyleNames="{style.lockInformation}" />
        </g:north>

        <g:center>
            <g:ResizeLayoutPanel>
                <style:GenericDataGrid height="100%" ui:field="formDataTable" />
            </g:ResizeLayoutPanel>
        </g:center>
	</g:DockLayoutPanel>


</ui:UiBinder>
