<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
	<g:VerticalPanel width="100%" height="100%">
		<g:Label text="Информация о данных по налоговой форме" height="20px"/>
		<g:HorizontalPanel>
			<g:VerticalPanel spacing="5">
				<g:Label ui:field="taxTypeLabel"/>
				<g:Label ui:field="formTypeLabel"/>
				<g:Label ui:field="formKindLabel"/>
			</g:VerticalPanel>
			<g:VerticalPanel spacing="5">
				<g:Label ui:field="departmentIdLabel"/>
				<g:Label ui:field="reportPeriodLabel"/>
				<g:Label ui:field="stateLabel"/>
			</g:VerticalPanel>
		</g:HorizontalPanel>
		
		<c:CellList ui:field="loggerList" width="100%"/>
		
		<style:Bar>
			<style:LeftBar>
			   	<g:Button ui:field="addRowButton">Добавить строку</g:Button>
				<g:Button ui:field="removeRowButton">Удалить строку</g:Button>
				<g:Button ui:field="originalVersionButton">Исходная версия</g:Button>
				<g:Button ui:field="recalculateButton">Пересчитать</g:Button>
				<g:Button ui:field="printButton">Печать</g:Button>
			</style:LeftBar>
			<style:RightBar> 
			    <g:Button ui:field="manualInputButton" >Ручной ввод</g:Button>
   				<g:Button ui:field="deleteFormButton">Удалить</g:Button>
   				<g:Button ui:field="saveButton" >Сохранить</g:Button>
   				<g:Button ui:field="cancelButton" >Отмена</g:Button>
			</style:RightBar>
		</style:Bar>
		
		<!--  Необходимо для добавления кнопок Workflow -->
		<g:FlowPanel height="20px" ui:field="buttonPanel">
		</g:FlowPanel>
		<g:cell width="100%" height="610px">
			<g:ScrollPanel width="100%" height="100%">
				<c:DataGrid ui:field="formDataTable" focus="true" height="600px"/>
			</g:ScrollPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder>
