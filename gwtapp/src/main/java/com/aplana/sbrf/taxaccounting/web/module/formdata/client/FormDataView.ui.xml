<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:fileuplod="urn:import:com.aplana.sbrf.taxaccounting.web.widget.fileupload"
        >
    <ui:style>
        .lockInformation {
            height: 30px;
            background: #FFDC82;
            padding-left: 15px;
            margin-bottom: 5px;
            padding-top: 10px;
            font-size: 16px;
            border: 1px solid #DBDBDB;
        }

        .titleLabel {
            font-size: 16px;
            max-height: 28px;
            overflow: hidden;
            line-height: 28px;
        }

        .titleGradient {
            position: absolute;
            background: url("resources/img/form_title_gradient.png");
            width: 64px;
            height: 32px;
            right: 790px;
        }

        .headerAttr {
            margin-left: 5px;
            font-size: 12px;
            font-weight: bold;
            margin-right: 20px;
        }

        .headerAttrName {
            font-size: 12px;
            text-align: right;
        }

        .manualInput {
            margin-top: 5px;
        }

        .showCheckedColumns {
            margin-top: 5px;
            font-size: 12px;
        }

        .attrPanel {
            float: right;
        }

        .pager {
            margin-right: auto;
            margin-left: auto;
        }

    </ui:style>

    <ui:with field="formDataProvider" type="com.aplana.sbrf.taxaccounting.web.module.formdata.client.FormDataView"/>
	<g:DockLayoutPanel ui:field="dockPanel" unit='PX' height="100%" width="100%">
        <g:north size="100">
            <g:HorizontalPanel height="100px" width="100%">
                <g:FlowPanel>
                    <g:HorizontalPanel height="28px">
                        <g:cell width="25px">
                            <style:LinkAnchor title="Перейти к списку налоговых форм" ui:field="returnAnchor" img="resources/img/arrow-left-24.png"/>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:HorizontalPanel>
                                <g:Label ui:field="title" addStyleNames="{style.titleLabel}"/>
                                <g:SimplePanel styleName="{style.titleGradient}"/>
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="35px">
                        <g:cell width="220px" verticalAlignment="middle">
                            <style:LinkButton ui:field="signersAnchor" text="Исполнитель и подписанты"
                                img="resources/img/businessperson-16.png" title="Указать исполнителя и список подписантов налоговой формы"/>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <style:LinkButton ui:field="printAnchor" text="Печать" img="resources/img/printer-16.png" title="Отобразить печатное представление документа"/>
                        </g:cell>
                    </g:HorizontalPanel>
                    <style:Bar height="30px">
                        <style:LeftBar>
                            <g:Button ui:field="checkButton">Проверить</g:Button>
                            <g:Button ui:field="recalculateButton">Рассчитать</g:Button>
                            <style:LinkButton ui:field="addRowButton" text="Добавить строку"/>
                            <style:LinkButton ui:field="removeRowButton" text="Удалить строку"/>
                            <g:Button ui:field="originalVersionButton">Исходная версия</g:Button>
                            <g:Button ui:field="deleteFormButton">Удалить</g:Button>
                        </style:LeftBar>
                        <style:LeftBar ui:field="workflowButtons" />
                    </style:Bar>
                </g:FlowPanel>
                <g:FlowPanel width="790px" addStyleNames="{style.attrPanel}">
                    <g:FlowPanel height="63px">
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Подразделение:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="departmentIdLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Тип:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="formKindLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Период:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="reportPeriodLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Состояние:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="stateLabel" addStyleNames="{style.headerAttr}" />
                            <style:LinkButton ui:field="infoAnchor" text="Информация" img="resources/img/exclamation_mark.png" title="Отобразить историю налоговой формы"/>
                        </g:HorizontalPanel>
                    </g:FlowPanel>
                    <g:HorizontalPanel height="30px">
                        <g:SimplePanel width="245px" ui:field="manualInputPanel" addStyleNames="{style.manualInput}">
                            <style:LinkButton text="Ручной ввод" ui:field="manualInputAnchor" img="resources/img/pencil-16.png"
                                 title="Перейти в режим редактирования"/>
                        </g:SimplePanel>
                        <g:HorizontalPanel ui:field="saveCancelPanel" height="100%" spacing="5">
                            <g:Button ui:field="saveButton" text="Сохранить" />
                            <g:Button ui:field="cancelButton" text="Выход" />
                            <fileuplod:FileUploadWidget ui:field="fileUploader"/>
                        </g:HorizontalPanel>
                        <g:CheckBox ui:field="showCheckedColumns" value="true"
                                    addStyleNames="{style.showCheckedColumns}"
                                    text="Показывать контрольные поля"/>
                    </g:HorizontalPanel>
                </g:FlowPanel>
            </g:HorizontalPanel>
        </g:north>

        <g:north size="30">
            <g:Label ui:field="lockInformation" visible="false" addStyleNames="{style.lockInformation}" />
        </g:north>

        <g:center>
            <g:ResizeLayoutPanel>
                <style:GenericDataGrid height="100%" ui:field="formDataTable" />
            </g:ResizeLayoutPanel>
        </g:center>
        <g:south size="30">
            <pager:FlexiblePager ui:field="pager" location="CENTER"
                                 showFastForwardButton="false" fastForwardRows="0"
                                 showLastPageButton="true" styleName="{style.pager}" />
        </g:south>
	</g:DockLayoutPanel>


</ui:UiBinder>
