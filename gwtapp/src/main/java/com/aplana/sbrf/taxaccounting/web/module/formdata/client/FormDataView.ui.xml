<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
    <ui:style>
        @external .gwt-PopupPanel;
        .gwt-PopupPanel {
            border: 2px solid #3dbf0e;
            padding: 2px;
            background: white;
        }

        .lockInformation {
            height: 30px;
            background: #FFDC82;
            padding-left: 15px;
            margin-bottom: 5px;
            padding-top: 10px;
            font-size: 16px;
            font-family: Tahoma;
            border: 1px solid #DBDBDB;
        }

        .titleLabel {
            font-family: Tahoma;
            font-size: 16px;
        }

        .headerAttr {
            margin-left: 5px;
            font-size: 12px;
            font-weight: bold;
            font-family: Tahoma;
        }

        .headerAttrName {
            font-size: 12px;
            font-family: Tahoma;
            text-align: right;
        }

        .marginTop5 {
            margin-top: 5px;
        }

        .showCheckedColumns {
            font-size: 12px;
            font-family: Tahoma;
        }

        .floatRight {
            float: right;
        }
    </ui:style>

	<g:DockLayoutPanel ui:field="dockPanel" unit='PX' height="100%" width="100%">
        <g:north size="100">
            <g:HorizontalPanel height="100px" width="100%">
                <g:VerticalPanel>
                    <g:HorizontalPanel height="28px">
                        <g:cell width="25px">
                            <style:ButtonLink ui:field="returnAnchor" img="img/btn-l.gif"/>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:Label ui:field="title" addStyleNames="{style.titleLabel}"/>
                        </g:cell>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="35px">
                        <g:cell width="220px" verticalAlignment="middle">
                            <style:ButtonLink ui:field="signersAnchor" text="Исполнитель и подписанты" />
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <style:ButtonLink ui:field="printAnchor" text="Печать" img="img/print.png" />
                        </g:cell>
                    </g:HorizontalPanel>
                    <style:Bar height="30px">
                        <style:LeftBar>
                            <g:Button ui:field="checkButton">Проверить</g:Button>
                            <g:Button ui:field="recalculateButton">Рассчитать</g:Button>
                            <g:Button ui:field="addRowButton">Добавить строку</g:Button>
                            <g:Button ui:field="removeRowButton">Удалить строку</g:Button>
                            <g:Button ui:field="originalVersionButton">Исходная версия</g:Button>
                            <g:Button ui:field="deleteFormButton">Удалить</g:Button>
                        </style:LeftBar>
                        <style:LeftBar ui:field="workflowButtons" />
                    </style:Bar>
                </g:VerticalPanel>
                <g:VerticalPanel width="790px" addStyleNames="{style.floatRight}">
                    <g:VerticalPanel height="63px">
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Подразделение:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="departmentIdLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Тип:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="formKindLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Период:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="reportPeriodLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label width="100px" text="Состояние:" addStyleNames="{style.headerAttrName}" />
                            <g:Label ui:field="stateLabel" addStyleNames="{style.headerAttr}" />
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                    <g:HorizontalPanel height="30px">
                        <g:SimplePanel width="245px" ui:field="manualInputPanel" addStyleNames="{style.marginTop5}">
                            <style:ButtonLink text="Ручной ввод" ui:field="manualInputAnchor" />
                        </g:SimplePanel>
                        <style:Bar width="245px" ui:field="saveCancelBar">
                            <style:LeftBar>
                                <style:Button ui:field="saveButton" text="Сохранить" />
                                <style:Button ui:field="cancelButton" text="Отмена" />
                            </style:LeftBar>
                        </style:Bar>
                        <g:CheckBox ui:field="showCheckedColumns" value="true" addStyleNames="{style.showCheckedColumns} {style.marginTop5}"
                                text="Показывать контрольные поля"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:HorizontalPanel>
        </g:north>

        <g:north size="30">
            <g:Label ui:field="lockInformation" visible="false" addStyleNames="{style.lockInformation}" />
        </g:north>

        <g:center>
            <g:ResizeLayoutPanel>
                <style:GenericDataGrid height="100%" ui:field="formDataTable" />
            </g:ResizeLayoutPanel>
        </g:center>
	</g:DockLayoutPanel>


</ui:UiBinder>
