<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:t="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
    <ui:style>
        @external .gwt-DialogBox .Caption;
        .gwt-DialogBox .Caption {
            font-weight: bold;
            text-align: left;
            color: white;
            background: url("img/top_grad.gif") repeat-x scroll center bottom #F1F1F1;
        }
    </ui:style>

	<g:DialogBox height="100%" glassEnabled="true" text="Исполнитель и подписанты">
        <g:VerticalPanel height="100%">
            <g:HorizontalPanel height="30px">
                <g:Label width="100px">Исполнитель:</g:Label>
                <g:TextBox maxLength="256" width="300px" ui:field="name"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel height="30px">
                <g:Label width="100px">Телефон:</g:Label>
                <g:TextBox maxLength="30" width="300px" ui:field="phone"/>
            </g:HorizontalPanel>

            <t:GenericDataGrid ui:field="signersTable" height="250px"/>
            <t:Bar ui:field="columnActionsBar">
                <t:LeftBar>
                    <g:Button text="Вверх" ui:field="upSigner"/>
                    <g:Button text="Вниз" ui:field="downSigner"/>
                    <g:Button text="Добавить" ui:field="addSigner"/>
                    <g:Button text="Удалить" ui:field="removeSigner"/>
                </t:LeftBar>
            </t:Bar>

            <t:Bar>
                <t:LeftBar>
                    <g:Button text="Применить" ui:field="saveButton"/>
                    <g:Button text="Отмена" ui:field="cancelButton"/>
                </t:LeftBar>
            </t:Bar>
        </g:VerticalPanel>

	</g:DialogBox>

</ui:UiBinder> 