<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
    xmlns:t="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
    xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin:  8px 10px 8px 0px !important;
            width: 84px;
        }
    </ui:style>

    <dw:ModalWindow glassEnabled="true" iconUrl="resources/img/businessperson-16.png" title="Исполнитель и подписанты">
        <g:VerticalPanel>
            <g:cell>
                <g:VerticalPanel addStyleNames="{style.content}">
                    <g:HorizontalPanel height="30px">
                        <g:Label width="100px">Подразделение:</g:Label>
                        <picker:DepartmentPickerPopupWidget header="Подразделение" ui:field="departmentPicker"
                                                            multiselection="false" width="300px" modal="true"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="30px">
                        <g:Label width="100px">Исполнитель:</g:Label>
                        <g:TextBox maxLength="100" width="300px" ui:field="name"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="30px">
                        <g:Label width="100px">Телефон:</g:Label>
                        <g:TextBox maxLength="20" width="300px" ui:field="phone"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="250px" width="100%" spacing="3">
                        <g:cell width="100%">
                            <t:GenericDataGrid ui:field="signersTable" height="250px" width="100%"/>
                        </g:cell>
                        <g:cell width="40px">
                            <g:VerticalPanel ui:field="directionPanel" spacing="3">
                                <g:cell>
                                    <g:Button text="Вверх" ui:field="upSigner" width="100%"/>
                                </g:cell>
                                <g:cell>
                                    <g:Button text="Вниз" ui:field="downSigner" width="100%"/>
                                </g:cell>
                            </g:VerticalPanel>
                        </g:cell>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel ui:field="buttonPanel" spacing="3" verticalAlignment="middle">
                        <g:cell>
                            <t:LinkButton text="Добавить" ui:field="addSigner"/>
                        </g:cell>
                        <g:cell>
                            <t:LinkButton text="Удалить" ui:field="removeSigner"/>
                        </g:cell>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" text="Сохранить" ui:field="saveButton"/>
                    <g:Button addStyleNames="{style.footerButton}" text="Отмена" ui:field="cancelButton"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder> 