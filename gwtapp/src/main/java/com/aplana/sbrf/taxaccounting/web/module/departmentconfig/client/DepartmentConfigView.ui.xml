<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:cm='urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror.client'
             xmlns:d='urn:import:com.aplana.sbrf.taxaccounting.web.widget.newdepartmentpicker'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>

    <ui:style>
        .titleLabel {
            font-size: 26px;
            margin: 10px;
        }

        .boldLabel {
            font-weight: bold;
        }

        .sectorLabel {
            font-size: 16px;
            margin-bottom: 15px;
        }

        .noresize {
            resize: none;
        }

        .sps {
            margin-left: 10px;
        }
    </ui:style>
    <g:VerticalPanel>
        <g:VerticalPanel>
            <g:Label styleName="{style.titleLabel}" text="Настройки подразделений"/>
            <g:HorizontalPanel spacing="5">
                <g:Label styleName="{style.boldLabel}" text="Подразделение:"/>
                <d:NewDepartmentPicker withCheckBox="false" header="Подразделение"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel spacing="5">
                <style:ButtonLink ui:field="editButton" text="Редактировать"/>
                <g:Button ui:field="saveButton" text="Сохранить"/>
                <g:Button ui:field="cancelButton" text="Отмена"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
        <g:HorizontalPanel spacing="5">
            <!-- Общие сведения -->
            <g:cell width="610px">
                <g:VerticalPanel>
                    <g:Label styleName="{style.sectorLabel}" text="Общие сведения"/>
                    <g:Label styleName="{style.boldLabel}" text="Реквизиты подразделения"/>
                    <g:HorizontalPanel>
                        <g:Label text="Наименование" width="250px"/>
                        <g:TextArea width="350px" height="100px" styleName="{style.noresize}"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Субъект Российской Федерации (код)" width="250px"/>
                        <g:ListBox width="106px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Номер контактного телефона" width="250px"/>
                        <g:TextBox width="350px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="ИНН" width="40px"/>
                        <g:TextBox width="100px"/>
                        <g:Label text="ОКАТО" styleName="{style.sps}" width="60px"/>
                        <g:ListBox width="115px"/>
                        <g:Label text="Код налогового органа" width="160px" styleName="{style.sps}"/>
                        <g:TextBox width="100px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="КПП" width="40px"/>
                        <g:TextBox width="100px"/>
                        <g:Label text="ОКВЭД" styleName="{style.sps}" width="60px"/>
                        <g:ListBox width="115px"/>
                    </g:HorizontalPanel>
                    <!-- Сведения о реорганизации -->
                    <g:Label styleName="{style.boldLabel}" text="Сведения о реорганизации"/>
                    <g:HorizontalPanel>
                        <g:Label text="Код формы реорганизации и ликвидации" width="250px"/>
                        <g:ListBox width="105px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="ИНН реорганизованной организации" width="250px"/>
                        <g:TextBox width="100px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="КПП реорганизованной организации" width="250px"/>
                        <g:TextBox width="100px"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:cell>
            <!-- Вид налога -->
            <g:cell width="610px">
                <g:VerticalPanel>
                    <g:HorizontalPanel>
                        <g:Label styleName="{style.sectorLabel}" text="Вид налога"/>
                        <g:ListBox width="200px" styleName="{style.sps}"/>
                    </g:HorizontalPanel>
                    <g:Label styleName="{style.boldLabel}" text="Ответственный за декларацию"/>
                    <g:HorizontalPanel>
                        <g:Label text="Признак лица подписавшего документ" width="250px"/>
                        <g:ListBox width="355px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Фамилия подписанта" width="250px"/>
                        <g:TextBox width="350px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Имя подписанта" width="250px"/>
                        <g:TextBox width="350px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Отчество подписанта" width="250px"/>
                        <g:TextBox width="350px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Наименование документа, подтверждающего полномочия представителя"
                                 width="250px"/>
                        <g:TextArea width="350px" height="70px" styleName="{style.noresize}"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Наименование организации-представителя налогоплательщика" width="250px"/>
                        <g:TextArea width="350px" height="70px" styleName="{style.noresize}"/>
                    </g:HorizontalPanel>
                    <!-- Прочие сведения -->
                    <g:Label styleName="{style.boldLabel}" text="Прочие сведения"/>
                    <g:HorizontalPanel>
                        <g:Label text="Код места, по которому представляется документ" width="250px"/>
                        <g:ListBox width="355px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Версия программы, с помощью которой сформирован файл" width="250px"/>
                        <g:TextBox width="140px"/>
                        <g:Label text="Версия формата" width="110px" styleName="{style.sps}"/>
                        <g:TextBox width="75px" styleName="{style.sps}"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Ставка налога (федеральная часть)" width="250px"/>
                        <g:TextBox width="60px"/>
                        <g:Label text="Обязанность по уплате налога" width="190px" styleName="{style.sps}"/>
                        <g:ListBox width="80px" styleName="{style.sps}"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label text="Ставка налога (региональная часть)" width="250px"/>
                        <g:TextBox width="60px"/>
                        <g:Label text="Признак расчёта" width="190px" styleName="{style.sps}"/>
                        <g:ListBox width="80px" styleName="{style.sps}"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel>
                        <g:Label
                                text="Сумма налога, выплаченная за пределами Российской Федерации и засчитываемая в уплату налога согласно порядку, установленному ст. 311 НК"
                                width="515px"/>
                        <g:TextBox width="75px" styleName="{style.sps}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:cell>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>