<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>
    <ui:style>
        .marginLeft {
            margin-left: 50px;
        }
        .marginTop {
            margin-top: 17px
        }
        .btnPanel2 td {
            margin-top: 25px;
            margin-left: 25px;
            vertical-align: middle !important;
        }
    </ui:style>


    <g:FlowPanel width="100%" height="100%">
        <g:HorizontalPanel width="100%" height="100%">
            <g:cell width="25%" height="100%">
                <g:VerticalPanel width="100%" height="100%">
                    <g:Label text="Отчеты"/>
                    <g:cell height="92%">
                        <g:ListBox width="100%" height="100%" visibleItemCount="30" ui:field="subreportListBox"/>
                    </g:cell>
                    <t:Bar>
                        <t:LeftBar>
                            <g:Button text="Вверх" ui:field="upColumn"/>
                            <g:Button text="Вниз" ui:field="downColumn"/>
                            <g:Button text="Добавить" ui:field="addColumn"/>
                            <g:Button text="Удалить" ui:field="removeColumn"/>
                        </t:LeftBar>
                    </t:Bar>
                </g:VerticalPanel>
            </g:cell>
            <g:cell width="75%">
                <g:FlowPanel ui:field="attrPanel" addStyleNames="{style.marginLeft}">
                    <g:HorizontalPanel height="30px" addStyleNames="{style.marginTop}">
                        <g:Label width="150px">Наименование</g:Label>
                        <g:TextBox width="600px" ui:field="nameBox"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Псевдоним</g:Label>
                        <g:TextBox width="600px"  ui:field="aliasBox"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Файл</g:Label>
                        <t:LinkAnchor text="Загрузить файл" ui:field="file" img="resources/img/up_cc.png"
                                      title="Загрузить файл"/>
                        <t:LinkAnchor text="Скачать файл" ui:field="downloadFile" img="resources/img/down_cc.png"
                                      addStyleNames="{style.marginLeft}" title="Скачать файл"/>
                        <t:LinkButton text="Удалить файл" ui:field="deleteFile" img="resources/img/row-delete.png"
                                      addStyleNames="{style.marginLeft}" title="Удалить файл"/>
                    </g:HorizontalPanel>
                </g:FlowPanel>
            </g:cell>
        </g:HorizontalPanel>
        <g:FormPanel ui:field="formPanel" encoding="multipart/form-data" method="post">
            <g:FileUpload ui:field="uploader" name="uploader" visible="false"/>
        </g:FormPanel>
    </g:FlowPanel>
</ui:UiBinder>