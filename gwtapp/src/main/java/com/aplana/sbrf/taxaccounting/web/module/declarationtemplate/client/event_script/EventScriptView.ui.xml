<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dw='urn:import:com.aplana.gwt.client'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>

    <ui:style>
        .mainPanel {
            background-color: white;
            position: absolute !important;
            top: 25px;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .widgetWrapper {
            position: absolute !important;
            top: 8px;
            left: 8px;
            right: 8px;
            bottom: 42px;
        }
        .buttons {
            position: absolute !important;
            margin: 8px;
            left: 350px;
            right: 0;
            width: 0;
            bottom: 0;
        }
    </ui:style>

    <dw:ModalWindow ui:field="modalWindow"
                    height="400px" width="520px" minWidth="520px"
                    title="Выбор события для создания скрипта" resizable="true">

            <g:FlowPanel addStyleNames="{style.mainPanel}">
                <g:ResizeLayoutPanel ui:field="tableWrapper" addStyleNames="{style.widgetWrapper}">
                    <style:GenericDataGrid ui:field="eventTable" width="100%" height="100%"/>
                </g:ResizeLayoutPanel>
                <g:HorizontalPanel spacing="8" verticalAlignment="middle"
                                   addStyleNames="{style.buttons}">
                    <g:Button ui:field="create" text="Создать" width="70px"/>
                    <g:Button ui:field="close" text="Отмена" width="70px"/>
                </g:HorizontalPanel>
            </g:FlowPanel>

    </dw:ModalWindow>
</ui:UiBinder>