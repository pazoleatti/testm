<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
    xmlns:dep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
    xmlns:rep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client">   
    <ui:style>
        .content {
            padding: 10px;
            border: 1px solid #949494;
            border-radius: 3px;
            margin: 10px 0px;
        }

        .buttonBar {
            margin-left: 25%;
        }
    </ui:style>

	<g:DialogBox height="100%" width="250px" glassEnabled="true" text="Создание декларации">
        <g:VerticalPanel height="100%" width="250px">
            <g:FlowPanel styleName="{style.content}">
            
                <g:FlowPanel height="60px">
                    <g:Label text="Подразделение" />
                    <dep:DepartmentPickerPopupWidget ui:field="departmentPicker" width="400px" multiselection="false" header="Выбор подразделения" modal="true"/>
                </g:FlowPanel>
                
                <g:FlowPanel height="60px">
                    <g:Label text="Отчетный период" />
                     <rep:PeriodPickerPopupWidget width="400px" ui:field="periodPicker" multiselect="false"/>
                </g:FlowPanel>

                <g:FlowPanel height="60px">
                    <g:Label text="Вид декларации" />
                    <style:ListBoxWithTooltip width="400px" ui:field="declarationTypeBox" showTooltip="true"/>
                </g:FlowPanel>
            </g:FlowPanel>

            <style:Bar>
                <style:RightBar addStyleNames="{style.buttonBar}">
                    <g:Button ui:field="continueButton" text="Создать"/>
                    <g:Button ui:field="cancelButton" text="Закрыть"/>
                </style:RightBar>
            </style:Bar>

        </g:VerticalPanel>

	</g:DialogBox>

</ui:UiBinder> 