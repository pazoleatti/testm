<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
	xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager">
	<g:VerticalPanel height="350px" width="500px">
		<g:cell>
			<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_MIDDLE">
				<g:cell>
					<g:Label text="Дата актуальности:" wordWrap="false" />
				</g:cell>
				<g:cell width="100%">
					<g:ValueListBox ui:field="version" width="100%" />
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell horizontalAlignment="CENTER">
			<g:HorizontalPanel width="100%" verticalAlignment="ALIGN_MIDDLE" spacing="2">
				<g:cell width="100%">
					<g:TextBox width="100%" ui:field="txtFind" text="" />
				</g:cell>
				<g:cell>
					<g:Button text="Найти" ui:field="searchButton"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell height="100%" width="100%">
			<g:ResizeLayoutPanel height="100%" width="100%">
				<style:GenericDataGrid ui:field="cellTable" height="100%"/>
			</g:ResizeLayoutPanel>
		</g:cell>
		<g:cell>
			<g:HorizontalPanel verticalAlignment='ALIGN_BOTTOM'
				width="100%">
				<g:cell width="100%">
					<pager:FlexiblePager ui:field='pager' location='CENTER'
						showFastForwardButton="false" fastForwardRows="0"
						showLastPageButton="true" />
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_RIGHT'>
					<g:Button ui:field="clearButton" text="Очистить" />
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder>