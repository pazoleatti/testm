<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager">

    <g:DockLayoutPanel unit='PX' height="400px" width="800px">
        <g:north size="80">
            <g:VerticalPanel width="100%" height="100%">
                <g:cell height="50%">
                    <g:HorizontalPanel width="100%" spacing="10">
                        <g:cell width="100%">
                            <g:TextBox width="100%" ui:field="txtFind" text=""/>
                        </g:cell>
                        <g:cell>
                            <g:Button text="Найти" ui:field="searchButton"/>
                        </g:cell>
                    </g:HorizontalPanel>
                </g:cell>
                <g:cell height="50%" horizontalAlignment="ALIGN_CENTER">
                    <g:HorizontalPanel spacing="10">
                        <g:cell>
                            <g:Label text="Дата актуальности:" wordWrap="false"/>
                        </g:cell>
                        <g:cell>
                            <d:CustomDateBox ui:field="version"/>
                        </g:cell>
                    </g:HorizontalPanel>
                </g:cell>
            </g:VerticalPanel>
        </g:north>
        <g:center>
            <g:ResizeLayoutPanel width="100%">
                <style:GenericDataGrid ui:field="cellTable"/>
            </g:ResizeLayoutPanel>
        </g:center>
        <g:south size="50">
            <g:HorizontalPanel spacing="10" width="100%">
                <g:cell>
                    <pager:FlexiblePager ui:field='pager' location='CENTER'
                                         showFastForwardButton="false" fastForwardRows="0"
                                         showLastPageButton="true"/>
                </g:cell>
                <g:cell>
                    <g:Button ui:field="clearButton" text="Очистить"/>
                </g:cell>
            </g:HorizontalPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>