<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style field="modal">
        .mainPanel {
            position: absolute !important;
            padding-top: 5px;
            top: 27px;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .widgetWrapper {
            background-color: #ffffff;
            border: 1px solid #000000;
            border-bottom-width: 0;
            position: absolute !important;
            top: 55px;
            left: 8px;
            right: 8px;
            bottom: 77px;
        }

        .pagerWrapper {
            border: 1px solid #000000;
            border-top-width: 0;


            position: absolute !important;
            bottom: 46px;
            right: 8px;
            left: 8px;
        }

        .pager {
            white-space: nowrap;
            padding-right: 0;
        }

        .padding {
            padding-right: 8px;
            padding-left: 8px;
        }

        .buttons {
            background-color: #E8E1CF;
            position: absolute !important;
            left: 0;
            right: 0;
            width: 25px;
            bottom: 0;
        }

    </ui:style>

    <dw:ModalWindow ui:field="modalWindow" modal="false" glassEnabled="false" height="400px" width="670px"
                    minWidth="520px"
                    iconUrl="resources/img/search.png" title="Поиск" resizable="true">

        <g:FlowPanel addStyleNames="{modal.mainPanel}">

            <g:HorizontalPanel ui:field="filterPanel" spacing="0" width="100%" height="26px" addStyleNames="{modal.padding}"
                               verticalAlignment="middle" horizontalAlignment="right">
                <g:cell horizontalAlignment="left" width="99%">
                    <g:TextBox ui:field="filterText" width="99%"/>
                </g:cell>
                <g:Button ui:field="search" text="Найти" width="70px"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel spacing="0" width="100%" height="22px" verticalAlignment="middle" horizontalAlignment="right" addStyleNames="{modal.padding}" >
                <g:cell horizontalAlignment="left" width="100%">
                    <g:CheckBox text="Учитывать регистр" ui:field="caseSensitive"/>
                </g:cell>
                <g:Label ui:field="countLabel" wordWrap="false" text="Найдено: 0" width="100px"/>
            </g:HorizontalPanel>

            <g:ResizeLayoutPanel ui:field="tableWrapper" addStyleNames="{modal.widgetWrapper}">
                <style:GenericDataGrid ui:field="searchResultTable" width="100%"/>
            </g:ResizeLayoutPanel>

            <g:HTMLPanel addStyleNames="{modal.pagerWrapper}">
                <pager:FlexiblePager ui:field="pager" location="CENTER" addStyleNames="{modal.pager}"
                                     showFastForwardButton="false" fastForwardRows="0" showLastPageButton="true"
                                     type="formDataSearch" />
            </g:HTMLPanel>

            <g:HorizontalPanel spacing="8" horizontalAlignment="right" verticalAlignment="middle"
                               width="100%" addStyleNames="{modal.buttons}">
                <g:Button ui:field="close" text="Закрыть" width="70px"/>
            </g:HorizontalPanel>
        </g:FlowPanel>

    </dw:ModalWindow>

</ui:UiBinder> 