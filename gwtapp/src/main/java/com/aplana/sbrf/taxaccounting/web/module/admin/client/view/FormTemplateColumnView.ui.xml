<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .whiteColor {
            background-color: white;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.whiteColor}">
        <g:HorizontalPanel width="100%" height="100%">
            <g:cell width="20%">
                <g:HTMLPanel>
                    <g:Label text="Столбцы"/>
                    <g:ListBox width="100%" height="100%" visibleItemCount="20" ui:field="columnListBox"/>
                    <g:HorizontalPanel>
                        <g:Button text="Вверх" ui:field="upColumn"/>
                        <g:Button text="Вниз" ui:field="downColumn"/>
                        <g:Button text="Добавить" ui:field="addColumn"/>
                        <g:Button text="Удалить" ui:field="removeColumn"/>
                    </g:HorizontalPanel>
                </g:HTMLPanel>
            </g:cell>
            <g:cell width="80%">
                <g:HTMLPanel>
                    <g:Label text="Список атрибутов"/>
                    <g:ListBox height="100%" width="100%" visibleItemCount="20" ui:field="columnAttributeListBox"/>
                </g:HTMLPanel>
            </g:cell>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>