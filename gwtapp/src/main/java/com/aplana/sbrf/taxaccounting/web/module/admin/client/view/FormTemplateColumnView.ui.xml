<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:u='urn:import:com.aplana.sbrf.taxaccounting.web.module.admin.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>
    <ui:style>
        .marginLeft {
            margin-left: 50px;
        }
    </ui:style>

    <g:HTMLPanel width="100%" height="100%">
        <g:HorizontalPanel width="100%" height="100%">
            <g:cell width="25%" height="100%">
                <g:VerticalPanel width="100%" height="100%">
                    <g:Label text="Столбцы"/>
                    <g:cell height="92%">
                        <g:ListBox width="100%" height="100%" visibleItemCount="25" ui:field="columnListBox"/>
                    </g:cell>
                    <t:Bar>
                        <t:LeftBar>
                            <g:Button text="Вверх" ui:field="upColumn"/>
                            <g:Button text="Вниз" ui:field="downColumn"/>
                            <g:Button text="Добавить" ui:field="addColumn"/>
                            <g:Button text="Удалить" ui:field="removeColumn"/>
                        </t:LeftBar>
                    </t:Bar>
                </g:VerticalPanel>
            </g:cell>

            <g:cell width="75%">
                <g:HTMLPanel addStyleNames="{style.marginLeft}">
                    <g:Label height="50px" text="Список атрибутов"/>
                    <g:Label height="30px" text="Основные атрибуты:"/>

                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Имя:</g:Label>
                        <g:TextBox width="300px" ui:field="nameBox"/>
                    </g:HorizontalPanel>

                    <u:ColumnAttributeEditor ui:field="columnAttributeEditor"/>

                    <g:Label height="30px" text="Дополнительные атрибуты:"/>
                    <g:HorizontalPanel height="30px">
                        <g:Label width="150px">Тип столбца:</g:Label>
                        <g:ValueListBox width="200px" ui:field="typeColumnDropBox"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px" visible="false" ui:field="dictionaryCodePanel">
                        <g:Label width="150px">Код справочника:</g:Label>
                        <g:ValueListBox width="200px" ui:field="stringDictionaryCodeBox"/>
                        <g:ValueListBox width="200px" ui:field="numericDictionaryCodeBox"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px" ui:field="maxLengthPanel">
                        <g:Label width="150px">Максимальный размер строки:</g:Label>
                        <g:IntegerBox width="100px" ui:field="maxLengthBox"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel height="30px" ui:field="precisionPanel">
                        <g:Label width="150px">Точность:</g:Label>
                        <g:ValueListBox width="200px" ui:field="precisionBox"/>
                    </g:HorizontalPanel>
                </g:HTMLPanel>
            </g:cell>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>