<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:my="urn:import:com.aplana.gwt.client"
			 xmlns:mask="urn:import:com.aplana.gwt.client.mask.ui"
			 xmlns:fm="urn:import:com.aplana.gwt.client.form"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
		>
    <ui:style>

        .titleText {
            font-size: 14px;
            color:  #636460;
        }

        .ms {
            padding-left: 10px;
        }

        .marginRight5{
            margin-right: 5px;
        }
    </ui:style>


    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <style:LinkButton ui:field="create" text="Создать налоговую форму..."
                                              img="resources/img/add.png" title="Создание налоговой формы"/>
                            <g:Label text="Режим редактирования" addStyleNames="{style.titleText}, {style.marginRight5}"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label
                                text="Сводная форма начисленных доходов (доходы сложные) Очень длинный заголовок бла бла бал ба лаб ла бал аб лалалалалалал ла ла"/>
                    </fm:Resizable>
                </fm:resizable>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <g:Label ui:field="formHeader" addStyleNames="{style.titleText}, {style.marginRight5}" text="Список налоговых форм" />
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>

            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <style:LabelSeparator text="test dfdf dfsdf" ui:field="sep" width="500px"/>
                <g:HorizontalPanel addStyleNames="{style.ms}" width="200px">
                    <my:MultiListBox ui:field="mlistbox"/>
                </g:HorizontalPanel>
                <g:Label ui:field="showResult"/>
                <g:ScrollPanel ui:field="scrollPanel" width="200px" height="50px">
                    <g:HorizontalPanel>
                        <g:CheckBox ui:field="chk"/>
                        <g:Label ui:field="lbl">
                            TheLabelasfasdfasdfasdfkjaskfdjsadkfjasldfjalskdjflasdjflasdjfalsfjlsakdjflskjdflaskdjflksadjflk
                        </g:Label>
                    </g:HorizontalPanel>
                </g:ScrollPanel>
                <g:Button ui:field="showDialog">Показать окно</g:Button>
                <g:VerticalPanel spacing="3" borderWidth="1" width="100%">
                    <g:HorizontalPanel spacing="2">
                        <mask:DateMaskBox ui:field="boxDate"/>
                        <g:Label ui:field="boxDateLb" width="100%"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel  spacing="2">
                        <mask:MonthYearMaskBox ui:field="boxMy"/>
                        <g:Label ui:field="boxMyLb" width="100%"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel  spacing="2">
                        <mask:YearMaskBox ui:field="boxY"/>
                        <g:Label ui:field="boxYLb" width="100%"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel  spacing="2">
                        <mask:TextMaskBox mask="999999" text="1" ui:field="boxText"/>
                        <g:Label ui:field="boxTextLb" width="100%"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel  spacing="2">
                        <d:DateMaskBoxPicker ui:field="boxDatePicker" canBeEmpty="true" width="200px"/>
                        <g:Label ui:field="boxDatePickerLb" width="80%"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>

            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>