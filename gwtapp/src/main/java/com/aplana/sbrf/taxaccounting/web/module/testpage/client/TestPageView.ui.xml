<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:com.aplana.gwt.client">
    <ui:style>
        .RefbookTextBox {
            padding-left: 10px;
        }

        .ms {
            padding-left: 10px;
        }

        .mainContainer {
            /*border: solid 1px black;*/
        }

        .formHeader {
            height: 35px;
            margin-left: 15px;
            overflow: hidden;
        }

        .formBody {
            border: solid 1px #aeaeac;
            position: absolute;
            top: 35px;
            bottom: 0;
            padding: 2px;
            background-color: #f4f1eb;
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;
            behavior: url(/resources/pie/PIE.htc);
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.mainContainer}">
        <g:HTMLPanel addStyleNames="{style.formHeader}">
            ff
            g
            g
            <br/>
            g
            <br/>
            gff
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{style.formBody}">
            <my:LabelSeparator text="test" ui:field="sep"/>
            <my:RefBookTextBox styleName="{style.RefbookTextBox}" ui:field="refbookTextBox" enabled="true"/>
            <!-- <my:ImageButtonLink imageUrl="http://127.0.0.1:8888/resources/img/question_mark.png" text="my hyperlink" />-->
            <my:ImageButtonLink imageUrl="http://127.0.0.1:8888/resources/img/question_mark.png"
                                text="my button hyperlink"
                                ui:field="ibl"/>
            <my:ImgBtnLnk text="my anorch" imageUrl="http://127.0.0.1:8888/resources/img/question_mark.png" href="#"
                          ui:field="ian"/>
            <my:SpinEdit labelText="Период, с:"/>
            <g:HorizontalPanel addStyleNames="{style.ms}" width="600px">
                <my:MultiListBox ui:field="mlistbox" multiselect="false"/>
            </g:HorizontalPanel>

        </g:HTMLPanel>
    </g:HTMLPanel>


</ui:UiBinder>