<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:log="urn:import:com.aplana.sbrf.taxaccounting.web.widget.log"
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">

    <ui:style>
        .header {
            background: #949494;
            padding-top: 5px;
            padding-bottom: 5px;
            padding-left: 110px;
        }
        .title {
            text-align: center;
            color: white;
            font-size: 12px;
        }
        .floatRight {
            float: right;
        }
        .floatLeft {
            float: left;
        }
    </ui:style>

	<g:DockLayoutPanel unit="PX" height="100%" width="100%">

		<g:north size="25">
			<g:HorizontalPanel height="100%" width="100%" addStyleNames="{style.header}">
                <g:cell width="100%">
				    <g:HTML ui:field="title" addStyleNames="{style.title}"/>
                </g:cell>
                <g:HTMLPanel width="110px" addStyleNames="{style.floatRight}" ui:field="htmlPanel">
                	
                    <div class="{style.floatLeft}">
                        <style:LinkAnchor text="Печать" target="_blank" ui:field="printButton"
                                          img="resources/img/printer-black-16.png"
                                          title="Отобразить печатное представление документа"/>
                    </div>
                    <div class="{style.floatRight}" style="margin-right: 20px;">
                        <style:LinkButton ui:field="hideButton" img="resources/img/close-16.png" title="Закрыть панель"/>
                    </div>
                    <g:FormPanel ui:field="formPanel" method="post" visible="false"
                                 action="download/downloadController/processLogDownload/">

                    </g:FormPanel>
                </g:HTMLPanel>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<log:LogEntriesWidget ui:field="logEntries" tableElementId="logCellTable"/>
		</g:center>

	</g:DockLayoutPanel>

</ui:UiBinder> 