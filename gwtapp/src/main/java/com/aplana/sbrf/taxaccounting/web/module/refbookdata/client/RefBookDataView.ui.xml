<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:date="urn:import:com.google.gwt.user.datepicker.client"
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:pager='urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager'>
    <ui:style>
        .titleLabel {
            font-size: 26px;
            margin: 10px;
        }

        .pager {
            margin-right: auto;
            margin-left: auto;
        }

        .titleText{
            font-size: 26px;
        }

        .titleDesc{
            font-size: 16px;
            padding-left: 10px
        }

        .btnAddDel{
            margin-top: 5px;
            margin-left: 300px;
        }

    </ui:style>
    <g:DockLayoutPanel>
        <g:north size="100">
            <g:VerticalPanel>
                <g:cell height="30px">
                    <g:HorizontalPanel >
                        <g:cell width="26px">
                            <style:LinkAnchor title="Перейти к списку справочников" img="resources/img/arrow-left-24.png"
                                              href="#!refbooklist"/>
                        </g:cell>
                        <g:Label styleName="{style.titleText}">Справочник</g:Label>
                    </g:HorizontalPanel>
                </g:cell>
                <g:cell height="20px">
                    <g:Label ui:field="titleDesc" styleName="{style.titleDesc}"/>
                </g:cell>
                <g:cell height="45px" verticalAlignment="bottom">
                    <g:HorizontalPanel styleName="{style.btnAddDel}" spacing="5">
                        <g:Label>Дата актуальности: </g:Label>
                        <date:DateBox ui:field="relevanceDate"/>
                        <style:LinkAnchor title="Добавить строку" text="Добавить строку" ui:field="addRow"
                                          img="resources/img/exclamation_mark.png"/>
                        <style:LinkAnchor title="Удалить строку" text="Удалить строку" ui:field="deleteRow"
                                          img="resources/img/exclamation_mark.png"/>
                    </g:HorizontalPanel>
                </g:cell>
            </g:VerticalPanel>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel>
                <g:center>
                    <g:DockLayoutPanel width="100%" height="100%">
                        <g:center>
                            <g:ResizeLayoutPanel>
                                <style:GenericDataGrid height="100%" ui:field="refbookDataTable"/>
                            </g:ResizeLayoutPanel>
                        </g:center>
                        <g:south size="30">
                            <pager:FlexiblePager ui:field="pager" location="CENTER"
                                                 showFastForwardButton="false" fastForwardRows="0"
                                                 showLastPageButton="true" styleName="{style.pager}"/>
                        </g:south>
                    </g:DockLayoutPanel>
                </g:center>
                <g:east size="500">
                    <g:VerticalPanel width="100%" height="100%" ui:field="contentPanel"/>
                </g:east>
            </g:SplitLayoutPanel>
        </g:center>

    </g:DockLayoutPanel>
</ui:UiBinder>