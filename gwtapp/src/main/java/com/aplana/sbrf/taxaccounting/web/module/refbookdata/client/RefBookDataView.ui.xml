<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:pager='urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager'
             xmlns:fm="urn:import:com.aplana.gwt.client.form"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
        >
    <ui:style>
        .titleText {
            font-size: 14px !important;
            color: #636460;
            white-space: nowrap;
        }

        .titleText div {
            font-size: 14px !important;
        }

        .editModeLabel {
            color: #aeaeac;
        }

        .btnPanel {
            height: 33px;
            padding-left: 10px;
        }

        .splitter {
            position: absolute !important;
            bottom: 0;
            right: 0;
            left: 0;
            top: 34px;
            border-top: 1px solid #aeaeac;
        }

        .table{
            position: absolute !important;
            bottom: 30px;
            right: 0;
            left: 0;
            top: 0;
        }

        .pager {
            position: absolute;
            bottom: 0;
            right: 0;
        }

        .marginRight5{
            margin-right: 5px;
        }

        .marginRight2{
            margin-right: 2px;
        }

        .marginLeft5{
            margin-right: 5px;
        }

        .horSep {
            height: 0;
            margin-top: 2px;
            border-top: 1px solid #aeaeac;
        }

        .verSep {
            height: 22px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }
    </ui:style>


    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <style:LinkAnchor ui:field="backAnchor" title="Перейти к списку справочников" text="Справочники" disableImage="true"
                                              addStyleNames="{style.titleText}, {style.marginRight5}"/>
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label ui:field="titleDesc"/>
                    </fm:Resizable>
                </fm:resizable>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar marginRight="10" childValign="middle" height="100%">
                            <g:Label ui:field="editModeLabel" visible="false" text="Режим редактирования" addStyleNames="{style.editModeLabel}, {style.marginRight5}"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>

                <g:HorizontalPanel verticalAlignment="middle" width="100%" addStyleNames="{style.btnPanel}">
                    <g:HorizontalPanel verticalAlignment="middle">
                        <style:LinkButton title="Добавить строку" text="Добавить строку" ui:field="addRow"
                                          img="resources/img/row-add.png" addStyleNames="{style.marginRight5}"/>
                        <style:LinkButton title="Удалить строку" text="Удалить строку" ui:field="deleteRow"
                                          img="resources/img/row-delete.png" addStyleNames="{style.marginRight5}"/>
                        <g:HTML ui:field="separator" addStyleNames="{style.verSep}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel verticalAlignment="middle">
                        <g:Label wordWrap="false" text="Дата актуальности: " addStyleNames="{style.marginRight2}"/>
                        <d:DateMaskBoxPicker ui:field="relevanceDate" width="110px"/>
                    </g:HorizontalPanel>

                    <g:cell width="99%">
                        <g:HorizontalPanel verticalAlignment="middle" addStyleNames="{style.marginRight5}">
                            <g:HTML addStyleNames="{style.verSep}"/>
                            <g:TextBox width="210px" ui:field="filterText" addStyleNames="{style.marginRight5}"/>
                            <g:Button title="Найти" width="70px" text="Найти" ui:field="search"/>
                        </g:HorizontalPanel>
                    </g:cell>

                    <g:HorizontalPanel verticalAlignment="middle" addStyleNames="{style.marginRight5}">
                        <g:Button title="Завершить редактирование" text="Завершить редактирование"
                                  ui:field="cancelEdit"/>
                        <style:LinkButton title="Редактировать" text="Редактировать" ui:field="edit"/>
                    </g:HorizontalPanel>

                </g:HorizontalPanel>

                <!--<g:Label addStyleNames="{style.horSep}"/>-->

                <g:SplitLayoutPanel addStyleNames="{style.splitter}">
                    <g:center>
                        <g:HTMLPanel>
                            <g:ResizeLayoutPanel addStyleNames="{style.table}">
                                <style:GenericDataGrid ui:field="refbookDataTable" width="100%" height="100%"/>
                            </g:ResizeLayoutPanel>
                            <pager:FlexiblePager ui:field="pager" location="CENTER" addStyleNames="{style.pager}"
                                                 showFastForwardButton="false" fastForwardRows="0"
                                                 showLastPageButton="true" type="refBookData"/>
                        </g:HTMLPanel>
                    </g:center>
                    <g:east size="500">
                        <g:SimplePanel ui:field="contentPanel"/>
                    </g:east>
                </g:SplitLayoutPanel>


            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>