<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.aplana.sbrf.taxaccounting.web.widget.incrementbutton'
             xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
<ui:style>
    .titleLabel {
        font-size: 16px;
        max-height: 28px;
        overflow: hidden;
        line-height: 28px;
    }

    .titleGradient {
        position: absolute;
        background: url("resources/img/form_title_gradient.png");
        width: 64px;
        height: 32px;
        right: 790px;
    }
</ui:style>

    <g:DockLayoutPanel unit='PX' height="100%" width="100%">

        <g:north size="100">
            <g:HorizontalPanel height="100%" width="100%">
                <g:FlowPanel>
                    <g:HorizontalPanel height="28px">
                        <g:HorizontalPanel>
                            <g:Label ui:field="title" addStyleNames="{style.titleLabel}"/>
                            <g:SimplePanel styleName="{style.titleGradient}"/>
                        </g:HorizontalPanel>


                    </g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:HorizontalPanel>

                            <g:Label>Период: </g:Label>

                            <g:Label>От </g:Label>
                            <w:IncrementButton minValue="1920" maxValue="2100" ui:field="fromBox"></w:IncrementButton>
                            <g:Label>До </g:Label>
                            <w:IncrementButton minValue="1920" maxValue="2100" ui:field="toBox"></w:IncrementButton>
                            <g:Button ui:field="find">Поиск</g:Button>
                            <g:Button ui:field="closePeriod">Закрыть период</g:Button>
                            <g:Button ui:field="setDeadlineButton">Назначить срок сдачи</g:Button>

                        </g:HorizontalPanel>
                        <g:HorizontalPanel>
                            <g:Label>Подразделение:</g:Label>
                            <picker:DepartmentPickerPopupWidget header="Подразделение"  ui:field="departmentPicker"  multiselection="false" modal="true"/>
                            <style:LinkAnchor img="resources/img/starfish-16.png" text="Открыть период" ui:field="openPeriod"/>
                        </g:HorizontalPanel>

                    </g:VerticalPanel>
                </g:FlowPanel>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel width="650px">
                <style:GenericCellTable ui:field="periodsTable" width="630px"/>
            </g:ScrollPanel>
        </g:center>

    </g:DockLayoutPanel>


</ui:UiBinder>
