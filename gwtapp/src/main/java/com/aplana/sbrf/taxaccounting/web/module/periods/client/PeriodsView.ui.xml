<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.aplana.gwt.client'
             xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>

        .titleText {
            font-size: 14px !important;
            color: #636460;
            white-space: nowrap;
        }

        .titleText div {
            font-size: 14px !important;
        }

        .btnPanel {
            padding-left: 7px;
            height: 23px;
        }

        .btnPanel td{
            vertical-align: middle !important;
        }

        .table {
            position: absolute !important;
            bottom: 30px;
            right: 0;
            left: 0;
            top: 70px;
        }

        .horSep {
            height: 1px;
            margin: 4px 9px;
            border-top: 1px solid #aeaeac;
        }

        .verSep {
            height: 23px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }

    </ui:style>

    <ui:style field="margin">
        .right5{
            margin-right: 5px;
        }
        .left5{
            margin-left: 5px;
        }
        .right10{
            margin-right: 10px;
        }
    </ui:style>


    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <g:Label ui:field="nalogTypeLabel" addStyleNames="{style.titleText}"/>
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:right>
                    <fm:Right/>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label ui:field="title" text="Ведение периодов"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>

        <fm:body>
            <fm:BodyContainer>

                <g:HorizontalPanel spacing="3" width="80%" addStyleNames="{style.btnPanel}">
                    <g:cell horizontalAlignment="right">
                        <g:Label width="100px" text="Подразделение:" addStyleNames="{margin.right5}"/>
                    </g:cell>
                    <g:cell width="100%">
                        <picker:DepartmentPickerModalWidget header="Подразделение" ui:field="departmentPicker"
                                                            multiSelection="false" width="100%" />
                    </g:cell>

                    <g:cell horizontalAlignment="right">
                        <g:Label wordWrap="false" text="Период, c:" addStyleNames="{margin.right5}, {margin.left5}"/>
                    </g:cell>
                    <g:cell>
                        <w:Spinner minValue="1920" maxValue="2100" width="80px" ui:field="fromBox" addStyleNames="{margin.right5}"/>
                    </g:cell>
                    <g:cell horizontalAlignment="right">
                        <g:Label wordWrap="false" text="по" addStyleNames="{margin.right5}"/>
                    </g:cell>
                    <g:cell>
                        <w:Spinner minValue="1920" maxValue="2100" width="80px" ui:field="toBox"/>
                    </g:cell>

                    <g:cell verticalAlignment="middle">
                        <g:HTML addStyleNames="{style.verSep}"/>
                    </g:cell>

                    <g:Button title="Поиск" text="Поиск" ui:field="find"/>
                </g:HorizontalPanel>

                <g:Label addStyleNames="{style.horSep}"/>

                <!--Панель кнопок-->

                <g:HorizontalPanel addStyleNames="{style.btnPanel}">
                    <style:LeftBar childValign="middle" marginRight="9">
                        <style:LinkButton img="resources/img/unlock-16.png" text="Открыть период"
                                          ui:field="openPeriod"/>
                        <style:LinkButton img="resources/img/lock-16.png" text="Закрыть период"
                                          ui:field="closePeriod"/>
                        <g:Button ui:field="setDeadlineButton" text="Назначить срок сдачи"/>
                    </style:LeftBar>
                </g:HorizontalPanel>

                <g:ScrollPanel width="70%" addStyleNames="{style.table}">
                    <style:GenericCellTable ui:field="periodsTable" width="100%"/>
                </g:ScrollPanel>

            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>
