<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .dock{
            border-top: 1px solid #aeaeac;
        }
        .panel {
            background-color: lightgray;
            text-align: center;
        }
        .pdf {
            margin-top: 10px;
            margin-bottom: 10px;
        }
        .pager {
            position: absolute;
            bottom: 0;
            right: 0;
        }
        .button {
            background-color: #ffffff;
            border-color: #000000;
            border-width: thin;
            width: 20px;
            height: 20px;
            text-align: center;
            vertical-align: middle;
            padding: 0px;
            margin: 3px;
        }
        .buttonsPanel {
            margin-left: auto;
            margin-right: auto;
        }
        .buttonsPanel td {
            vertical-align: middle!important;
        }
        .ppnl {
            padding-top: 4px;
        }
    </ui:style>

    <g:DockLayoutPanel addStyleNames="{style.dock}">
        <g:south size="30">
            <g:HorizontalPanel width="100%" addStyleNames="{style.ppnl}">
                <g:cell>
                    <g:HorizontalPanel addStyleNames="{style.buttonsPanel}">
                        <g:Label>Масштаб: </g:Label>
                        <g:Button styleName="{style.button}" ui:field="minusButton" title="Уменьшить масштаб">-</g:Button>
                        <g:ListBox ui:field="scale" title="Масштаб"/>
                        <g:Button styleName="{style.button}" ui:field="plusButton" title="Увеличить масштаб">+</g:Button>
                        <g:Button styleName="{style.button}" ui:field="fitToWidthButton" title="По ширине">&lt;&gt;</g:Button>
                    </g:HorizontalPanel>
                </g:cell>
                <g:cell>
                    <pager:FlexiblePager ui:field="pager" addStyleNames="{style.pager}"
                                         location="CENTER" showFastForwardButton="false" onlyPages="true"
                                         fastForwardRows="0" showLastPageButton="true" type="formDataList"/>
                </g:cell>
            </g:HorizontalPanel>
        </g:south>
        <g:center>
            <g:ScrollPanel width="100%" ui:field="pdfPanel" height="100%" addStyleNames="{style.panel}">
                <g:Image ui:field="pdfPage" addStyleNames="{style.pdf}"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
