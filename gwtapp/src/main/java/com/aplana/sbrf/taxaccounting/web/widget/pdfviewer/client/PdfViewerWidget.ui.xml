<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .panel {
            background-color: lightgray;
            text-align: center;
        }

        .pdf {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .pages {
            background-color: #f4f2eb;
        }

        .toolPanel {
            background-color: #e8e2cf;
            text-align: center;

        }

        .button {
            background-color: #ffffff;
            border-color: #000000;
            border-width: thin;
            width: 20px;
            height: 20px;
            text-align: center;
            vertical-align: middle;
            padding: 0px;
            margin: 3px;
        }

        .buttonsPanel {
            margin-left: auto;
            margin-right: auto;
        }

    </ui:style>

    <g:DockLayoutPanel unit="PX" height="100%" width="100%">
        <g:east size="240">
                <g:ScrollPanel width="100%" addStyleNames="{style.pages}">
                    <g:Tree ui:field="pages"/>
                </g:ScrollPanel>
        </g:east>
        <g:south size="25">
            <g:SimplePanel addStyleNames="{style.toolPanel}">
                <g:HorizontalPanel addStyleNames="{style.buttonsPanel}">
                    <g:Label>Масштаб: </g:Label>
                    <g:ListBox ui:field="scale" title="Масштаб"/>
                    <g:Button styleName="{style.button}" ui:field="plusButton" title="Увеличить масштаб">+</g:Button>
                    <g:Button styleName="{style.button}" ui:field="minusButton" title="Уменьшить масштаб">-</g:Button>
                    <g:Button styleName="{style.button}" ui:field="fitToWidthButton" title="По ширине">&lt;&gt;</g:Button>
                </g:HorizontalPanel>
            </g:SimplePanel>
        </g:south>
        <g:center>
            <g:ScrollPanel width="100%" ui:field="pdfPanel" height="100%" addStyleNames="{style.panel}">
                <g:Image ui:field="pdfPage" addStyleNames="{style.pdf}"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
