<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:u="urn:import:com.aplana.sbrf.taxaccounting.web.module.admin.client.ui"
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>
    <ui:style>
        .whiteColor {
            background-color: white;
        }
    </ui:style>

    <g:HorizontalPanel width="100%" height="100%" addStyleNames="{style.whiteColor}">
        <g:cell width="25%" height="100%">
            <g:VerticalPanel width="100%" height="100%">
                <g:cell height="100%">
                    <g:ListBox height="100%" width="100%" visibleItemCount="10"
                               ui:field="scriptListBox"/>
                </g:cell>
                <t:LeftBar>
                    <g:Button text="Создать" ui:field="createScriptButton"/>
                    <g:Button text="Удалить" ui:field="deleteScriptButton"/>
                </t:LeftBar>
            </g:VerticalPanel>
        </g:cell>
        <g:cell width="75%" height="100%">
            <u:ScriptEditor ui:field="scriptEditor"/>
        </g:cell>
    </g:HorizontalPanel>
</ui:UiBinder>