<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:npui='urn:import:com.aplana.sbrf.taxaccounting.web.module.formtemplate.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
        >

<ui:style>
    .title {
        font-size: 16px;
        padding: 10px;
    }
</ui:style>

<g:DockLayoutPanel unit='PX' height="100%" width="100%" ui:field="dockPanel">
    <g:north size="40">
        <g:Label styleName="{style.title}" ui:field="title" />
    </g:north>

    <g:north size="30">
        <t:Bar>
            <t:LeftBar>
                <g:Button text="Сохранить" ui:field="saveButton"/>
                <g:Button text="Сбросить" ui:field="resetButton"/>
                <g:Button text="Отмена" ui:field="cancelButton"/>
                <g:Button text="Ввести в действие" ui:field="activateVersion"/>
            </t:LeftBar>
        </t:Bar>
    </g:north>


    <g:north size="80">
        <g:ScrollPanel width="100%" ui:field="logPanel">
            <c:CellList ui:field="loggerList" />
        </g:ScrollPanel>
    </g:north>

    <g:center>
        <npui:SimpleTabPanel ui:field="tabPanel"/>
    </g:center>
</g:DockLayoutPanel>
</ui:UiBinder>