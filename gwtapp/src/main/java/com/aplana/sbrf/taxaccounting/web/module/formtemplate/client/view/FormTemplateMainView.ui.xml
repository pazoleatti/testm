<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:npui='urn:import:com.aplana.sbrf.taxaccounting.web.module.formtemplate.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

<ui:style>
    .title {
        font-size: 16px;
        padding: 10px;
    }
</ui:style>

<g:DockLayoutPanel unit='PX' height="100%" width="100%" ui:field="dockPanel">
    <g:north size="40">
        <g:Label styleName="{style.title}" ui:field="title" />
    </g:north>

    <g:north size="30">
        <g:HorizontalPanel>
            <t:Bar>
                <t:LeftBar>
                    <g:Button text="Сохранить" ui:field="saveButton"/>
                    <g:Button text="Сбросить" ui:field="resetButton"/>
                    <g:Button text="Отмена" ui:field="cancelButton"/>
                </t:LeftBar>
            </t:Bar>
            <t:ButtonLink text="Экспорт" ui:field="downloadFormTemplateButton"
                          title="Экспорт шаблона формы" />
            <g:FormPanel ui:field="uploadFormTemplatePanel" encoding="multipart/form-data"
                         method="post">
                <g:HorizontalPanel>
                    <g:FileUpload name="uploadFormFile" />
                    <g:SubmitButton text="Импортировать" />
                </g:HorizontalPanel>
            </g:FormPanel>
        </g:HorizontalPanel>
    </g:north>

    <g:north size="80">
        <g:ScrollPanel width="100%" ui:field="logPanel">
            <c:CellList ui:field="loggerList" />
        </g:ScrollPanel>
    </g:north>

    <g:center>
        <npui:SimpleTabPanel ui:field="tabPanel"/>
    </g:center>
</g:DockLayoutPanel>
</ui:UiBinder>