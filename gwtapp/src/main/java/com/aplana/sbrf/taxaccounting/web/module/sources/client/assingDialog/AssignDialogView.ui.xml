<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.aplana.gwt.client"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>

        .footerPanel {
            background-color: #E8E1CF;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
        }

        .typicalFormBody {
            border: solid 1px #aeaeac;
            padding: 0 5px 5px 5px;
            margin: 10px;
        }

        .marginBottom2 {
            margin-bottom: 2px;
        }

    </ui:style>


    <dw:ModalWindow ui:field="window" title="Создание назначения">
        <g:VerticalPanel width="100%" addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell>
                <g:VerticalPanel spacing="7" addStyleNames="{style.typicalFormBody}">
                    <g:Label ui:field="label" text="Будет создано назначение источников. В периоде"/>
                    <g:HorizontalPanel spacing="5" verticalAlignment="middle">
                        <g:Label text="с"/>
                        <g:ValueListBox ui:field="periodFrom" width="200px"/>
                        <w:Spinner ui:field="yearFrom" minValue="1970" maxValue="2100" width="60px" height="18px" addStyleNames="{style.marginBottom2}"/>
                        <g:Label text="по"/>
                        <g:ValueListBox ui:field="periodTo" width="200px"/>
                        <w:Spinner ui:field="yearTo" minValue="1970" maxValue="2100" width="60px" height="18px" addStyleNames="{style.marginBottom2}"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="right">
                <g:HorizontalPanel horizontalAlignment="right" width="100%" height="38px" addStyleNames="{style.footerPanel}">
                    <g:cell width="100%" horizontalAlignment="right">
                        <g:Button ui:field="okButton" text="Выполнить" width="85px" addStyleNames="{style.footerButton}"/>
                    </g:cell>

                    <g:Button ui:field="cancelButton" text="Отмена" width="85px" addStyleNames="{style.footerButton}"/>
                </g:HorizontalPanel>
            </g:cell>
        </g:VerticalPanel>

    </dw:ModalWindow>

</ui:UiBinder>