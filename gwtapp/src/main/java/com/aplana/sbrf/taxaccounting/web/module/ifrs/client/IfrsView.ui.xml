<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:rep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client"
             xmlns:fm="urn:import:com.aplana.gwt.client.form">

    <ui:style>
        .titleText {
            font-size: 14px;
            color: #636460;
        }
        .marginRight5{
            margin-right: 5px;
        }
        .filterPanel {
            padding-left: 7px;
            padding-right: 7px;
        }

        .filterWidgets {
            min-width: 150px;
        }

        .separator {
            height: 22px;
            margin-left: 5px;
            margin-right: 9px;
            border-right: 1px solid #aeaeac;
        }

        .horSep {
            height: 0;
            margin: 0 9px 4px;
            border-top: 1px solid #aeaeac;
        }

        .panel {
            position: absolute !important;
            bottom: 0;
            left: 0;
            top: 35px;
        }

        .btnPanel {
            position: absolute !important;
            padding-left: 10px;
            height: 23px;
            top: 6px;
        }

        .table {
            position: absolute !important;
            bottom: 30px;
            right: 10px;
            left: 10px;
            top: 35px;
        }

        .tableBG {
            background-color: white;
            border: 1px solid #6F6F6F;
        }

        .pager {
            position: absolute;
            bottom: 0;
            right: 0;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <g:Label text="Налог на прибыль" addStyleNames="{style.titleText}, {style.marginRight5}" />
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Отчетность МСФО" />
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="5" height="33px" width="50%" addStyleNames="{style.filterPanel}" verticalAlignment="middle">

                    <g:Label width="65px" text="Период:"/>
                    <g:cell width="100%">
                        <rep:PeriodPickerPopupWidget width="100%" ui:field="periodPickerPopup" multiselect="false"
                                                     addStyleNames="{style.filterWidgets}"/>
                    </g:cell>

                    <g:HTML addStyleNames="{style.separator}"/>
                    <g:Button title="Найти" width="70px" text="Найти" ui:field="search"/>
                </g:HorizontalPanel>
                <g:Label addStyleNames="{style.horSep}"/>
                <g:HTMLPanel addStyleNames="{style.panel}" width="100%"  ui:field="htmlPanel">
                    <g:HorizontalPanel addStyleNames="{style.btnPanel}">
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <style:LinkButton ui:field="create" text="Создать отчетность"
                                              img="resources/img/add.png" title="Создание отчетности для МСФО"/>
                        </style:LeftBar>
                    </g:HorizontalPanel>
                    <g:ResizeLayoutPanel addStyleNames="{style.table}" ui:field="tablePanel">
                        <style:GenericDataGrid ui:field="table" height="100%" width="100%"/>
                    </g:ResizeLayoutPanel>
                    <pager:FlexiblePager ui:field="pager" location="CENTER"
                                         showFastForwardButton="false" fastForwardRows="0"
                                         showLastPageButton="true" styleName="{style.pager}" type="ifrs"/>
                </g:HTMLPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>
