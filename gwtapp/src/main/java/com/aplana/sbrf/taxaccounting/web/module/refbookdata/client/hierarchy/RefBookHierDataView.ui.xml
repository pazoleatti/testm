<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:fm="urn:import:com.aplana.gwt.client.form"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:rb="urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client"
        >
    <ui:style>
        .titleText {
            font-size: 14px !important;
            color: #636460;
            white-space: nowrap;
        }

        .titleText div {
            font-size: 14px !important;
        }

        .btnPanel {
            height: 30px;
            padding-left: 10px;
        }

        .btnPanel td {
            vertical-align: middle !important;
        }

        .splitter {
            position: absolute !important;
            bottom: 0;
            right: 0;
            left: 0;
            top: 34px;
        }

        .marginRight5 {
            margin-right: 5px;
        }

        .horSep {
            height: 0;
            margin-top: 2px;
            border-top: 1px solid #aeaeac;
        }

    </ui:style>


    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <style:LinkAnchor title="Перейти к списку справочников" text="Справочники"
                                              href="#!refbooklist" disableImage="true"
                                              addStyleNames="{style.titleText}, {style.marginRight5}"/>
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label ui:field="titleDesc"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>

                <g:HorizontalPanel spacing="4" addStyleNames="{style.btnPanel}">
                    <style:LinkButton title="Добавить строку" text="Добавить строку" ui:field="addRow"
                                      img="resources/img/row-add.png" addStyleNames="{style.marginRight5}"/>
                    <style:LinkButton title="Удалить строку" text="Удалить строку" ui:field="deleteRow"
                                      img="resources/img/row-delete.png" addStyleNames="{style.marginRight5}"/>
                    <g:Label wordWrap="false" text="Дата актуальности: "/>
                    <d:DateMaskBoxPicker ui:field="relevanceDate"/>
                </g:HorizontalPanel>

                <g:Label addStyleNames="{style.horSep}"/>

                <g:SplitLayoutPanel addStyleNames="{style.splitter}">
                    <g:center>
                        <g:HTMLPanel width="100%" height="100%">
                            <rb:RefBookTreePickerView ui:field="refbookDataTree"/>
                        </g:HTMLPanel>
                    </g:center>
                    <g:east size="500">
                        <g:SimplePanel ui:field="contentPanel"/>
                    </g:east>
                </g:SplitLayoutPanel>


            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>