<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dw="urn:import:com.aplana.gwt.client"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'
        >

    <ui:style>
        .separator {
            height: 78px;
            margin: 0 9px 0 15px;
            border-right: 1px solid #aeaeac;
        }

        .btnFind {
            margin-left: 6px;
            margin-right: 15px;
        }

        .labelBlockMargin {
            margin-right: 5px;
        }

        .FirstlabelBlockMargin {
            margin-right: 5px;
        }

        .marginTop5 {
            margin-top: 5px;
        }

        .nalogType {
            margin-left:  -1px;
        }

        .borderCollapse{
            border-collapse: collapse;
        }
    </ui:style>

    <g:HorizontalPanel width="100%" verticalAlignment="middle" addStyleNames="{style.marginTop5}">

        <g:VerticalPanel spacing="0" horizontalAlignment="right" verticalAlignment="middle" width="100%" addStyleNames="{style.FirstlabelBlockMargin}">
            <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="245px">
                <g:cell horizontalAlignment="right" width="95px">
                    <g:Label text="От даты:" wordWrap="false" addStyleNames="{style.labelBlockMargin}"/>
                </g:cell>
                <d:DateMaskBoxPicker ui:field="fromSearchDate" width="148px" canBeEmpty="true"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="245px">
                <g:cell horizontalAlignment="right" width="95px">
                    <g:Label text="По дату:" wordWrap="false" addStyleNames="{style.labelBlockMargin}"/>
                </g:cell>
                <d:DateMaskBoxPicker ui:field="toSearchDate" width="148px" canBeEmpty="true"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="245px">
                <g:cell horizontalAlignment="right" width="95px">
                    <g:Label text="Вид налога:" wordWrap="false" addStyleNames="{style.labelBlockMargin}"/>
                </g:cell>
                <g:ValueListBox ui:field="taxType" addStyleNames="{style.nalogType}" height="22px" width="149px"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>

        <g:cell width="49%">
            <g:VerticalPanel spacing="0" width="100%">
                <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="100%">
                    <g:cell horizontalAlignment="right" width="135px">
                        <g:Label  text="Подразделение:" addStyleNames="{style.labelBlockMargin}"/>
                    </g:cell>
                    <g:TextBox ui:field="departmentName" width="100%"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="100%">
                    <g:cell horizontalAlignment="right" width="135px">
                        <g:Label  text="Пользователь:" addStyleNames="{style.labelBlockMargin}"/>
                    </g:cell>

                    <r:RefBookPickerWidget ui:field="user" attributeIdInt="652" isHierarchical="false" width="100%"
                                           multiSelect="true"/>
                </g:HorizontalPanel>
                <g:cell height="25px">
                    <g:HorizontalPanel spacing="2"  verticalAlignment="middle" width="100%">
                        <g:cell horizontalAlignment="right" width="135px" >
                            <g:Label text="Период:" addStyleNames="{style.labelBlockMargin}"/>
                        </g:cell>
                        <g:TextBox ui:field="reportPeriodName" width="100%"/>
                    </g:HorizontalPanel>
                </g:cell>
            </g:VerticalPanel>
        </g:cell>

        <g:cell width="50%">
            <g:VerticalPanel spacing="0" width="100%" height="78px">
                <g:cell  height="28px">
                    <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="100%" addStyleNames="{style.borderCollapse}">
                        <g:cell horizontalAlignment="right" width="145px">
                            <g:Label text="Тип формы:" addStyleNames="{style.labelBlockMargin}"/>
                        </g:cell>
                        <g:cell height="26px">
                            <g:ValueListBox ui:field="auditFormTypeId" height="22px" width="100%"/>
                        </g:cell>

                    </g:HorizontalPanel>
                </g:cell>

                <g:cell height="26px">
                    <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="100%" addStyleNames="{style.borderCollapse}">
                        <g:cell horizontalAlignment="right" width="145px">
                                <g:Label ui:field="formKindDecTypeLabel" text="Тип нал. формы:" visible="false"
                                         addStyleNames="{style.labelBlockMargin}"/>
                        </g:cell>

                        <dw:ListBoxWithTooltip ui:field="declarationTypeId" height="22px" width="100%"
                                               showTooltip="true" visible="false"/>

                        <r:RefBookPickerWidget ui:field="formDataKind" attributeIdInt="837" visible="false" width="100%"
                                               isHierarchical="false" multiSelect="true" searchEnabled="false"/>

                    </g:HorizontalPanel>
                </g:cell>

                <g:cell height="24px">
                    <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="100%" addStyleNames="{style.borderCollapse}">
                        <g:cell horizontalAlignment="right"  width="145px">
                            <g:Label ui:field="formTypeLabel" text="Вид нал. формы:" visible="false" addStyleNames="{style.labelBlockMargin}"/>
                        </g:cell>
                        <r:RefBookPickerWidget ui:field="formTypeId" attributeIdInt="835" visible="false" width="100%"
                                               isHierarchical="false" multiSelect="true"/>
                    </g:HorizontalPanel>
                </g:cell>
            </g:VerticalPanel>
        </g:cell>

        <g:cell width="18px" horizontalAlignment="right">
            <g:HTML addStyleNames="{style.separator}"/>
        </g:cell>
        <g:cell width="71px">
            <g:Button ui:field="search" text="Найти" addStyleNames="{style.btnFind}"/>
        </g:cell>
    </g:HorizontalPanel>

</ui:UiBinder>