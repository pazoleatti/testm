<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:n="urn:import:com.aplana.sbrf.taxaccounting.web.widget.newdepartmentpicker">

    <ui:style>

        .titleText{
            font-size: 16px;
        }

        .titlePanel{
            padding-left: 10px
        }
        .lable{
            margin-bottom: 2px
        }
    </ui:style>

    <g:VerticalPanel>
        <g:cell height="50px">
            <g:HorizontalPanel>
                <g:cell>
                    <g:VerticalPanel width="200px" addStyleNames="{style.titlePanel}">
                        <g:cell height="30px">
                            <g:Label styleName="{style.titleText}">Журнал аудита</g:Label>
                        </g:cell>
                        <g:cell>
                            <g:HorizontalPanel>
                                <g:Label width="30px" text="От" />
                                <d:CustomDateBox ui:field="fromSearchDate"/>
                            </g:HorizontalPanel>
                        </g:cell>
                        <g:cell>
                            <g:HorizontalPanel>
                                <g:Label width="30px" text="до" />
                                <d:CustomDateBox ui:field="toSearchDate" />
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:VerticalPanel>
                </g:cell>


                <g:cell width="250px">
                    <g:VerticalPanel>
                        <g:cell verticalAlignment="bottom">
                            <g:VerticalPanel>
                                <g:Label width="200px" text="Вид налога"/>
                                <g:ValueListBox width="200px" ui:field="formDataTaxType" />
                            </g:VerticalPanel>
                        </g:cell>
                        <g:cell verticalAlignment="bottom">
                            <g:VerticalPanel>
                                <g:Label width="200px" text="Тип формы"/>
                                <g:ValueListBox width="200px" ui:field="formType" />
                            </g:VerticalPanel>
                        </g:cell>
                    </g:VerticalPanel>
                </g:cell>
                <g:cell width="250px">
                    <g:VerticalPanel>
                        <g:cell>
                            <g:VerticalPanel ui:field="reportPeriodPanel">
                                <g:Label width="200px" text="Период" />
                            </g:VerticalPanel>
                        </g:cell>

                        <g:cell>
                            <g:VerticalPanel ui:field="formKindPanel" visible="false">
                                <g:Label width="200px" text="Тип налоговой формы"/>
                                <g:ValueListBox width="200px" ui:field="formKind" />
                            </g:VerticalPanel>
                        </g:cell>
                    </g:VerticalPanel>
                </g:cell>
                <g:cell width="250px">
                    <g:VerticalPanel>
                        <g:cell>
                            <g:VerticalPanel>
                                <g:Label width="200px" text="Подразделение" />
                                <n:NewDepartmentPicker ui:field="departmentSelectionTree" header="Выберите подразделение" withCheckBox="false"/>
                            </g:VerticalPanel>
                        </g:cell>
                        <g:cell width="250px">
                            <g:VerticalPanel ui:field="formTypePanel" visible="false">
                                <g:Label text="Вид налоговой формы" styleName="{style.lable}"/>
                                <style:ListBoxWithTooltip width="200px" ui:field="formTypeId" showTooltip="true"/>
                            </g:VerticalPanel>
                        </g:cell>
                    </g:VerticalPanel>
                </g:cell>
                <g:cell width="250px">
                    <g:VerticalPanel>
                        <g:cell>
                            <g:VerticalPanel>
                                <g:Label width="200px" text="Пользователь" styleName="{style.lable}"/>
                                <g:ValueListBox width="200px" ui:field="userId" />
                            </g:VerticalPanel>
                        </g:cell>
                        <g:cell>
                            <g:VerticalPanel ui:field="declarationTypePanel" visible="false">
                                <g:Label text="Вид декларации" styleName="{style.lable}"/>
                                <style:ListBoxWithTooltip width="200px" ui:field="declarationTypeId" showTooltip="true"/>
                            </g:VerticalPanel>
                        </g:cell>
                    </g:VerticalPanel>
                </g:cell>
                <g:cell>
                    <g:VerticalPanel>
                        <g:Label height="20px" text="Дата архивации: " />
                        <style:ButtonLink  text="Выгрузить в xlsx" ui:field="printButton" img="resources/img/printer-16.png"
                                           title="Выгрузка отчета в excel"/>
                        <g:cell height="50px"  verticalAlignment="bottom">
                            <g:HorizontalPanel>
                                <g:cell>
                                    <style:Bar>
                                        <style:LeftBar>
                                            <g:Button ui:field="search">Поиск</g:Button>
                                            <g:Button ui:field="archive">Архивировать</g:Button>
                                        </style:LeftBar>
                                    </style:Bar>
                                </g:cell>
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:VerticalPanel>
                </g:cell>
            </g:HorizontalPanel>
        </g:cell>

    </g:VerticalPanel>

</ui:UiBinder>