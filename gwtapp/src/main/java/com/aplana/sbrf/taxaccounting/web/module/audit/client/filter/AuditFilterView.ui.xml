<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dw="urn:import:com.aplana.gwt.client"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:n="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'
             xmlns:rep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client">

    <ui:style>
        .separator {
            height: 78px;
            margin: 0 9px 0 15px;
            border-right: 1px solid #aeaeac;
        }

        .btnFind {
            margin-left: 6px;
            margin-right: 15px;
        }

        .labelBlockMargin {
            margin-right: 5px;

        }

        .FirstlabelBlockMargin {
            margin-right: 5px;

        }

        .nalogType{
            margin-right: -1px;
            margin-left:  -1px;
        }
    </ui:style>

    <g:HorizontalPanel width="100%" verticalAlignment="middle">
        <g:HorizontalPanel>
            <g:cell verticalAlignment="middle">
                <g:VerticalPanel horizontalAlignment="right" verticalAlignment="middle"
                                 addStyleNames="{style.FirstlabelBlockMargin}">
                    <g:cell height="26px">
                        <g:Label text="С:" width="70px"/>
                    </g:cell>
                    <g:cell height="26px">
                        <g:Label text="По:" width="70px"/>
                    </g:cell>
                    <g:cell height="26px">
                        <g:Label text="Вид налога:" width="70px"/>
                    </g:cell>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="left" verticalAlignment="middle" width="150px">
                <g:VerticalPanel width="150px" verticalAlignment="middle">
                    <g:cell height="26px">
                        <d:DateMaskBoxPicker ui:field="fromSearchDate" width="148px"/>
                    </g:cell>
                    <g:cell height="26px">
                        <d:DateMaskBoxPicker ui:field="toSearchDate" width="148px"/>
                    </g:cell>
                    <g:cell height="26px">
                        <g:ValueListBox ui:field="taxType" addStyleNames="{style.nalogType}" width="150px"/>
                    </g:cell>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="left" width="150px">
                <g:VerticalPanel horizontalAlignment="right" verticalAlignment="middle"
                                 addStyleNames="{style.labelBlockMargin}">
                    <g:cell height="26px">
                        <g:Label width="130px" text="Подразделение:"/>
                    </g:cell>
                    <g:cell height="26px">
                        <g:Label width="130px" text="Пользователь:"/>
                    </g:cell>
                    <g:cell height="26px">
                        <g:Label width="130px" text="Период:"/>
                    </g:cell>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="left" width="40%">
                <g:VerticalPanel verticalAlignment="middle" width="100%">
                    <g:cell height="26px">
                        <n:DepartmentPickerPopupWidget ui:field="departmentSelectionTree"
                                                       header="Выберите подразделение" multiselection="false"
                                                       modal="true" width="100%"/>
                    </g:cell>
                    <g:cell height="26px">
                        <r:RefBookMultiPickerModalWidget ui:field="user" width="100%" attributeIdInt="652" modal="true"
                                                    multiSelect="true"/>
                    </g:cell>
                    <g:cell height="26px">
                        <rep:PeriodPickerPopupWidget ui:field="reportPeriodIds" multiselect="true" width="100%"/>
                    </g:cell>

                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="left" width="60%">
                <g:VerticalPanel width="100%">
                    <g:HorizontalPanel width="100%" verticalAlignment="middle">
                        <g:cell horizontalAlignment="right" height="26px">
                            <g:Label width="180px" text="Категория формы:" addStyleNames="{style.labelBlockMargin}"/>
                        </g:cell>
                        <g:cell width="100%" height="26px">
                            <g:ValueListBox ui:field="auditFormTypeId" width="100%"/>
                        </g:cell>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel width="100%" visible="false" ui:field="formPanel">
                        <g:cell>
                            <g:VerticalPanel horizontalAlignment="right" verticalAlignment="middle"
                                             addStyleNames="{style.labelBlockMargin}">
                                <g:cell height="26px">
                                    <g:Label width="180px" text="Вид налоговой формы:"/>
                                </g:cell>
                                <g:cell height="26px">
                                    <g:Label width="180px" text="Тип налоговой формы:"/>
                                </g:cell>
                            </g:VerticalPanel>
                        </g:cell>
                        <g:cell width="100%">
                            <g:VerticalPanel verticalAlignment="middle">
                                <g:cell height="26px">
                                    <g:ValueListBox ui:field="formKind" width="100%"
                                                    addStyleNames="{style.labelBlockMargin}"/>
                                </g:cell>
                                <g:cell height="26px">
                                    <dw:ListBoxWithTooltip width="100%" ui:field="formTypeId" showTooltip="true"/>
                                </g:cell>
                            </g:VerticalPanel>
                        </g:cell>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel width="100%" verticalAlignment="middle" visible="false"
                                       ui:field="declarationTypePanel">
                        <g:cell horizontalAlignment="right" height="26px">
                            <g:Label width="180px" addStyleNames="{style.labelBlockMargin}" text="Вид декларации:"/>
                        </g:cell>
                        <g:cell height="26px" width="100%">
                            <dw:ListBoxWithTooltip width="100%" ui:field="declarationTypeId" showTooltip="true"/>
                        </g:cell>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:cell>
        </g:HorizontalPanel>
        <g:cell width="18px" horizontalAlignment="right">
            <g:HTML addStyleNames="{style.separator}"/>
        </g:cell>
        <g:cell width="71px">
            <g:VerticalPanel>
                <g:Label height="20px" text="Дата архивации: " visible="false"/>
                <g:Button ui:field="search" addStyleNames="{style.btnFind}">Поиск</g:Button>
            </g:VerticalPanel>
        </g:cell>
    </g:HorizontalPanel>

</ui:UiBinder>