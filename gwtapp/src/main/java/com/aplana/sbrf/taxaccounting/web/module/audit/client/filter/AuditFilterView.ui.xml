<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dw="urn:import:com.aplana.gwt.client"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:r='urn:import:com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.client'
        >

    <ui:style>
        .separator {
            height: 56px;
            margin: 0 9px 0 15px;
            border-right: 1px solid #aeaeac;
        }

        .btnFind {
            margin-left: 6px;
            margin-right: 15px;
        }

        .labelBlockMargin {
            margin-right: 5px;
        }

        .FirstlabelBlockMargin {
            margin-right: 5px;
        }

        .marginTop5 {
            margin-top: 5px;
        }

        .nalogType {
            margin-left:  -1px;
        }

        .borderCollapse{
            border-collapse: collapse;
        }

        .searchCriteria {
            font-weight:bold;
        }
    </ui:style>

    <g:HorizontalPanel width="100%" verticalAlignment="middle" addStyleNames="{style.marginTop5}">

        <g:VerticalPanel spacing="0" horizontalAlignment="right" verticalAlignment="middle" width="245px" addStyleNames="{style.FirstlabelBlockMargin}">
            <g:HorizontalPanel spacing="2" verticalAlignment="middle">
                <g:cell horizontalAlignment="right" width="95px">
                    <g:Label text="От даты:" wordWrap="false" addStyleNames="{style.labelBlockMargin}"/>
                </g:cell>
                <d:DateMaskBoxPicker ui:field="fromSearchDate" width="148px"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="245px">
                <g:cell horizontalAlignment="right" width="95px">
                    <g:Label text="До даты:" wordWrap="false" addStyleNames="{style.labelBlockMargin}"/>
                </g:cell>
                <d:DateMaskBoxPicker ui:field="toSearchDate" width="148px"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>

        <g:cell>
            <g:VerticalPanel spacing="0" width="300px" horizontalAlignment="left">
                <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="100%">
                    <g:TextBox ui:field="filter" width="500px"/>
                    <g:cell>
                        <g:VerticalPanel spacing="0" width="150px">
                            <g:Button ui:field="search" text="Найти" addStyleNames="{style.btnFind}"/>
                        </g:VerticalPanel>
                    </g:cell>
                </g:HorizontalPanel>
                <g:HorizontalPanel spacing="2" verticalAlignment="middle" width="500px">
                    <g:cell horizontalAlignment="left" width="200px">
                        <g:CheckBox ui:field="searchResults" text="Искать в найденном"/>
                    </g:cell>

                    <g:cell horizontalAlignment="right" width="115px">
                        <g:Label text="Искать по полям:" addStyleNames="{style.labelBlockMargin}"/>
                    </g:cell>

                    <r:RefBookPickerWidget ui:field="auditFieldList" title="Список полей" attributeIdInt="1050" visible="true" width="100%"
                                           isHierarchical="false" multiSelect="true" searchEnabled="false" versionEnabled="false"/>

                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:cell>

        <g:cell spacing="0" width="18px" horizontalAlignment="right">
            <g:HTML addStyleNames="{style.separator}"/>
        </g:cell>

        <g:cell width="100%">
            <g:VerticalPanel width="300px" horizontalAlignment="left">
                <g:cell width="200px">
                    <g:Label text="Критерии поиска:" addStyleNames="{style.searchCriteria}"/>
                </g:cell>
                <g:cell width="200px">
                    <g:Label ui:field="searchCriteria" text="&nbsp;" addStyleNames="{style.marginTop5}"/>
                </g:cell>
            </g:VerticalPanel>
        </g:cell>
    </g:HorizontalPanel>

</ui:UiBinder>