<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
	xmlns:cm='urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror.client'
    xmlns:fileuplod='urn:import:com.aplana.sbrf.taxaccounting.web.widget.fileupload'
	xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>

	<ui:style>
		.title {
			font-size: 16px;
			margin: 10px;
		}
	</ui:style>


	<g:DockLayoutPanel unit='PX' height="100%" width="100%"
		ui:field="dockPanel">
		<g:north size="40">
			<g:Label styleName="{style.title}" ui:field="title" text="Декларация" />
		</g:north>

		<g:north size="30">
			<g:HorizontalPanel>
                <t:Bar>
				    <t:LeftBar>
					    <g:Button text="Сохранить" ui:field="saveButton" />
					    <g:Button text="Сбросить" ui:field="resetButton" />
					    <g:Button text="Отмена" ui:field="cancelButton" />
				    </t:LeftBar>
			    </t:Bar>
                <style:LinkAnchor text="Экспорт" ui:field="downloadDectButton"
                                  title="Экспорт шаблона деклараций" />
                <g:FormPanel ui:field="uploadDectForm" encoding="multipart/form-data"
                             method="post">
                    <g:HorizontalPanel>
                        <g:FileUpload name="uploadDectFile" />
                        <g:SubmitButton text="Импортировать" />
                    </g:HorizontalPanel>
                </g:FormPanel>
            </g:HorizontalPanel>
		</g:north>


		<g:center>
			<g:DockLayoutPanel unit='PX' height="100%" width="100%">
				<g:north size="200">
					<g:VerticalPanel>
						<g:Label height="30px" text="Список атрибутов:" />

						<g:HorizontalPanel height="30px">
							<g:Label width="150px">Версия</g:Label>
							<g:TextBox width="300px" ui:field="version" />
						</g:HorizontalPanel>

						<g:HorizontalPanel height="30px">
							<g:Label width="150px">Активный</g:Label>
							<g:CheckBox ui:field="active" />
						</g:HorizontalPanel>

                        <g:HorizontalPanel height="30px">
                            <g:Label width="150px">Загрузить jrxml файл</g:Label>
                            <g:FormPanel ui:field="uploadJrxmlForm" encoding="multipart/form-data" method="post">
                                <g:FileUpload name="uploadJrxmlFile" ui:field="uploadJrxml"/>
                            </g:FormPanel>
                        </g:HorizontalPanel>

                        <g:HorizontalPanel height="30px">
                            <g:Label width="150px">Загрузить файл xsd</g:Label>
                            <fileuplod:FileUploadWidget ui:field="fileUploader"/>
                        </g:HorizontalPanel>


						<g:Button ui:field="downloadJrxmlButton">Скачать jrxml файл</g:Button>
						<g:HTML height="15px" />


						<g:Label width="150px">Создать скрипт</g:Label>
					</g:VerticalPanel>
				</g:north>
				<g:center>

					<cm:CodeMirror ui:field="createScript" />

				</g:center>
			</g:DockLayoutPanel>

		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>