<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cm='urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror.client'
             xmlns:fileuplod='urn:import:com.aplana.sbrf.taxaccounting.web.widget.fileupload'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:fm="urn:import:com.aplana.gwt.client.form"
             xmlns:w='urn:import:com.aplana.gwt.client.mask.ui'>

    <ui:style>
        .header {
            font-size: 14px;
            color:  #636460;
            white-space: nowrap;
        }

        .header div {
            font-size: 14px !important;
        }

        .btnPanel {
            height: 30px;
        }

        .btnPanel td {
            vertical-align: middle !important;
        }

        .marginLeft {
            margin-left: 5px;
        }

        .btnPanel2 td {
            vertical-align: middle !important;
        }

        .table {
            position: absolute !important;
            bottom: 0;
            right: 10px;
            left: 1px;
            top: 140px;
            height: inherit !important;
            border-top: 1px solid #aeaeac;
        }

        .separator {
            height: 90px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }

        .horSep {
            height: 1px;
            margin: 4px 9px;
            border-top: 1px solid #aeaeac;
        }
        .upload {
            margin-top: 25px;
            margin-left: 25px;
        }
    </ui:style>

    <ui:style field="lock">
        .lockInformation {
            height: 25px;   /*@see com.aplana.sbrf.taxaccounting.web.module.formtemplate.client.FormTemplateMainView.LOCK_INFO_BLOCK_HEIGHT*/
            line-height: 24px;
            background: #FFDC82;
            padding-left: 15px;
            margin: 2px;
            font-size: 14px;
            border: 1px solid #DBDBDB;

            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar childValign="middle" height="100%">
                            <style:LinkAnchor ui:field="returnAnchor" title="Перейти к списку версий макета налоговой формы"
                                              text="Версии макета" addStyleNames="{style.header}" disableImage="true"/>
                            <g:Label text="—" addStyleNames="{style.header}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar childValign="middle" height="100%">
                            <style:LinkAnchor text="Экспорт макета" ui:field="downloadDectButton" img="resources/img/down_cc.png"
                                              title="Экспорт макета деклараций"/>
                            <fileuplod:FileUploadWidget ui:field="uploadDectFile" text="Импорт макета"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label ui:field="title" text="Декларация"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="5" addStyleNames="{style.btnPanel}"  width="100%">
                    <g:cell>
                        <style:LeftBar childValign="middle" marginRight="10" addStyleNames="{style.btnPanel}">
                            <g:Button text="Сохранить" ui:field="saveButton"/>
                            <g:Button text="Сбросить" ui:field="resetButton"/>
                            <g:Button text="Отменить" ui:field="cancelButton"/>
                            <g:Button text="Ввести в действие" ui:field="activateVersion"/>
                        </style:LeftBar>
                    </g:cell>
                    <g:cell horizontalAlignment="right">
                        <style:RightBar addStyleNames="{style.btnPanel}">
                            <style:LinkButton text="История изменений" ui:field="historyVersion"/>
                        </style:RightBar>
                    </g:cell>
                </g:HorizontalPanel>

                <g:Label ui:field="lockInformation" visible="false" addStyleNames="{lock.lockInformation}"/>

                <g:Label addStyleNames="{style.horSep}"/>

                <g:HorizontalPanel addStyleNames="{style.marginLeft}">
                    <g:VerticalPanel addStyleNames="{style.btnPanel2}">
                        <g:cell>
                            <g:HorizontalPanel>
                                <g:cell>
                                    <g:Label width="150px" text="Наименование декларации"/>
                                </g:cell>
                                <g:cell>
                                    <g:TextBox width="300px" ui:field="decName"/>
                                </g:cell>
                            </g:HorizontalPanel>
                        </g:cell>
                        <g:HorizontalPanel height="30px">
                            <g:Label width="150px" text="Период актуальности с"/>
                            <g:HorizontalPanel width="300px">
                                <w:YearMaskBox ui:field="versionDateBegin" width="134px" mayBeNull="true"/>
                                <g:cell horizontalAlignment="center">
                                    <g:Label width="30px" text="по"/>
                                </g:cell>
                                <w:YearMaskBox ui:field="versionDateEnd" width="134px" mayBeNull="true"/>
                            </g:HorizontalPanel>
                        </g:HorizontalPanel>

                    </g:VerticalPanel>

                    <g:cell verticalAlignment="middle">
                        <g:HTML addStyleNames="{style.separator}"/>
                    </g:cell>

                    <g:HorizontalPanel addStyleNames="{style.btnPanel2}">
                        <g:VerticalPanel addStyleNames="{style.upload}" height="30px">
                            <g:cell>
                                <fileuplod:FileUploadWidget ui:field="uploadXsdFile" extension="xsd" text="Загрузить xsd"/>
                            </g:cell>
                            <g:cell>
                                <fileuplod:FileUploadWidget ui:field="uploadJrxmlFile" extension="jrxml" text="Загрузить jrxml"/>
                            </g:cell>
                        </g:VerticalPanel>
                        <g:VerticalPanel addStyleNames="{style.upload}" height="30px">
                            <g:cell>
                                <style:LinkAnchor text="Скачать xsd" ui:field="downloadXsd" img="resources/img/down_cc.png"
                                                  addStyleNames="{style.marginLeft}" title="Скачать xsd"/>
                            </g:cell>
                            <g:cell>
                                <style:LinkAnchor text="Скачать jrxml" ui:field="downloadJrxmlButton" img="resources/img/down_cc.png"
                                                  title="Скачать jrxml файл" addStyleNames="{style.marginLeft}"/>
                            </g:cell>
                        </g:VerticalPanel>
                    </g:HorizontalPanel>
                </g:HorizontalPanel>

                <cm:CodeMirror ui:field="createScript" addStyleNames="{style.table}"/>

            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>