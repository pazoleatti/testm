<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:c='urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror'>

<ui:style>
    @external .CodeMirror-scroll;
    .CodeMirror-scroll {
        border-top: 1px solid #92C1F0;
    }
     @external .CodeMirror-gutter;
    .CodeMirror-gutter {
        border-right: 1px solid #92C1F0;
    }
</ui:style>

<g:HTMLPanel height="100%" width="100%">
    <g:Label text="Шаблон декларации" ui:field="titleLabel"/>
    <t:LeftBar height="50px">
        <g:Button text="Сохранить" ui:field="saveButton"/>
        <g:Button text="Сбросить" ui:field="resetButton"/>
        <g:Button text="Отмена" ui:field="cancelButton"/>
    </t:LeftBar>

    <g:Label height="30px" text="Список атрибутов"/>

    <g:HorizontalPanel height="30px">
        <g:Label width="150px">Тип налога</g:Label>
        <g:ValueListBox width="200px" ui:field="taxType"/>
    </g:HorizontalPanel>

    <g:HorizontalPanel height="30px">
        <g:Label width="150px">Версия</g:Label>
        <g:TextBox width="300px" ui:field="version"/>
    </g:HorizontalPanel>

    <g:HorizontalPanel height="25px">
        <g:Label width="150px">Активный</g:Label>
        <g:CheckBox ui:field="active"/>
    </g:HorizontalPanel>

    <g:Button ui:field="showJasperButton">Просмотреть Jasper Report</g:Button>
    <g:HTML height="15px"/>

    <g:HorizontalPanel height="30px">
        <g:Label width="150px">Загузить jrxml файл</g:Label>
        <g:FormPanel ui:field="form"/>
    </g:HorizontalPanel>

    <g:Label width="150px">Создать скрипт</g:Label>
    <c:CodeMirror ui:field="createScript"/>

</g:HTMLPanel>
</ui:UiBinder>