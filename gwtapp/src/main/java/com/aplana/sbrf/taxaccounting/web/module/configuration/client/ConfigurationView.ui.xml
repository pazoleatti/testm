<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">

	<g:DockLayoutPanel unit='PX' height="100%" width="100%">

		<g:north size="100">
			<g:HorizontalPanel>
				<g:cell>
					<g:Button ui:field="saveButton" text="Сохранить" />
				</g:cell>
				<g:cell>
					<g:Button ui:field="reloadButton" text="Отмена" />
				</g:cell>
			</g:HorizontalPanel>
		</g:north>

		<g:center>
			<g:ResizeLayoutPanel height="100%" width="100%">
				<style:GenericDataGrid ui:field="configTable" />
			</g:ResizeLayoutPanel>
		</g:center>

	</g:DockLayoutPanel>

</ui:UiBinder>