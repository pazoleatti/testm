<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>
        .header {
            font-size: 14px;
            color: #636460;
        }
        .btnPanel {
            height: 30px;
        }
        .confInput td {
            background-color: white;
            vertical-align: top;
            generic-family: monospace;
        }
        .confInput textarea {
            width: 100%;
            outline: none;
            resize: vertical;
            overflow: auto;
            border: none;
        }
        .table {
            position: absolute !important;
            bottom: 0;
            right: 0;
            left: 0;
            top: 35px;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar childValign="middle" height="100%">
                            <g:Label text="Администрирование" addStyleNames="{style.header}"/>
                            <g:Label text="—" addStyleNames="{style.header}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Конфигурационные параметры"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="5" verticalAlignment="middle" addStyleNames="{style.btnPanel}">
                    <g:cell width="100%">
                        <g:HorizontalPanel>
                            <style:LinkButton ui:field="commonLink" text="Общие параметры" visible="false"/>
                            <style:LinkButton ui:field="formLink" text="Загрузка налоговых форм"/>
                        </g:HorizontalPanel>
                    </g:cell>
                    <g:cell>
                        <style:LinkButton ui:field="addLink" text="Добавить" img="resources/img/row-add.png"/>
                    </g:cell>
                    <g:cell>
                        <style:LinkButton ui:field="delLink" text="Удалить" img="resources/img/row-delete.png"/>
                    </g:cell>
                    <g:cell>
                        <g:Button ui:field="saveButton" text="Сохранить"/>
                    </g:cell>
                    <g:cell>
                        <g:Button ui:field="cancelButton" text="Отменить"/>
                    </g:cell>
                </g:HorizontalPanel>
                <g:ResizeLayoutPanel ui:field="commonPanel" addStyleNames="{style.table}">
                    <style:GenericDataGrid width="100%" height="100%" ui:field="commonTable"/>
                </g:ResizeLayoutPanel>
                <g:ResizeLayoutPanel ui:field="formPanel" addStyleNames="{style.table}" visible="false">
                    <style:GenericDataGrid width="100%" height="100%" ui:field="formTable"/>
                </g:ResizeLayoutPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>