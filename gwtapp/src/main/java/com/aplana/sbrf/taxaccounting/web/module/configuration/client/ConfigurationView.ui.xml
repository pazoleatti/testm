<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:fm="urn:import:com.aplana.gwt.client.form">

    <ui:style>
        .header {
            font-size: 14px;
            color: #636460;
        }
        .btnPanel {
            height: 30px;
        }
        .confInput td {
            background-color: white;
            vertical-align: top;
            generic-family: monospace;
        }
        .confInput textarea {
            width: 100%;
            outline: none;
            resize: vertical;
            overflow: auto;
            border: none;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar childValign="middle" height="100%">
                            <g:Label text="Администрирование" addStyleNames="{style.header}"/>
                            <g:Label text="—" addStyleNames="{style.header}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Конфигурационные параметры"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="5" verticalAlignment="middle" addStyleNames="{style.btnPanel}">
                    <g:Button ui:field="saveButton" text="Сохранить"/>
                    <g:Button ui:field="reloadButton" text="Отменить"/>
                </g:HorizontalPanel>
                <g:ScrollPanel width="100%" height="100%">
                    <style:GenericCellTable width="100%" ui:field="configTable" addStyleNames="{style.confInput}"/>
                </g:ScrollPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>