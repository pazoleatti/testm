<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>
        .header {
            font-size: 14px;
            color: #636460;
        }
        .btnPanel {
            height: 30px;
        }
        .confInput td {
            background-color: white;
            vertical-align: top;
            generic-family: monospace;
        }
        .confInput textarea {
            width: 100%;
            outline: none;
            resize: vertical;
            overflow: auto;
            border: none;
        }
        .table {
            position: absolute !important;
            bottom: 0;
            right: 10px;
            left: 10px;
            top: 35px;
        }
        .mgnl {
            margin-left: 15px;
            margin-right: 5px;
        }
        .mgnr {
            margin-right: 40px;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar childValign="middle" height="100%">
                            <g:Label text="Администрирование" addStyleNames="{style.header}"/>
                            <g:Label text="—" addStyleNames="{style.header}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar marginRight="10" childValign="middle" height="100%">
                            <style:LinkButton ui:field="commonLink" text="Общие параметры" disableImage="true" visible="false"/>
                            <style:LinkButton ui:field="formLink" text="Параметры загрузки налоговых форм" disableImage="true" />
                            <style:LinkButton ui:field="emailLink" text="Электронная почта" disableImage="true" />
                            <style:LinkButton ui:field="asyncLink" text="Параметры асинхронных заданий" disableImage="true" />
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label ui:field="titleLabel" text="Конфигурационные параметры"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="5" verticalAlignment="middle" addStyleNames="{style.btnPanel}">
                    <g:cell>
                        <style:LinkButton ui:field="addLink" text="Добавить запись" img="resources/img/row-add.png"
                                          addStyleNames="{style.mgnl}"/>
                    </g:cell>
                    <g:cell>
                        <style:LinkButton enabled="false" ui:field="delLink" text="Удалить запись" img="resources/img/row-delete.png"
                                          addStyleNames="{style.mgnr}"/>
                    </g:cell>
                    <g:cell>
                        <g:Button enabled="false" ui:field="checkButton" text="Проверить"/>
                    </g:cell>
                    <g:cell>
                        <g:Button ui:field="saveButton" text="Сохранить"/>
                    </g:cell>
                    <g:cell>
                        <g:Button ui:field="cancelButton" text="Отменить"/>
                    </g:cell>
                </g:HorizontalPanel>
                <g:ResizeLayoutPanel ui:field="commonPanel" addStyleNames="{style.table}">
                    <style:GenericDataGrid width="100%" height="100%" ui:field="commonTable"/>
                </g:ResizeLayoutPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>