<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
    xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker">

    <ui:style field="css" type="com.aplana.sbrf.taxaccounting.web.module.sources.client.SourcesView.LinkStyle">
        .enabled {
            cursor: pointer;
        }
        .disabled {
            cursor: default;
        }
    </ui:style>

    <ui:style>
        .titleLabel {
            margin: 10px;
            font-size: 26px;
        }

        .searchLabel {
            margin-right: 5px;
            margin-left: 5px;
            font-weight: bold;
        }

        .taxTypePanel {
            margin-left: 30px;
        }

        .destinationLabel {
            font-weight: bold;
            text-align: center;
        }

        .sourcesTable {
            float: right;
            width: 100%;
            padding-left: 10px;
        }

        .receiversTable {
            float: left;
            width: 100%;
            padding-right: 10px;
        }
    </ui:style>

    <g:DockLayoutPanel>
        <g:north size="120">
            <g:VerticalPanel>
                <g:Label addStyleNames="{style.titleLabel}">Указание форм источников</g:Label>
                <g:HorizontalPanel height="45px">
                    <g:HorizontalPanel width="210px">
                        <g:Label addStyleNames="{style.searchLabel}">Назначение:</g:Label>
                        <g:VerticalPanel>
                            <g:Anchor ui:field="formAnchor" href="#!sources;isForm=true">Налоговые формы</g:Anchor>
                            <g:Label ui:field="formLabel">Налоговые формы</g:Label>
                            <g:Anchor ui:field="declarationAnchor" href="#!sources;isForm=false">Декларации</g:Anchor>
                            <g:Label ui:field="declarationLabel">Декларации</g:Label>
                        </g:VerticalPanel>
                    </g:HorizontalPanel>

                    <g:FlowPanel width="400px" addStyleNames="{style.taxTypePanel}">
                        <g:Label styleName="{style.searchLabel}">Вид налога</g:Label>
                        <g:ValueListBox ui:field="taxTypePicker" />
                    </g:FlowPanel>

                    <g:cell width="100px" verticalAlignment="bottom">
                        <style:LinkAnchor ui:field="assignButton" text="Назначить" />
                    </g:cell>

                    <g:cell verticalAlignment="bottom">
                        <style:LinkAnchor ui:field="cancelButton" text="Отменить назначение" />
                    </g:cell>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:north>

        <g:center>
            <g:SplitLayoutPanel>
                <g:north size="350">
                    <g:HorizontalPanel height="100%" width="100%">
                        <g:FlowPanel>
                            <g:Label text="Приёмник" addStyleNames="{style.destinationLabel}" />
                            <g:HorizontalPanel height="30px">
                                <g:cell verticalAlignment="middle">
                                    <g:Label text="Подразделение: " styleName="{style.searchLabel}" />
                                </g:cell>
                                <d:DepartmentPickerPopupWidget ui:field="departmentReceiverPicker" modal="true"
                                                               header="Выберите приёмник" multiselection="false" width="500px"/>
                            </g:HorizontalPanel>
                            <style:GenericDataGrid ui:field="formReceiversTable" width="100%" height="350px" />
                            <style:GenericDataGrid ui:field="declarationReceiversTable" width="100%" height="350px" />
                        </g:FlowPanel>
                        <g:FlowPanel>
                            <g:Label text="Источник" addStyleNames="{style.destinationLabel}" />
                            <g:HorizontalPanel height="30px">
                                <g:cell verticalAlignment="middle">
                                    <g:Label text="Подразделение: " styleName="{style.searchLabel}" />
                                </g:cell>
                                <d:DepartmentPickerPopupWidget ui:field="departmentSourcePicker" modal="true"
                                                               header="Выберите источник" multiselection="false" width="500px"/>
                            </g:HorizontalPanel>
                            <style:GenericDataGrid ui:field="sourcesTable" width="100%" height="350px" />
                        </g:FlowPanel>
                    </g:HorizontalPanel>
                </g:north>
                <g:center>
                    <style:GenericDataGrid ui:field="currentSourcesTable" width="100%" height="100%"/>
                </g:center>
            </g:SplitLayoutPanel>

        </g:center>

    </g:DockLayoutPanel>
</ui:UiBinder>