<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:com.aplana.gwt.client'
        >

    <ui:style>

        .forTree {
            border-style: none !important;
            width: 100% !important;
            height: 100% !important;
        }

        .mainVertical {
            background-color: #E8E1CF;
            width: 100%;
            height: 100%;
        }

        .forScroll {
            border-style: solid;
            border-width: 1px;
            margin: 0 10px;
            background-color: #ffffff;
            width: 600px !important;
            height: 350px !important;
        }

        .forMargin0 {
            margin: 0;
            width: 100%;
        }

        .forFind2 {
            width: 100%;
            margin-top: 8px;
        }

        .forVersion {
            margin-right: 5px;
        }

        .forCountSelected {
            font-weight: bold;
            margin: 0 20px 0 5px;
        }

        .forCancel {
            margin: 0 0 0 10px;
        }

        .selected {
            color: #000000;
            display: inline-block;
            vertical-align: middle;
            height: 16px;
        }
        .ib {
            display: inline-block;
            vertical-align: middle;
        }

    </ui:style>

    <g:FlowPanel width="200px" ui:field="wrappingPanel">
        <g:HorizontalPanel verticalAlignment="middle" height="100%" ui:field="panel">
            <g:cell width="100%">
                <g:TextBox readOnly="true" addStyleNames="{style.selected}" ui:field="selected" width="100%"/>
            </g:cell>
            <g:cell>
                <g:Button ui:field="selectButton" text="..." width="25px" addStyleNames="{style.ib}"/>
            </g:cell>
            <g:cell>
                <g:Button text="X" ui:field="clearButton" width="25px" addStyleNames="{style.ib}"/>
            </g:cell>
        </g:HorizontalPanel>
        <g:FlowPanel visible="false">
            <m:ModalWindow title="Выберите подразделение" ui:field="popupPanel">
                <g:VerticalPanel addStyleNames="{style.mainVertical}">

                    <g:HorizontalPanel spacing="10" width="100%">
                        <g:VerticalPanel width="100%">
                            <g:TextBox ui:field="filter" addStyleNames="{style.forMargin0}"/>
                            <g:HorizontalPanel addStyleNames="{style.forFind2}">
                                <g:cell horizontalAlignment="left" verticalAlignment="middle">
                                    <g:CheckBox ui:field="selectChild" text="Включая подчиненные"/>
                                </g:cell>
                                <g:cell horizontalAlignment="right" verticalAlignment="middle">
                                    <g:Label text="Дата актуальности:" wordWrap="false"
                                             addStyleNames="{style.forVersion}"/>
                                </g:cell>
                                <g:cell horizontalAlignment="right" verticalAlignment="middle">
                                    <g:ValueListBox ui:field="version" width="100%"/>
                                </g:cell>
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                        <g:Button ui:field="find" text="Найти" width="100%"/>
                    </g:HorizontalPanel>

                    <g:ScrollPanel addStyleNames="{style.forScroll}">
                        <t:DepartmentTreeWidget ui:field="tree" headerVisible="false" addStyleNames="{style.forTree}"/>
                    </g:ScrollPanel>

                    <g:HorizontalPanel spacing="10" width="100%">
                        <g:cell horizontalAlignment="left" verticalAlignment="middle">
                            <g:HorizontalPanel ui:field="itemsInfoPanel">
                                <g:Label ui:field="countItemsLabel" text="Выбрано:"/>
                                <g:Label ui:field="countItems" addStyleNames="{style.forCountSelected}"/>
                                <g:Anchor ui:field="showItemsAnchor" text="Показать выбранные" wordWrap="false"
                                          visible="false"/>
                            </g:HorizontalPanel>
                        </g:cell>
                        <g:cell horizontalAlignment="right" verticalAlignment="middle">
                            <g:HorizontalPanel>
                                <g:Button ui:field="ok" text="Выбрать"/>
                                <g:Button ui:field="cancel" text="Закрыть" addStyleNames="{style.forCancel}"/>
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:HorizontalPanel>

                </g:VerticalPanel>
            </m:ModalWindow>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>
