<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker'
    xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:m='urn:import:com.aplana.gwt.client'
    >

    <ui:style>
        .infolabel {
            margin: 5px 10px;
        }
        .forTree {
            border-style: none !important;
            width: 100% !important;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 50px;
        }

        .footerButton {
            margin:  14px 17px 14px 0px !important;
        }
    </ui:style>

	<g:FlowPanel width="200px" ui:field="wrappingPanel">
		<g:HorizontalPanel verticalAlignment="middle" height="100%" ui:field="panel">
			<g:cell width="100%">
				<g:TextBox enabled="false" ui:field="selected" width="100%" />
			</g:cell>
			<g:cell>
				<g:Button ui:field="selectButton" text="..." width="25px" />
			</g:cell>
			<g:cell>
				<g:Button text="X" ui:field="clearButton" width="25px" />
			</g:cell>
		</g:HorizontalPanel>
        <g:FlowPanel visible="false">
                <m:ModalWindow iconUrl="" title="Выберите подразделение" ui:field="popupPanel"
                               width="300px" height="300px" modal="true">
                    <g:VerticalPanel width="100%" height="100">
                        <t:DepartmentTreeWidget ui:field="tree" height="350px"
                                      headerVisible="false" styleName="{style.forTree}"/>
                        <style:Bar addStyleNames="{style.footerPanel}">
                            <style:RightBar>
                                <g:Button addStyleNames="{style.footerButton}" ui:field="ok" text="ОК"/>
                            </style:RightBar>
                        </style:Bar>
                    </g:VerticalPanel>
                </m:ModalWindow>
        </g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder>
