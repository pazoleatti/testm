<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:t="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.aplana.gwt.client"
        >

    <ui:style>
        .selected {
            color: #000000;
            border-right: 0;
            margin-top: 0;
            margin-bottom: 0;

            /*многоточие*/
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }

        .clearButton {
            border: 1px solid #009900;
            border-right-width: 0;
            border-left-width: 0;
            vertical-align: middle;
            display: block;
            margin-left: -14px;
        }

        .selectButton {
            border: 1px solid #009900;
            vertical-align: middle;
            cursor: pointer;
            display: block;
        }

    </ui:style>

    <ui:style field="modal">
        .forTree {
            border-style: none !important;
            width: 100% !important;
            height: 100% !important;
        }

        .mainVertical {
            background-color: #E8E1CF;
            width: 100%;
            height: 100%;
        }

        .forScroll {
            border: 1px solid;
            margin: 0 10px;
            background-color: #ffffff;
            width: 600px !important;
            height: 350px !important;
        }

        .forMargin0 {
            margin: 0;
        }

        .forFind2 {
            margin-top: 8px;
        }

        .forVersion {
            margin-right: 5px;
        }

        .forCountSelected {
            font-weight: bold;
            margin: 0 20px 0 5px;
        }

        .forCancel {
            margin: 0 0 0 10px;
        }

    </ui:style>

    <g:HTMLPanel ui:field="wrappingPanel">
        <g:HorizontalPanel ui:field="panel" verticalAlignment="middle" borderWidth="0">
            <g:cell width="100%">
                <g:TextBox ui:field="selected" readOnly="true" width="100%" addStyleNames="{style.selected}"/>
            </g:cell>
            <g:Image ui:field="clearButton" addStyleNames="{style.clearButton}"
                     url="resources/img/picker-icons/clear-icon-dummy.png"/>
            <g:Image ui:field="selectButton" title="Открыть для выбора" addStyleNames="{style.selectButton}"
                     url="resources/img/picker-icons/refbook-icon.png"/>
        </g:HorizontalPanel>

        <g:HTMLPanel visible="false">
            <m:ModalWindow ui:field="popupPanel">
                <g:VerticalPanel addStyleNames="{modal.mainVertical}">

                    <g:HorizontalPanel spacing="10" width="100%">
                        <g:VerticalPanel width="100%">
                            <g:TextBox ui:field="filter" width="100%" addStyleNames="{modal.forMargin0}"/>
                            <g:HorizontalPanel verticalAlignment="middle" width="100%" addStyleNames="{modal.forFind2}">
                                <g:cell horizontalAlignment="left" >
                                    <g:CheckBox ui:field="selectChild" text="Включая подчиненные"/>
                                </g:cell>
                                <g:cell horizontalAlignment="right">
                                    <g:Label text="Дата актуальности:" wordWrap="false" addStyleNames="{modal.forVersion}"/>
                                </g:cell>
                                <g:cell horizontalAlignment="right">
                                    <g:ValueListBox ui:field="version" width="100%"/>
                                </g:cell>
                            </g:HorizontalPanel>
                        </g:VerticalPanel>
                        <g:Button ui:field="find" text="Найти" width="100%"/>
                    </g:HorizontalPanel>

                    <g:ScrollPanel addStyleNames="{modal.forScroll}">
                        <t:DepartmentTreeWidget ui:field="tree" headerVisible="false" addStyleNames="{modal.forTree}"/>
                    </g:ScrollPanel>

                    <g:HorizontalPanel spacing="10" width="100%">
                        <g:cell horizontalAlignment="left" verticalAlignment="middle">
                            <g:HorizontalPanel ui:field="itemsInfoPanel">
                                <g:Label ui:field="countItemsLabel" text="Выбрано:"/>
                                <g:Label ui:field="countItems" addStyleNames="{modal.forCountSelected}"/>
                                <g:Anchor ui:field="showItemsAnchor" text="Показать выбранные" wordWrap="false"
                                          visible="false"/>
                            </g:HorizontalPanel>
                        </g:cell>
                        <g:cell horizontalAlignment="right" verticalAlignment="middle">
                            <g:HorizontalPanel>
                                <g:Button ui:field="ok" text="Выбрать"/>
                                <g:Button ui:field="cancel" text="Закрыть" addStyleNames="{modal.forCancel}"/>
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:HorizontalPanel>

                </g:VerticalPanel>
            </m:ModalWindow>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>
