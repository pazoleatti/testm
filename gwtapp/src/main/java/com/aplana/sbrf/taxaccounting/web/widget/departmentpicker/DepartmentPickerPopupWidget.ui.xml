<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:t="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.aplana.gwt.client"
        >

    <ui:style>
        .minWidthWidget {
            min-width: 100px;
        }

        .selected {
            color: #000000;
            border-right: 0;
            margin-top: 0;
            margin-bottom: 0;
            display: inline-block;
            vertical-align: middle;
            min-height: 16px;
            /*многоточие*/
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }

        .clearButton {
            border: 1px solid #009900;
            border-right-width: 0;
            border-left-width: 0;
            display: inline-block;
            vertical-align: middle;
            margin-left: -14px;
        }

        .selectButton {
            border: 1px solid #009900;
            cursor: pointer;
            display: inline-block;
            vertical-align: middle;
        }

    </ui:style>

    <ui:style field="modal">
        .forTree {
            border-style: none !important;
            width: 100% !important;
            height: 100% !important;
        }

        .forCountSelected {
            font-weight: bold;
            margin: 0 0 0 5px;
        }

        .mainPanel {
            background-color: #E8E1CF;
            position: absolute !important;
            top: 35px;
            left: 10px;
            right: 10px;
            bottom: 0;
        }

        .widgetWrapper {
            background-color: #ffffff;
            border: 1px solid #000000;
            position: absolute !important;
            top: 55px;
            left: 0;
            right: 0;
            bottom: 42px;
        }

        .buttons {
            position: absolute !important;
            left: 0;
            right: 0;
            width: 25px;
            bottom: 10px;
        }

        .textAlign {
            text-align: right;
        }

        .marginRight10 {
            margin-right: 10px;
        }

        .marginBottom5 {
            margin-bottom: 5px;
        }

        .datePanel {
            position: absolute !important;
            top: 26px;
            height: 24px;
        }

    </ui:style>

    <g:HTMLPanel ui:field="wrappingPanel" addStyleNames="{style.minWidthWidget}">
        <g:HorizontalPanel ui:field="panel" verticalAlignment="middle" borderWidth="0">
            <g:cell width="100%">
                <g:TextBox ui:field="selected" readOnly="true" width="100%" addStyleNames="{style.selected}"/>
            </g:cell>
            <g:Image ui:field="clearButton" addStyleNames="{style.clearButton}"
                     url="resources/img/picker-icons/clear-icon-dummy.png"/>
            <g:Image ui:field="selectButton" title="Открыть для выбора" addStyleNames="{style.selectButton}"
                     url="resources/img/picker-icons/refbook-icon.png"/>
        </g:HorizontalPanel>

        <g:HTMLPanel visible="false">
            <m:ModalWindow ui:field="popupPanel" title="Выбор подразделения" resizable="true" width="622px" height="492px" minWidth="500px">

                <g:FlowPanel addStyleNames="{modal.mainPanel}">

                    <g:HorizontalPanel ui:field="filterPanel" spacing="0" width="100%"
                                       verticalAlignment="middle" horizontalAlignment="right">
                        <g:cell horizontalAlignment="left" width="99%">
                            <g:TextBox ui:field="filter" width="99%"/>
                        </g:cell>
                        <g:Button ui:field="find" text="Найти" width="70px"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel spacing="0" width="100%" addStyleNames="{modal.datePanel}"
                                       verticalAlignment="middle" horizontalAlignment="right">
                        <g:cell horizontalAlignment="left" width="50%">
                            <g:CheckBox ui:field="exactSearch" wordWrap="false" text="Искать по точному совпадению" visible="false" enabled="false"/>
                        </g:cell>
                        <g:cell horizontalAlignment="right" width="50%">
                            <g:CheckBox ui:field="showDisabled" wordWrap="false" text="Отображать *недействующие подразделения" />
                        </g:cell>

                    </g:HorizontalPanel>

                    <g:ScrollPanel ui:field="widgetWrapper" addStyleNames="{modal.widgetWrapper}">
                        <t:DepartmentTreeWidget ui:field="tree" headerVisible="false" addStyleNames="{modal.forTree}"/>
                    </g:ScrollPanel>

                    <g:HorizontalPanel spacing="0" horizontalAlignment="right" verticalAlignment="middle"
                                       width="100%" addStyleNames="{modal.buttons}">
                        <g:cell horizontalAlignment="left" width="25%">
                            <g:HorizontalPanel ui:field="itemsInfoPanel">
                                <g:Label ui:field="countItemsLabel" text="Выделено:"/>
                                <g:Label ui:field="countItems" width="3em" addStyleNames="{modal.forCountSelected}" />
                            </g:HorizontalPanel>
                        </g:cell>
                        <g:cell horizontalAlignment="left" width="20%">
                            <g:CheckBox ui:field="pickAll" wordWrap="false" text="Выделить все"/>
                        </g:cell>
                        <g:cell horizontalAlignment="left" width="30%">
                            <g:CheckBox ui:field="selectChild" wordWrap="false" text="Включая подчиненные"/>
                        </g:cell>
                        <g:Button ui:field="ok" text="Выбрать" width="70px" addStyleNames="{modal.marginRight10}"/>
                        <g:Button ui:field="cancel" text="Закрыть" width="70px"/>
                    </g:HorizontalPanel>
                </g:FlowPanel>

            </m:ModalWindow>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>
