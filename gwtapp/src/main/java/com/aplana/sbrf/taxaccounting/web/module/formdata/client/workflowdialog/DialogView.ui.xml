<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
            width: 94px;
        }

        .textArea {
            resize: none;
            width: 350px;
            height: 150px;
        }
    </ui:style>

    <dw:ModalWindow title="Укажите причину возврата">
        <g:VerticalPanel addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell>
                <g:VerticalPanel addStyleNames="{style.content}">
                    <g:Label>Причина возврата:</g:Label>
                    <g:TextArea addStyleNames="{style.textArea}" focus="true" ui:field="data"/>
                    <g:Label ui:field="textLengthLabel"/>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" text="Продолжить" ui:field="okButton"/>
                    <g:Button addStyleNames="{style.footerButton}" text="Закрыть" ui:field="cancelButton"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder> 