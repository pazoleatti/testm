<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 50px;
        }

        .footerButton {
            margin:  14px 17px 14px 0px !important;
        }
        .textArea{
            resize: none;
            width: 350px;
            height: 150px;
        }
    </ui:style>

    <dw:ModalWindow iconUrl="" title="Укажите причину возврата" glassEnabled="true">
        <g:VerticalPanel>
            <g:cell>
                <g:VerticalPanel addStyleNames="{style.content}">
                    <g:Label>Причина возврата:</g:Label>
                    <g:TextArea addStyleNames="{style.textArea}" focus="true" ui:field="data"/>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Label addStyleNames="{style.footerButton}" ui:field="textLengthLabel"></g:Label>
                    <g:Button addStyleNames="{style.footerButton}" text="Продолжить" ui:field="okButton"/>
                    <g:Button addStyleNames="{style.footerButton}" text="Отмена" ui:field="cancelButton"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder> 