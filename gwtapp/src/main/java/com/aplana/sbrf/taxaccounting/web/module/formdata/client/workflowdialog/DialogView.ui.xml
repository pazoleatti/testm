<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:t="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
    <ui:style>
        @external .gwt-DialogBox .Caption;
        .gwt-DialogBox .Caption {
            font-weight: bold;
            text-align: left;
            color: white;
            background: url("img/top_grad.gif") repeat-x scroll center bottom #F1F1F1;
        }

        .dataLayout{
            margin-left: 10px;
            margin-top: 10px;
        }

        .textArea{
            resize: none;
            width: 350px;
            height: 150px;
            margin-left: 20px;
            margin-right: 20px;
        }

        .captionStyle{
            font-style: italic;
        }

        .buttonPanel{
            margin-bottom: 5px;
            margin-top: 5px;
            margin-left: 65%;
        }

        .actionButton{
            margin: 5px;
            width: 70px;
        }

    </ui:style>

	<g:DialogBox height="100%" glassEnabled="true" text="Для выполнения перехода необходимо указать причину">
        <g:VerticalPanel addStyleNames="{style.dataLayout}" height="100%">
            <g:HorizontalPanel>
                <g:Label addStyleNames="{style.captionStyle}">Причина возврата:</g:Label>
                <g:TextArea addStyleNames="{style.textArea}" focus="true" ui:field="data"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel addStyleNames="{style.buttonPanel}">
                <g:Button addStyleNames="{style.actionButton}" text="ОК" ui:field="okButton"/>
                <g:Button addStyleNames="{style.actionButton}" text="Отмена" ui:field="cancelButton"/>
            </g:HorizontalPanel>

        </g:VerticalPanel>
	</g:DialogBox>

</ui:UiBinder> 