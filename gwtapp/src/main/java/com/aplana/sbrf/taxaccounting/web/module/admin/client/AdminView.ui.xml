<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:u="urn:import:com.aplana.sbrf.taxaccounting.web.module.admin.client"
			 >
	<g:HorizontalPanel width="100%" height="800px">
		<g:cell width="20%" height="100%">
			<g:ListBox visibleItemCount="10" width="100%" height="100%" ui:field="formListBox"/>
		</g:cell>
		<g:cell width="80%" height="100%">
			<g:VerticalPanel height="100%" width="100%">
				<g:cell height="40px">
					<g:HorizontalPanel>
						<g:cell>
							<g:Button text="Сохранить" ui:field="saveButton"/>
						</g:cell>
						<g:cell>
							<g:Button text="Отмена" ui:field="cancelButton"/>
						</g:cell>
					</g:HorizontalPanel>
				</g:cell>
				<g:cell height="100%">
					<g:TabLayoutPanel barUnit="PX" barHeight="30" width="100%" height="100%">
						<g:tab>
							<g:header size="50px">Скрипт создания</g:header>
							<u:ScriptEditor ui:field="createScriptEditor"/>
						</g:tab>
						<g:tab>
							<g:header size="50px">Рассчетные скрипты</g:header>
							<g:HorizontalPanel width="100%" height="100%">
								<g:cell width="25%" height="100%">
									<g:ListBox height="100%" width="100%" visibleItemCount="10" ui:field="scriptListBox"/>
								</g:cell>
								<g:cell>
									<u:ScriptEditor ui:field="calcScriptEditor"/>
								</g:cell>
							</g:HorizontalPanel>
						</g:tab>
					</g:TabLayoutPanel>
				</g:cell>
			</g:VerticalPanel>
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder>
