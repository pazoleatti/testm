<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .imageStyle {
            border: 1px solid #008000;
            vertical-align: text-bottom;
        }

        .textBox{
            height: 15px;
            padding-left: 2px;
        }
    </ui:style>

    <g:HorizontalPanel>
        <g:cell verticalAlignment="middle">
            <g:TextBox width="100%" ui:field="dateBox"  addStyleNames="{style.textBox}"/>
        </g:cell>
        <g:cell verticalAlignment="middle">
            <g:Image ui:field="dateImage" url="resources/img/calendar-16.gif" styleName="{style.imageStyle}"/>
        </g:cell>
    </g:HorizontalPanel>
</ui:UiBinder>