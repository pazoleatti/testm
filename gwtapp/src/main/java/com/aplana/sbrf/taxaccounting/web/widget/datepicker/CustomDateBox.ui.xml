<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .imageStyle{ border: 1px solid #008000;}
        .cellStyle{ display: inline-flex;}
    </ui:style>

    <g:HorizontalPanel>
        <g:cell verticalAlignment="middle">
            <g:FlowPanel styleName="{style.cellStyle}">
                <g:TextBox width="100px" ui:field="dateBox"/>
                <g:Image ui:field="dateImage" url="resources/img/calendar-16.gif" styleName="{style.imageStyle}"/>
            </g:FlowPanel>
        </g:cell>
    </g:HorizontalPanel>
</ui:UiBinder>