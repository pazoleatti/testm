<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .title {
            font-size: 26px;
            text-wrap: none;
            white-space: nowrap;
            color: #aeaeac;

            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .wrapper{
            width: 100%;
            height: 100%;
        }
    </ui:style>

	<g:HorizontalPanel addStyleNames="{style.wrapper}">
        <g:cell horizontalAlignment="center" verticalAlignment="middle" width="100%" height="100%" >
            <g:HTML addStyleNames="{style.title}">Автоматизированная система «Учет налогов»</g:HTML>
        </g:cell>
	</g:HorizontalPanel>

</ui:UiBinder> 