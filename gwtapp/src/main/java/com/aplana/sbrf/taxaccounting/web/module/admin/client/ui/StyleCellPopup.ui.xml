<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>
    <g:HTMLPanel>
        <h3>Стиль ячейки</h3>

        <g:HorizontalPanel height="25px">
            <g:Label width="100px">Стиль:</g:Label>
            <g:ValueListBox width="100px" ui:field="styleAlias"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="25px">
            <g:Label width="100px">colSpan:</g:Label>
            <g:IntegerBox width="100px" ui:field="colSpan"/>
        </g:HorizontalPanel>
        <g:HorizontalPanel height="25px">
            <g:Label width="100px">rowSpan:</g:Label>
            <g:IntegerBox width="100px" ui:field="rowSpan"/>
        </g:HorizontalPanel>

        <t:LeftBar>
            <g:Button text="Сохранить" ui:field="saveButton"/>
        </t:LeftBar>
    </g:HTMLPanel>
</ui:UiBinder>