<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.4.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.4.0/distro-source/core/src/gwt-module.dtd">

<module>
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.google.gwt.uibinder.UiBinder' />
	<inherits name='com.google.gwt.inject.Inject' />

	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.menu.MainMenu" />
	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.signin.SignIn" />
	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.logarea.LogArea" />
	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.version.ProjectVersion" />
	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.history.History" />
	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.pdfviewer.PdfViewerWidget" />
	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.codemirror.CodeMirror" />
	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.refbookmultipicker.RefBookMultiPicker" />
	<inherits name="com.aplana.sbrf.taxaccounting.web.widget.periodpicker.PeriodPicker" />
    <inherits name="com.aplana.sbrf.taxaccounting.web.widget.historytemplatechanges.VersionHistory" />
    <inherits name="com.aplana.gwt.GwtWidgetLocal"/>

    <!--в этом модуле имеется механизм подменны классов относительно браузера -->
    <!--необходимый для работы com.aplana.sbrf.taxaccounting.web.widget.utils.TextUtils-->
    <inherits name="com.google.gwt.user.TextBox"/>
    <source path="utils"/>

    <replace-with class="com.aplana.sbrf.taxaccounting.web.widget.utils.TrickUtils">
        <when-type-is class="com.aplana.sbrf.taxaccounting.web.widget.utils.TrickUtils"/>
    </replace-with>

    <replace-with class="com.aplana.sbrf.taxaccounting.web.widget.utils.TrickUtilsIe8">
        <when-type-is class="com.aplana.sbrf.taxaccounting.web.widget.utils.TrickUtils" />
        <when-property-is name="user.agent" value="ie8"/>
    </replace-with>

    <source path="cell"/>
    <source path="datepicker"/>
    <source path="style"/>
    <source path="log"/>
    <source path="pager"/>
    <source path="datarow"/>
    <source path="departmentpicker"/>
    <source path="reportperiodpicker"/>
    <source path="incrementbutton"/>
    <source path="fileupload"/>
    <source path="multiselecttree"/>
    <source path="filter"/>
</module>
