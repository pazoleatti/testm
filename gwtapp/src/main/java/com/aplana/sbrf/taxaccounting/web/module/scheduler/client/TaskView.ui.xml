<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dw="urn:import:com.aplana.gwt.client"
             xmlns:fm="urn:import:com.aplana.gwt.client.form">


    <ui:style field="css" type="com.aplana.sbrf.taxaccounting.web.module.scheduler.client.TaskView.LinkStyle">
        .separator {
            border: 1px dashed #949494;
            margin: 20px 0px;
        }
    </ui:style>

    <ui:style>

        .header {
            font-size: 14px;
            color: #636460;
        }

        .btnPanel {
            margin-left: 10px;
            height: 30px;
        }

        .paramsBlock {
            border: 1px solid #949494;
            border-radius: 3px;
            padding: 10px;
            margin: 0px 5px 5px 5px;
        }

        .scroll {
            position: absolute !important;
            bottom: 0;
            top: 40px;
            left: 10px;
            right: 0;
        }

        .paramsTitle {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .paramsButton {
            margin-top: 5px;
        }

        .label {
            text-align: right;
            width: 150px;
        }

        .horSep {
            height: 1px;
            margin: 0 9px;
            border-top: 1px solid #aeaeac;
        }
    </ui:style>


    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar childValign="middle" height="100%">
                            <g:Label ui:field="formHeader" text="Планировщик задач" addStyleNames="{style.header}"/>
                            <g:Label text="—" addStyleNames="{style.header}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar childValign="middle" height="100%">

                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Данные задачи" ui:field="titleDesc"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="5" addStyleNames="{style.btnPanel}" verticalAlignment="middle">
                    <g:Button text="Создать" ui:field="createButton"/>
                    <g:Button text="Отмена" ui:field="cancelButton"/>
                </g:HorizontalPanel>

                <g:Label addStyleNames="{style.horSep}"/>

                <g:ScrollPanel addStyleNames="{style.scroll}">
                    <g:VerticalPanel>
                        <!-- Базовые параметры -->
                        <g:cell width="750px">
                            <g:VerticalPanel styleName="{style.paramsBlock}">
                                <g:Label styleName="{style.paramsTitle}" text="Базовые параметры"/>
                                <g:HorizontalPanel spacing="5" verticalAlignment="middle">
                                    <g:Label text="Название:" addStyleNames="{style.label}"/>
                                    <g:TextBox width="475px" ui:field="taskName"/>
                                </g:HorizontalPanel>
                                <g:HorizontalPanel spacing="5" verticalAlignment="middle">
                                    <g:Label text="Расписание:" addStyleNames="{style.label}"/>
                                    <g:TextBox width="475px" ui:field="taskSchedule"/>
                                </g:HorizontalPanel>
                                <g:HorizontalPanel spacing="5" verticalAlignment="middle">
                                    <g:Label text="Количество повторений:" addStyleNames="{style.label}"/>
                                    <g:TextBox width="475px" ui:field="numberOfRepeats"/>
                                </g:HorizontalPanel>
                                <g:HorizontalPanel spacing="5" verticalAlignment="middle">
                                    <g:Label text="Тип задачи:" addStyleNames="{style.label}"/>
                                    <dw:ListBoxWithTooltip width="475px" ui:field="jndi"/>
                                </g:HorizontalPanel>
                            </g:VerticalPanel>
                        </g:cell>
                        <!-- Пользовательские параметры -->
                        <g:cell width="750px">
                            <g:VerticalPanel styleName="{style.paramsBlock}">
                                <g:Label styleName="{style.paramsTitle}" text="Пользовательские параметры"/>
                                <g:VerticalPanel ui:field="paramsPanel"/>
                                <g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
                                    <g:Button text="Добавить" ui:field="addParamButton"/>
                                </g:HorizontalPanel>
                            </g:VerticalPanel>
                        </g:cell>
                        <g:cell height="15px">
                            <g:Label/>
                        </g:cell>
                    </g:VerticalPanel>
                </g:ScrollPanel>

            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>


</ui:UiBinder>