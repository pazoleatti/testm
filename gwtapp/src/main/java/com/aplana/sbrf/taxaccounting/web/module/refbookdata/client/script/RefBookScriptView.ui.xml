<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:cm='urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror.client'
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>

        .titleText div {
            font-size: 14px!important;
            color: #636460;
        }

        .btnPanel {
            padding-left: 10px;
            padding-top: 5px;
        }

        .table {
            position: absolute !important;
            bottom: 30px;
            right: 0;
            left: 0;
            top: 80px;
            border: 1px solid #aeaeac;
            background: #FFFFFF;
        }

        .btnFind {
            margin-left: 6px;
            margin-right: 15px;
        }

        .horSep {
            height: 1px;
            margin-top: 8px;
            border-top: 1px solid #aeaeac;
        }

    </ui:style>

    <fm:MainContainer>

        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <style:LinkAnchor ui:field="returnAnchor" title="Перейти к списку справочников"
                                              text="Справочники" addStyleNames="{style.titleText}" disableImage="true"/>
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label ui:field="pageTitle"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>

        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel verticalAlignment="middle" spacing="2" addStyleNames="{style.btnPanel}" width="100%">
                    <g:cell horizontalAlignment="left">
                        <style:LeftBar>
                            <g:Button ui:field="saveButton" addStyleNames="{style.btnFind}" text="Сохранить"/>
                            <g:Button ui:field="resetButton" addStyleNames="{style.btnFind}" text="Сбросить"/>
                            <g:Button ui:field="cancelButton" addStyleNames="{style.btnFind}" text="Отменить"/>
                        </style:LeftBar>
                    </g:cell>
                    <g:cell horizontalAlignment="right">
                        <style:RightBar addStyleNames="{style.btnPanel}">
                            <style:LinkButton text="История изменений" ui:field="historyVersion"/>
                        </style:RightBar>
                    </g:cell>
                </g:HorizontalPanel>

                <g:Label addStyleNames="{style.horSep}"/>

                <!-- Пока закоментировал т.к. функионал еще не реализован -->
                <!--<g:HorizontalPanel verticalAlignment="middle" spacing="2" addStyleNames="{style.btnPanel}">-->
                    <!--<g:FormPanel ui:field="uploadFormTemplatePanel" encoding="multipart/form-data"-->
                                 <!--method="post">-->
                        <!--<style:LeftBar>-->
                            <!--<g:Label text="Файл скрипт"/>-->
                            <!--<g:FileUpload name="uploadFormFile" />-->
                            <!--<g:SubmitButton text="Импорт" addStyleNames="{style.btnFind}"/>-->
                        <!--</style:LeftBar>-->
                    <!--</g:FormPanel>-->
                <!--</g:HorizontalPanel>-->

                <g:HorizontalPanel width="100%">
                    <g:ScrollPanel addStyleNames="{style.table}">
                        <g:VerticalPanel width="100%">
                            <g:cell>
                                <cm:CodeMirror ui:field="script" width="100%" height="100%"/>
                            </g:cell>
                        </g:VerticalPanel>
                    </g:ScrollPanel>
                </g:HorizontalPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>