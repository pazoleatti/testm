<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>

        .table {
            position: absolute !important;
            bottom: 30px;
            right: 10px;
            left: 10px;
            top: 42px;
        }
    </ui:style>


    <fm:MainContainer>
        <fm:body>
            <fm:BodyContainer>
                <g:ResizeLayoutPanel ui:field="checksPanel" addStyleNames="{style.table}">
                    <style:GenericDataGrid width="100%" height="100%" ui:field="checksGrid"/>
                </g:ResizeLayoutPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>