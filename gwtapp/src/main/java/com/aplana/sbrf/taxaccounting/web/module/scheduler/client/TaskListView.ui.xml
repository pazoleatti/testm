<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager">
    <ui:style>
        .pager {
            margin-right: auto;
            margin-left: auto;
        }

        .titleText {
            font-size: 26px;
        }

        .titleDesc {
            font-size: 16px;
        }

        .titlePanel {
            padding-left: 10px
        }

        .btnAddDel{
            margin: 5px 0px;
        }
    </ui:style>

    <g:DockLayoutPanel unit='PX' height="100%" width="100%">
        <g:north size="100">
            <g:VerticalPanel>
                <g:cell height="30px">
                    <g:HorizontalPanel >
                        <g:Label styleName="{style.titleText}" ui:field="formHeader">Планировщик задач</g:Label>
                    </g:HorizontalPanel>
                </g:cell>
                <g:cell height="20px">
                    <g:Label styleName="{style.titleDesc}" ui:field="titleDesc">Список задач</g:Label>
                </g:cell>
                <g:cell height="45px" verticalAlignment="bottom">
                    <g:HorizontalPanel styleName="{style.btnAddDel}" spacing="5">
                        <g:Button text="Создать" ui:field="createButton" />
                        <g:Button text="Остановить" ui:field="stopButton" />
                        <g:Button text="Возобновить" ui:field="resumeButton" />
                        <g:Button text="Запустить" ui:field="startButton" />
                        <g:Button text="Удалить" ui:field="deleteButton" />
                    </g:HorizontalPanel>
                </g:cell>
            </g:VerticalPanel>
        </g:north>

        <g:center>
            <style:GenericDataGrid ui:field="taskDataTable"	height="100%"/>
        </g:center>

    </g:DockLayoutPanel>
</ui:UiBinder>