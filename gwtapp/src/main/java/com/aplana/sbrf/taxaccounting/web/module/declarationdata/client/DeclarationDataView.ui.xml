<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'>

<g:HTMLPanel height="100%" width="100%">
    <g:HorizontalPanel height="30px">
        <g:Label width="150px">Вид налога:</g:Label>
        <g:Label ui:field="taxType"/>
    </g:HorizontalPanel>

    <g:HorizontalPanel height="30px">
        <g:Label width="150px">Отчётный период:</g:Label>
        <g:Label ui:field="reportPeriod"/>
    </g:HorizontalPanel>

    <g:HorizontalPanel height="30px">
        <g:Label width="150px">Подразделение:</g:Label>
        <g:Label ui:field="department"/>
    </g:HorizontalPanel>

    <g:HorizontalPanel>
        <g:Label width="150px">Декларация принята:</g:Label>
        <g:CheckBox enabled="false" ui:field="accepted"/>
    </g:HorizontalPanel>

    <t:LeftBar height="30px">
        <g:Button text="Принять" ui:field="acceptButton"/>
        <g:Button text="Отменить принятие" ui:field="cancelButton"/>
    </t:LeftBar>

    <t:LeftBar>
        <g:Button text="Скачать в виде Excel" ui:field="downloadExcelButton"/>
        <g:Button text="Скачать в формате законодателя" ui:field="downloadAsLegislatorButton"/>
    </t:LeftBar>
</g:HTMLPanel>
</ui:UiBinder>