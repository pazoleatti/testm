<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:pdf='urn:import:com.aplana.sbrf.taxaccounting.web.widget.pdfviewer.client'
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
<ui:style>
    .titleLabel {
        font-size: 16px;
        max-height: 28px;
        overflow: hidden;
        line-height: 28px;
    }

    .titleGradient {
        position: absolute;
        background: url("resources/img/form_title_gradient.png");
        width: 64px;
        height: 32px;
        right: 790px;
    }

    .dateDoc {
        max-height: 28px;
        overflow: hidden;
        line-height: 28px;
    }

    .headerRight {
        float: right;
    }

    .headerAttr {
        margin-left: 5px;
        text-align: right;
        font-size: 12px;
        font-weight: bold;
    }

    .headerAttrName {
        text-align: right;
        font-size: 12px;
    }
</ui:style>

    <g:DockLayoutPanel unit='PX' height="100%" width="100%">

        <g:north size="100">
            <g:HorizontalPanel height="100px" width="100%">
                <g:FlowPanel>
                    <g:HorizontalPanel height="28px">
                        <g:cell width="25px">
                            <style:ButtonLink title="Перейти к списку деклараций" ui:field="returnAnchor" img="resources/img/arrow-left-24.png"/>
                        </g:cell>
                        <g:HorizontalPanel>
                            <g:Label ui:field="title" addStyleNames="{style.titleLabel}"/>
                            <g:SimplePanel styleName="{style.titleGradient}"/>
                        </g:HorizontalPanel>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="35px">
                        <g:cell verticalAlignment="middle">
                            <g:SimplePanel width="140px" ui:field="downloadXml">
                                <style:ButtonLink text="Выгрузить в xml" ui:field="downloadXmlButton" img="resources/img/download-xml-16.png"
                                    title="Скачать декларацию в формате законодателя"/>
                            </g:SimplePanel>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:SimplePanel width="145px">
                                <style:ButtonLink text="Выгрузить в xlsx" ui:field="downloadExcelButton" img="resources/img/download-xls-16.png"
                                    title="Скачать декларацию в формате Excel-документа"/>
                            </g:SimplePanel>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:HorizontalPanel>
                                <g:cell width="205px" verticalAlignment="middle">
                                    <g:Label title="Дата формирования декларации" styleName="{style.dateDoc}" text="Дата формирования декларации:" />
                                </g:cell>
                                <g:cell verticalAlignment="middle">
                                    <d:CustomDateBox ui:field="dateBox" />
                                </g:cell>
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:HorizontalPanel>
                    <style:Bar height="30px">
                        <style:LeftBar>
                            <g:Button text="Проверить" ui:field="checkButton" />
                            <g:Button text="Обновить" ui:field="refreshButton" />
                            <g:Button text="Удалить" ui:field="deleteButton" />
                            <g:Button text="Принять" ui:field="acceptButton" />
                            <g:Button text="Отменить принятие" ui:field="cancelButton" />
                        </style:LeftBar>
                    </style:Bar>
                </g:FlowPanel>
                <g:FlowPanel width="790px" addStyleNames="{style.headerRight}">
                    <g:HorizontalPanel>
                        <g:Label width="100px" addStyleNames="{style.headerAttrName}">Подразделение:</g:Label>
                        <g:Label ui:field="department" addStyleNames="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="100px" addStyleNames="{style.headerAttrName}">Тип:</g:Label>
                        <g:Label ui:field="type" addStyleNames="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="100px" addStyleNames="{style.headerAttrName}">Период:</g:Label>
                        <g:Label ui:field="reportPeriod" addStyleNames="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="100px" addStyleNames="{style.headerAttrName}">Состояние:</g:Label>
                        <g:Label ui:field="stateLabel" addStyleNames="{style.headerAttr}" />
                        <style:ButtonLink ui:field="infoAnchor" text="Информация" />
                    </g:HorizontalPanel>
                </g:FlowPanel>
            </g:HorizontalPanel>
        </g:north>

        <g:center>
            <pdf:PdfViewerWidget ui:field="pdfViewer" />
        </g:center>

    </g:DockLayoutPanel>


</ui:UiBinder>