<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:pdf='urn:import:com.aplana.sbrf.taxaccounting.web.widget.pdfviewer.client'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
<ui:style>
    .titleLabel {
        font-size: 16px;
    }

    .headerRight {
        float: right;
    }

    .headerAttr {
        margin-left: 5px;
        text-align: right;
        font-size: 12px;
        font-weight: bold;
    }

    .headerAttrName {
        text-align: right;
        font-size: 12px;
    }

    .imageStyle {
        margin-top: 2px;
    }
</ui:style>

    <g:DockLayoutPanel unit='PX' height="100%" width="100%">

        <g:north size="100">
            <g:HorizontalPanel height="100px" width="100%">
                <g:VerticalPanel>
                    <g:HorizontalPanel height="28px">
                        <g:cell width="25px">
                            <style:ButtonLink title="Перейти к списку деклараций" ui:field="returnAnchor" img="img/arrow-left-24.png"/>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:Label ui:field="title" addStyleNames="{style.titleLabel}"/>
                        </g:cell>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel height="35px">
                        <g:cell verticalAlignment="middle">
                            <g:SimplePanel width="140px" ui:field="downloadXml">
                                <style:ButtonLink text="Выгрузить в xml" ui:field="downloadXmlButton" img="img/download-xml-16.png"
                                    title="Скачать декларацию в формате законодателя"/>
                            </g:SimplePanel>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:SimplePanel width="145px">
                                <style:ButtonLink text="Выгрузить в xlsx" ui:field="downloadExcelButton" img="img/download-xls-16.png"
                                    title="Скачать декларацию в формате Excel-документа"/>
                            </g:SimplePanel>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:HorizontalPanel ui:field="datePanel">
                                <g:cell width="205px" verticalAlignment="middle">
                                    <g:Label >Дата формирования декларации:</g:Label>
                                </g:cell>
                                <g:cell verticalAlignment="middle">
                                    <g:TextBox width="100px" ui:field="dateBox"/>
                                </g:cell>
                                <g:cell verticalAlignment="middle">
                                    <g:Image ui:field="dateImage" url="img/calendar-16.png" styleName="{style.imageStyle}" />
                                </g:cell>
                            </g:HorizontalPanel>
                        </g:cell>
                    </g:HorizontalPanel>
                    <style:Bar height="30px">
                        <style:LeftBar>
                            <g:Button text="Обновить" ui:field="refreshButton" />
                            <g:Button text="Удалить" ui:field="deleteButton" />
                            <g:Button text="Принять" ui:field="acceptButton" />
                            <g:Button text="Отменить принятие" ui:field="cancelButton" />
                        </style:LeftBar>
                    </style:Bar>
                </g:VerticalPanel>
                <g:VerticalPanel width="790px" addStyleNames="{style.headerRight}">
                    <g:HorizontalPanel>
                        <g:Label width="100px" addStyleNames="{style.headerAttrName}">Подразделение:</g:Label>
                        <g:Label ui:field="department" addStyleNames="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="100px" addStyleNames="{style.headerAttrName}">Тип:</g:Label>
                        <g:Label ui:field="type" addStyleNames="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="100px" addStyleNames="{style.headerAttrName}">Период:</g:Label>
                        <g:Label ui:field="reportPeriod" addStyleNames="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="100px" addStyleNames="{style.headerAttrName}">Состояние:</g:Label>
                        <g:Label ui:field="stateLabel" addStyleNames="{style.headerAttr}" />
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:HorizontalPanel>
        </g:north>

        <g:center>
            <pdf:PdfViewerWidget ui:field="pdfViewer" />
        </g:center>

    </g:DockLayoutPanel>


</ui:UiBinder>