<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
<ui:style>
    .titleLabel {
        font-family: Tahoma;
        font-size: 16px;
        float: left;
        margin-top: 10px;
        text-align: left;
    }

    .headerLeft {
        float: left;
        top: 0;
    }

    .headerRight {
        float: right;
        top: 0;
        width: 790px;
        margin-top: 7px;
    }

    .headerAttr {
        margin-left: 5px;
        text-align: right;
        font-size: 12px;
        font-weight: bold;
        font-family: Tahoma;
    }

    .headerAttrName {
        text-align: right;
        font-size: 12px;
        font-family: Tahoma;
    }

    .marginTop7 {
        margin-top: 7px;
    }

    .marginTop4 {
        margin-top: 4px;
    }

    .marginLeft15 {
        margin-left: 15px;
    }
</ui:style>

    <g:DockLayoutPanel unit='PX' height="100%" width="100%">
        <g:north size="100">
            <g:HTMLPanel height="100" width="100%">
                <div class="{style.headerLeft}">
                    <g:HorizontalPanel height="35px">
                        <g:HTMLPanel addStyleNames="{style.marginTop7}">
                            <style:ButtonLink ui:field="returnAnchor" img="img/btn-l.gif"/>
                        </g:HTMLPanel>
                        <g:Label ui:field="title" styleName="{style.titleLabel}"/>
                    </g:HorizontalPanel>
                    <g:FlowPanel height="35px">
                        <g:Button text="Скачать в виде Excel" ui:field="downloadExcelButton" addStyleNames="{style.marginTop7}"/>
                        <g:Button text="Скачать в формате законодателя" ui:field="downloadAsLegislatorButton"/>
                    </g:FlowPanel>
                    <g:FlowPanel height="30px">
                        <g:Button text="Обновить" ui:field="refreshButton" addStyleNames="{style.marginTop4}"/>
                        <g:Button text="Удалить" ui:field="deleteButton" addStyleNames="{style.marginTop4} {style.marginLeft15}"/>
                        <g:Button text="Принять" ui:field="acceptButton" addStyleNames="{style.marginTop4} {style.marginLeft15}"/>
                        <g:Button text="Отменить принятие" ui:field="cancelButton" addStyleNames="{style.marginTop4} {style.marginLeft15}"/>
                    </g:FlowPanel>
                </div>
                <div class="{style.headerRight}">
                    <g:HorizontalPanel>
                        <g:Label width="150px" styleName="{style.headerAttrName}">Вид налога:</g:Label>
                        <g:Label ui:field="taxType" styleName="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="150px" styleName="{style.headerAttrName}">Отчётный период:</g:Label>
                        <g:Label ui:field="reportPeriod" styleName="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="150px" styleName="{style.headerAttrName}">Подразделение:</g:Label>
                        <g:Label ui:field="department" styleName="{style.headerAttr}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Label width="150px" styleName="{style.headerAttrName}">Декларация принята:</g:Label>
                        <g:CheckBox enabled="false" ui:field="accepted"/>
                    </g:HorizontalPanel>

                </div>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:HTMLPanel height="100%" width="100%" ui:field="pdfContent">
            </g:HTMLPanel>
        </g:center>
    </g:DockLayoutPanel>


</ui:UiBinder>