<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:dw="urn:import:com.aplana.gwt.client"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dep="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:per="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client">

    <ui:style>
        .separator {
            height: 22px;
            margin: 0 15px;
            border-right: 1px solid #aeaeac;
        }

    </ui:style>

    <ui:style field="margin">
        .left10{
            margin-left: 10px;
        }
        .right5{
            margin-right: 5px;
        }
        .right15{
            margin-right: 15px;
        }
    </ui:style>


    <g:HorizontalPanel width="100%" height="30px"  verticalAlignment="middle">
        <g:cell horizontalAlignment="right">
            <g:Label text="Подразделение:" addStyleNames="{margin.right5}"/>
        </g:cell>
        <g:cell width="24%"> <!--ширина регулируется в коде-->
            <dep:DepartmentPickerPopupWidget ui:field="departmentPicker" multiselection="true" width="100%"/>
        </g:cell>
        <g:cell horizontalAlignment="right">
            <g:Label ui:field="reportPeriodIdsLabel" wordWrap="false" text="Период:" addStyleNames="{margin.left10}, {margin.right5}"/>
        </g:cell>
        <g:cell width="24%">
            <per:PeriodPickerPopupWidget multiselect="true" width="100%" ui:field="reportPeriodIds"/>
        </g:cell>
        <g:cell horizontalAlignment="right">
            <g:Label ui:field="declarationTypeLabel" wordWrap="false" text="Вид декларации:" addStyleNames="{margin.left10}, {margin.right5}"/>
        </g:cell>
        <g:cell width="24%">
            <dw:ListBoxWithTooltip width="100%" ui:field="declarationTypeId" showTooltip="true" />
        </g:cell>
        <g:cell horizontalAlignment="right">
            <g:Label wordWrap="false" text="Состояние:" addStyleNames="{margin.left10}, {margin.right5}"/>
        </g:cell>
        <g:cell width="24%">
            <g:ValueListBox width="100%" ui:field="formState" />
        </g:cell>

        <g:HTML addStyleNames="{style.separator}"/>

        <g:Button title="Найти" text="Найти" ui:field="apply" addStyleNames="{margin.right15}"/>
    </g:HorizontalPanel>

</ui:UiBinder>