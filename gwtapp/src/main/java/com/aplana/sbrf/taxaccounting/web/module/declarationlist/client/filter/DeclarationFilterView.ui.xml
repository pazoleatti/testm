<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HorizontalPanel>
        <g:cell width="250px">
            <g:FlowPanel ui:field="reportPeriodPanel">
                <g:Label width="200px" text="Отчетный период" />
            </g:FlowPanel>
        </g:cell>

        <g:cell width="250px">
            <g:FlowPanel ui:field="departmentSelectionTreePanel">
                <g:Label width="200px" text="Подразделение" />
            </g:FlowPanel>
        </g:cell>

        <g:VerticalPanel>
            <g:Label width="200px" text="Вид декларации" />
            <g:ValueListBox width="200px" ui:field="declarationType" />
        </g:VerticalPanel>
    </g:HorizontalPanel>

