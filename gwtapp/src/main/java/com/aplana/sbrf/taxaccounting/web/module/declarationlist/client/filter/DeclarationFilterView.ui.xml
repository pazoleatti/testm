<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .separator {
            height: 22px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }
        .right15 {
            margin-right: 15px;
        }
        @external .gwt-Label;
        .pnl .gwt-Label {
            margin-right: 5px;
            margin-left: 10px;
        }
    </ui:style>
    <g:HorizontalPanel width="100%">
        <g:cell width="100%">
            <g:HTMLPanel ui:field="panel" width="100%" addStyleNames="{style.pnl}"/>
        </g:cell>
        <g:cell verticalAlignment="middle" horizontalAlignment="right">
            <g:HTML ui:field="separator" addStyleNames="{style.separator}"/>
        </g:cell>
        <g:cell verticalAlignment="middle">
            <g:Button ui:field="apply" text="Найти" addStyleNames="{style.right15}"/>
        </g:cell>
    </g:HorizontalPanel>
</ui:UiBinder>