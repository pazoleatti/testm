<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HorizontalPanel>
        <g:cell width="250px">
            <g:FlowPanel ui:field="reportPeriodPanel">
                <g:Label width="200px" text="Отчетный период" />
            </g:FlowPanel>
        </g:cell>

        <g:cell width="250px">
            <g:FlowPanel ui:field="departmentSelectionTreePanel">
                <g:Label width="200px" text="Подразделение" />
