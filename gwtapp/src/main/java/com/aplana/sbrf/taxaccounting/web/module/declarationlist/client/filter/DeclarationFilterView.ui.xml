<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
	<ui:style>
		.important {
			font-weight: bold;
		}
        .filterElementsMargin{
            margin-left: 25px;
        }
	</ui:style>

	<g:HorizontalPanel width="50%">
        <g:VerticalPanel ui:field="reportPeriodPanel">
            <g:Label width="200px" text="Отчетный период" />
        </g:VerticalPanel>

        <g:VerticalPanel addStyleNames="{style.filterElementsMargin}" ui:field="departmentSelectionTreePanel">
            <g:Label width="200px" text="Подразделение" />
        </g:VerticalPanel>

        <g:VerticalPanel addStyleNames="{style.filterElementsMargin}">
            <g:Label width="200px" text="Вид декларации" />
            <g:ValueListBox width="200px" ui:field="declarationType" />
        </g:VerticalPanel>

    </g:HorizontalPanel>

</ui:UiBinder> 
