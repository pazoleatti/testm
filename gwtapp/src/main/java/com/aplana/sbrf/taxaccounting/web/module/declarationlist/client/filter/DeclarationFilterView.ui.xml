<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
    <ui:style>
        @external .l-lp;
        @external .l-rp;
        .separator {
            height: 22px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }
        .right10 {
            margin-right: 10px;
        }
        .pnl .l-rp {
            margin-right: 5px;
        }
        .pnl .l-lp {
            margin-left: 10px;
        }
    </ui:style>
    <g:HorizontalPanel width="100%">
        <g:cell width="100%">
            <g:HTMLPanel ui:field="panel" width="100%" addStyleNames="{style.pnl}"/>
        </g:cell>
        <g:cell verticalAlignment="middle" horizontalAlignment="right">
            <g:HTML ui:field="separator" addStyleNames="{style.separator}"/>
        </g:cell>
        <g:cell verticalAlignment="middle">
            <g:VerticalPanel>
                <g:Button ui:field="apply" text="Найти" width="75px" addStyleNames="{style.right10}"/>
                <style:LinkButton ui:field="reset" text="Сбросить"  width="75px" horizontalAlignment="center" img="" title="Очистить параметры поиска" addStyleNames="{style.right10}"/>
            </g:VerticalPanel>
        </g:cell>
    </g:HorizontalPanel>
</ui:UiBinder>