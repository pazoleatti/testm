<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:com.aplana.sbrf.taxaccounting.web.widget.periodpicker.client"
             xmlns:m="urn:import:com.aplana.gwt.client">

    <ui:style>
        .minWidthWidget {
            min-width: 100px;
        }

        .selected {
            color: #000000;
            border-right: 0;
            margin-top: 0;
            margin-bottom: 0;
            display: inline-block;
            vertical-align: middle;
            min-height: 16px;
            /*многоточие*/
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }

        .clearButton {
            border: 1px solid #009900;
            border-right-width: 0;
            border-left-width: 0;
            vertical-align: middle;
            cursor: pointer;
            display: inline-block;
            margin-left: -14px;
        }

        .selectButton {
            border: 1px solid #009900;
            vertical-align: middle;
            cursor: pointer;
            display: inline-block;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
        }

        .margin {
            margin: 5px;
        }
    </ui:style>

    <g:HTMLPanel ui:field="wrappingPanel" addStyleNames="{style.minWidthWidget}">
        <g:HorizontalPanel ui:field="panel" verticalAlignment="middle" borderWidth="0">
            <g:cell width="100%">
                <g:TextBox ui:field="text" readOnly="true" width="100%" addStyleNames="{style.selected}"/>
            </g:cell>
            <g:Image ui:field="clearButton" addStyleNames="{style.clearButton}"
                     url="resources/img/picker-icons/clear-icon-dummy.png"/>
            <g:Image ui:field="selectButton" title="Открыть для выбора" addStyleNames="{style.selectButton}"
                     url="resources/img/picker-icons/refbook-icon.png"/>
        </g:HorizontalPanel>

        <g:HTMLPanel visible="false">
            <m:ModalWindow title="Выбор периода" ui:field="popupPanel" autoHideEnabled="true"
                           width="400px" height="300px">
                <g:VerticalPanel addStyleNames="aplana-ModalWindow-contentBackWhite">
                    <g:cell>
                        <g:VerticalPanel addStyleNames="{style.margin}">
                            <p:PeriodPickerWidget ui:field="periodPicker" width="390px" height="270px"/>
                        </g:VerticalPanel>

                    </g:cell>
                    <g:cell horizontalAlignment="right">
                        <g:FlowPanel addStyleNames="{style.footerPanel}">
                            <g:Button addStyleNames="{style.footerButton}" ui:field="okButton" text="Выбрать"/>
                        </g:FlowPanel>
                    </g:cell>
                </g:VerticalPanel>
            </m:ModalWindow>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>
