<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.aplana.gwt.client"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker">

    <ui:style>
        .minWidthWidget {
            min-width: 100px;
        }

        .selected {
            color: #000000;
            border-right: 0;
            margin-top: 0;
            margin-bottom: 0;
            display: inline-block;
            vertical-align: middle;
            min-height: 16px;
            /*многоточие*/
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }

        .clearButton {
            border: 1px solid #009900;
            border-right-width: 0;
            border-left-width: 0;
            display: inline-block;
            vertical-align: middle;
            margin-left: -14px;
        }

        .selectButton {
            border: 1px solid #009900;
            cursor: pointer;
            display: inline-block;
            vertical-align: middle;
        }
    </ui:style>

    <ui:style field="modal">
        .mainPanel {
            background-color: #E8E1CF;
            position: absolute !important;
            top: 35px;
            left: 10px;
            right: 10px;
            bottom: 0;
        }

        .widgetWrapper {
            border: 1px solid #000000;
            position: absolute !important;
            top: 55px;
            left: 0;
            right: 0;
            bottom: 42px;
        }

        .buttons {
            position: absolute !important;
            left: 0;
            right: 0;
            width: 25px;
            bottom: 10px;
        }

        .textAlign {
            text-align: right;
        }

        .marginRight10 {
            margin-right: 10px;
        }

        .fix {
            padding-right: 1px !important;
        }

        .marginBottom {
            padding-bottom: 4px;
        }

        .res {

        }

    </ui:style>


    <g:HTMLPanel addStyleNames="{style.minWidthWidget}">
        <g:HorizontalPanel ui:field="widgetPanel" verticalAlignment="middle">
            <g:cell width="100%">
                <g:TextBox ui:field="textBox" readOnly="true" width="100%" addStyleNames="{style.selected}"/>
            </g:cell>
            <g:Image ui:field="clearIconButton" addStyleNames="{style.clearButton}"
                     url="resources/img/picker-icons/clear-icon-dummy.png"/>
            <g:Image ui:field="pickImageButton" title="Открыть для выбора" addStyleNames="{style.selectButton}"
                     url="resources/img/picker-icons/refbook-icon.png"/>
        </g:HorizontalPanel>

        <g:HTMLPanel visible="false">
            <m:ModalWindow ui:field="modalPanel" title="Выбор из справочника" resizable="true" width="780px" height="492px" minWidth="555px">

                <g:FlowPanel ui:field="modalBodyWrapper" addStyleNames="{modal.mainPanel}">

                    <g:HorizontalPanel ui:field="filterPanel" spacing="0" width="100%" addStyleNames="{modal.marginBottom}"
                                       verticalAlignment="middle" horizontalAlignment="right">
                        <g:cell horizontalAlignment="left" width="99%">
                            <g:TextBox ui:field="searchTextBox" width="99%"/>
                        </g:cell>
                        <g:Button ui:field="searchButton" text="Найти" width="70px"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel ui:field="versionPanel" spacing="0" width="100%"
                                       verticalAlignment="middle" horizontalAlignment="right">
                        <g:cell horizontalAlignment="left" width="50%">
                            <g:CheckBox ui:field="exactSearch" wordWrap="false" text="Искать по точному совпадению"/>
                        </g:cell>
                        <g:cell horizontalAlignment="left" width="50%">
                            <g:CheckBox ui:field="pickAll" wordWrap="false" text="Выделить все" checked="false"/>
                        </g:cell>
                        <g:cell horizontalAlignment="left" width="99%">
                            <g:Label text="Версии, действующие на дату:" wordWrap="false"
                                     addStyleNames="{modal.marginRight10}, {modal.textAlign}"/>
                        </g:cell>
                        <d:DateMaskBoxPicker ui:field="versionDateBox" width="148px" addStyleNames="{modal.fix}"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel ui:field="departmentPanel" spacing="0" width="100%"
                                       verticalAlignment="middle" horizontalAlignment="right" visible="false">
                        <g:cell horizontalAlignment="right" width="50%">
                            <g:CheckBox ui:field="showDisabled" wordWrap="false"
                                        text="Отображать *недействующие подразделения"/>
                        </g:cell>
                    </g:HorizontalPanel>

                    <g:ResizeLayoutPanel ui:field="widgetWrapper" addStyleNames="{modal.widgetWrapper}"/>
                    <g:HorizontalPanel spacing="0" horizontalAlignment="right" verticalAlignment="middle"
                                       width="100%" addStyleNames="{modal.buttons}">
                        <g:cell horizontalAlignment="left" width="99%">
                            <g:Label ui:field="selectionCountLabel" width="95px" wordWrap="false" text="Выделено: 0"/>
                        </g:cell>
                        <g:Button ui:field="clearButton" text="Очистить" width="70px"
                                  addStyleNames="{modal.marginRight10}"/>
                        <g:Button ui:field="pickButton" text="Выбрать" width="70px"
                                  addStyleNames="{modal.marginRight10}"/>
                        <g:Button ui:field="cancelButton" text="Закрыть" width="70px"/>
                    </g:HorizontalPanel>
                </g:FlowPanel>
            </m:ModalWindow>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>