<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.aplana.gwt.client"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker">

    <ui:style>
        .selectButton {
            border-color: #009900;
            border-style: solid;
            border-width: 1px;
            vertical-align: middle;
            cursor: pointer;
            display: block;
        }

        .selected {
            color: #000000;
        }
    </ui:style>

    <ui:style field="modal">
        .mainPanel {
            background-color: #E8E1CF;
            height: 500px;
            width: 800px;
        }

        .mainPanel td {
            border-spacing: 0;
            padding: 0 !important;
        }

        .widgetWrapper {
            border: 1px solid #000000;
            margin: 0 10px;
            position: absolute !important;
            top: 100px;
            bottom: 42px;
            left: 0;
            right: 0;
        }

        .footerPanel {
            position: absolute;
            bottom: 0;
        }

        .forMargin0 {
            margin: 0;
            width: 100%;
        }

        .forVervionPanel {
            width: 100%;
            margin-top: 8px;
        }

        .forVersion {
            margin-right: 10px;
        }

    </ui:style>


    <g:HTMLPanel>
        <g:HorizontalPanel ui:field="widgetPanel" verticalAlignment="middle">
            <g:cell width="99%">
                <g:TextBox readOnly="true" addStyleNames="{style.selected}" ui:field="textBox" width="100%"/>
            </g:cell>
            <g:cell width="1%">
                <g:Image ui:field="pickImageButton" styleName="{style.selectButton}"
                         url="resources/img/reference-16.gif"/>
            </g:cell>
        </g:HorizontalPanel>

        <g:HTMLPanel ui:field="testwrap" visible="false">
            <m:ModalWindow ui:field="modalPanel" iconUrl="" title="вавава">
                <g:VerticalPanel addStyleNames="{modal.mainPanel}">
                    <g:HorizontalPanel spacing="10" width="100%">
                        <g:cell width="99%">
                            <g:VerticalPanel width="100%">
                                <g:TextBox ui:field="searchTextBox" addStyleNames="{modal.forMargin0}"/>
                                <g:HorizontalPanel addStyleNames="{modal.forVervionPanel}" verticalAlignment="middle">
                                    <g:cell horizontalAlignment="right">
                                        <g:Label text="Дата актуальности:" wordWrap="false"
                                                 addStyleNames="{modal.forVersion}"/>
                                    </g:cell>
                                    <g:cell horizontalAlignment="left">
                                        <d:DateMaskBoxPicker ui:field="versionDateBox"/>
                                    </g:cell>
                                </g:HorizontalPanel>
                            </g:VerticalPanel>
                        </g:cell>
                        <g:cell width="1%">
                            <g:Button ui:field="searchButton" text="Найти" width="70px"/>
                        </g:cell>
                    </g:HorizontalPanel>

                    <g:HTMLPanel ui:field="widgetWrapper" addStyleNames="{modal.widgetWrapper}"/>

                    <g:HorizontalPanel addStyleNames="{modal.footerPanel}" spacing="10"
                                       horizontalAlignment="right" verticalAlignment="middle">
                        <g:cell horizontalAlignment="left" width="100%">
                            <g:Label ui:field="selectionCountLabel" text="Выбрано: 0"/>
                        </g:cell>
                        <g:Button ui:field="clearButton" text="Очистить" width="70px"/>
                        <g:Button ui:field="pickButton" text="Выбрать" width="70px"/>
                        <g:Button ui:field="cancelButton" text="Отмена" width="70px"/>
                    </g:HorizontalPanel>

                </g:VerticalPanel>
            </m:ModalWindow>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>