<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.aplana.gwt.client"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker">

    <ui:style>
        .selected {
            color: #000000;
            border-right: 0;
            margin-top: 0;
            margin-bottom: 0;

            /*многоточие*/
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }

        .clearButton {
            border: 1px solid #009900;
            border-right-width: 0;
            border-left-width: 0;
            vertical-align: middle;
            display: block;
            margin-left: -14px;
        }

        .selectButton {
            border: 1px solid #009900;
            vertical-align: middle;
            cursor: pointer;
            display: block;
        }
    </ui:style>

    <ui:style field="modal">
        .mainPanel {
            background-color: #E8E1CF;
            padding: 10px 10px 0;
        }

        .widgetWrapper {
            border: 1px solid #000000;
            width: 780px;
            height: 385px;
        }

        .buttons {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .textAlign {
            text-align: right;
        }

        .marginRight10 {
            margin-right: 10px;
        }

        .fix {
            padding-right: 1px !important;
        }

        .marginBottom{
            margin-bottom: 5px;
        }

    </ui:style>


    <g:HTMLPanel>
        <g:HorizontalPanel ui:field="widgetPanel" verticalAlignment="middle">
            <g:cell width="100%">
                <g:TextBox ui:field="textBox" readOnly="true" width="100%" addStyleNames="{style.selected}"/>
            </g:cell>
            <g:Image ui:field="clearIconButton" addStyleNames="{style.clearButton}"
                         url="resources/img/picker-icons/clear-icon-dummy.png"/>
            <g:Image ui:field="pickImageButton" title="Открыть для выбора" addStyleNames="{style.selectButton}"
                     url="resources/img/picker-icons/refbook-icon.png"/>
        </g:HorizontalPanel>

        <g:HTMLPanel visible="false">
            <m:ModalWindow ui:field="modalPanel" iconUrl="" title="Выбор из справочника">
                <g:VerticalPanel spacing="0" addStyleNames="{modal.mainPanel}" verticalAlignment="top">

                    <g:HorizontalPanel ui:field="filterPanel" spacing="0" width="100%" addStyleNames="{modal.marginBottom}"
                                       verticalAlignment="middle" horizontalAlignment="right">
                        <g:cell horizontalAlignment="left" width="99%">
                            <g:TextBox ui:field="searchTextBox" width="99%"/>
                        </g:cell>
                        <g:Button ui:field="searchButton" text="Найти" width="70px"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel spacing="0" width="100%" addStyleNames="{modal.marginBottom}"
                                       verticalAlignment="middle" horizontalAlignment="right">
                        <g:cell horizontalAlignment="left" width="99%">
                            <g:Label text="Дата актуальности:" wordWrap="false" addStyleNames="{modal.marginRight10}, {modal.textAlign}"/>
                        </g:cell>
                        <d:DateMaskBoxPicker ui:field="versionDateBox" width="148px" addStyleNames="{modal.fix}"/>
                    </g:HorizontalPanel>

                    <g:HTMLPanel ui:field="widgetWrapper" addStyleNames="{modal.widgetWrapper}"/>

                    <g:HorizontalPanel spacing="0" horizontalAlignment="right" verticalAlignment="middle" width="100%" addStyleNames="{modal.buttons}">
                        <g:cell horizontalAlignment="left" width="99%">
                            <g:Label ui:field="selectionCountLabel" width="100%" text="Выбрано: 0"/>
                        </g:cell>
                        <g:Button ui:field="clearButton" text="Очистить" width="70px" addStyleNames="{modal.marginRight10}"/>
                        <g:Button ui:field="pickButton" text="Выбрать" width="70px" addStyleNames="{modal.marginRight10}"/>
                        <g:Button ui:field="cancelButton" text="Закрыть" width="70px"/>
                    </g:HorizontalPanel>

                </g:VerticalPanel>
            </m:ModalWindow>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>