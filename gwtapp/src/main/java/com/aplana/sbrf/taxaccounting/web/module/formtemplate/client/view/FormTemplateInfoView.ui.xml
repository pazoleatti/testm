<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:w='urn:import:com.aplana.gwt.client.mask.ui'>

    <ui:style>
        .formStyle {
            background-color: #949494;
            padding: 15px;
            margin: 30px;
            color: white;
            border-color: #828282;
        }
        .margin5{
            margin-right: 5px;
        }
    </ui:style>

    <g:SimplePanel width="100%" height="100%">

        <g:FlowPanel styleName="{style.formStyle}">

            <g:HorizontalPanel>
                <g:cell>
                    <g:Label width="300px">Период актуальности с</g:Label>
                </g:cell>
                <g:cell>
                    <g:HorizontalPanel width="500px">
                        <g:cell verticalAlignment="middle">
                            <w:YearMaskBox addStyleNames="{style.margin5}" ui:field="versionDateBegin" mayBeNull="true"/>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:Label addStyleNames="{style.margin5}" width="60px">1 января</g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <g:Label addStyleNames="{style.margin5}" width="30px">по</g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                            <w:YearMaskBox addStyleNames="{style.margin5}" ui:field="versionDateEnd" mayBeNull="true"/>
                        </g:cell>
                        <g:cell verticalAlignment="middle" horizontalAlignment="ALIGN_RIGHT">
                            <g:Label width="70px">31 декабря</g:Label>
                        </g:cell>
                    </g:HorizontalPanel>
                </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel>
                <g:Label width="300px">Фиксированный набор строк</g:Label>
                <g:CheckBox ui:field="fixedRowsCheckBox"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel>
                <g:Label width="300px">Признак ежемесячной формы</g:Label>
                <g:CheckBox ui:field="monthlyCheckBox" />
            </g:HorizontalPanel>

			<g:HorizontalPanel height="30px">
				<g:Label width="300px">Наименование формы</g:Label>
				<g:TextBox width="500px" ui:field="nameBox" />
			</g:HorizontalPanel>

            <g:HorizontalPanel height="30px">
                <g:Label width="300px">Полное наименование формы</g:Label>
                <g:TextBox width="500px" ui:field="fullnameBox"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel height="30px">
                <g:Label width="300px">Код формы(идентификатор формы, номер формы)</g:Label>
                <g:TextBox width="500px" ui:field="codeBox"/>
            </g:HorizontalPanel>

        </g:FlowPanel>
    </g:SimplePanel>


</ui:UiBinder>