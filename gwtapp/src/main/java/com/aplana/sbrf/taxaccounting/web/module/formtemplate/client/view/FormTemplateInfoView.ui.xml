<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.aplana.gwt.client.mask.ui">

    <ui:style>
        .formStyle {
            background-color: #949494;
            padding: 15px;
            margin: 30px 30px 0px 30px;
            color: white;
            border-color: #828282;
        }

        .margin5 {
            margin-right: 5px;
        }

        .lineHeightDown {
            line-height: 12px;
        }

        .minWidth {
            width: 32px;
        }

        .fix{
            padding-left: 2px;
        }
    </ui:style>

    <g:VerticalPanel width="100%">

        <g:FlowPanel styleName="{style.formStyle}">

            <g:HorizontalPanel verticalAlignment="middle">
                <g:Label width="250px" wordWrap="false" text="Период актуальности:"/>
                <g:HorizontalPanel verticalAlignment="middle">
                    <g:Label wordWrap="false" text="C 1 января" width="67px" addStyleNames="{style.margin5}"/>
                    <w:YearMaskBox ui:field="versionDateBegin" mayBeNull="true" width="32" addStyleNames="{style.margin5}, {style.fix}, {style.minWidth}" />
                    <g:Label wordWrap="false" width="120px" text="года по 31 декабря"/>
                    <w:YearMaskBox ui:field="versionDateEnd" mayBeNull="true" width="32" addStyleNames="{style.margin5}, {style.fix}, {style.minWidth}" />
                    <g:Label wordWrap="false" text="года"/>
                </g:HorizontalPanel>
            </g:HorizontalPanel>

			<g:HorizontalPanel verticalAlignment="middle" height="26px">
				<g:Label text="Наименование формы:" width="250px"/>
				<g:TextBox width="500px" ui:field="nameBox" addStyleNames="{style.fix}"/>
			</g:HorizontalPanel>

            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label text="Полное наименование формы:" width="250px"/>
                <g:TextBox width="500px" ui:field="fullnameBox" addStyleNames="{style.fix}"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label text="Верхний колонтитул:" width="250px" addStyleNames="{style.lineHeightDown}"/>
                <g:TextBox width="500px" ui:field="headerBox" addStyleNames="{style.fix}"/>
            </g:HorizontalPanel>

        </g:FlowPanel>

        <g:FlowPanel styleName="{style.formStyle}">

            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label text="Фиксированный набор строк:" width="250px"/>
                <g:CheckBox ui:field="fixedRowsCheckBox"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label text="Ежемесячность:" width="250px"/>
                <g:CheckBox ui:field="monthlyCheckBox" />
            </g:HorizontalPanel>

            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label text="Период сравнения:" width="250px"/>
                <g:CheckBox ui:field="comparativeCheckBox"/>
            </g:HorizontalPanel>

            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label text="Расчет нарастающим итогом:" width="250px"/>
                <g:CheckBox ui:field="accruingCheckBox" />
            </g:HorizontalPanel>

            <g:HorizontalPanel verticalAlignment="middle" height="26px">
                <g:Label text='Отображать кнопку "Обновить":' width="250px"/>
                <g:CheckBox ui:field="updatingCheckBox" />
            </g:HorizontalPanel>
        </g:FlowPanel>
    </g:VerticalPanel>


</ui:UiBinder>