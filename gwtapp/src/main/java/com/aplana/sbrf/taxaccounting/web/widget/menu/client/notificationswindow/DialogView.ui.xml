<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
            width: 94px;
        }

        .textArea {
            resize: none;
            width: 350px;
            height: 150px;
        }

        .table {
            position: absolute !important;
            left: 10px;
            right: 10px;
            bottom: 70px;
            top: 40px;
        }

        .pager {
            position: absolute;
            right: 0;
            bottom: 40px;
            white-space: nowrap;
        }

        .footerPanel {
            position: absolute;
            right: 0;
            bottom: 0;
            background-color: #E8E1CF;
            text-align: right;
            width: 100%;
            height: 38px;
        }

        .wrapper {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            top: 27px;
        }

        .headerPanel {
            position: absolute;
            left: 10px;
            right: 10px;
            top: 10px;
            width: 100%;
            height: 20px;
        }
    </ui:style>

    <dw:ModalWindow resizable="true" title="Список оповещений" width="800px" height="400px" minWidth="500px">
        <g:HTMLPanel width="100%" addStyleNames="aplana-ModalWindow-contentBackWhite {style.wrapper}">
            <g:HorizontalPanel addStyleNames="{style.headerPanel}">
                <style:LinkButton ui:field="deleteButton" text="Удалить оповещение"
                                  img="resources/img/row-delete.png"/>
            </g:HorizontalPanel>
            <g:ScrollPanel addStyleNames="{style.table}">
                <style:GenericCellTable ui:field="notificationTable" width="100%" height="100%"/>
            </g:ScrollPanel>

            <pager:FlexiblePager ui:field="pager" addStyleNames="{style.pager}"
                                 location="CENTER" showFastForwardButton="false"
                                 fastForwardRows="0" showLastPageButton="true" type="notificationsWindow"/>
            <g:FlowPanel addStyleNames="{style.footerPanel}">
                <g:Button addStyleNames="{style.footerButton}" text="Закрыть" ui:field="cancelButton"/>
            </g:FlowPanel>
        </g:HTMLPanel>
    </dw:ModalWindow>

</ui:UiBinder> 
