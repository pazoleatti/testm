<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
            width: 94px;
        }

        .textArea {
            resize: none;
            width: 350px;
            height: 150px;
        }
    </ui:style>

    <dw:ModalWindow title="Список оповещений" width="800px">
        <g:VerticalPanel width="100%" addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell width="100%">
                <g:VerticalPanel addStyleNames="{style.content}" width="100%">
                    <style:GenericCellTable ui:field="notificationTable" width="97%"/>
                </g:VerticalPanel>
            </g:cell>
            <g:cell>
                <pager:FlexiblePager ui:field="pager"
                                     location="CENTER" showFastForwardButton="false"
                                     fastForwardRows="0" showLastPageButton="true" type="notificationsWindow"/>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" text="Закрыть" ui:field="cancelButton"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>
    </dw:ModalWindow>

</ui:UiBinder> 
