<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>
        .titleText {
        font-size: 14px;
        color: #636460;
        }
        .marginRight5{
        margin-right: 5px;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Загрузка транспортных файлов"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:VerticalPanel spacing="10">
                    <g:Button ui:field="uploadButton"
                              title="Загрузка ТФ с компьютера пользователя. Может быть загружен один ТФ или архиф zip, содержащий множество ТФ.">
                        Загрузить ТФ с локального компьютера
                    </g:Button>
                    <g:Button ui:field="loadButton"
                              title="Загрузка всех доступных ТФ, находящихся в централизованном каталоге загрузки.">
                        Загрузить ТФ из каталога загрузки
                    </g:Button>
                    <g:FormPanel ui:field="formPanel" encoding="multipart/form-data" method="post">
                        <g:FileUpload ui:field="uploader" name="uploader" visible="false"/>
                    </g:FormPanel>

                </g:VerticalPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>