<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>
        .marginLeft15{
            margin-left: 15px;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Загрузка транспортных файлов"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:VerticalPanel spacing="10">
                    <g:HorizontalPanel>
                        <g:Button ui:field="uploadButton" width="300px"
                                  text="Загрузить ТФ в каталог загрузки"
                                  title="Загрузка ТФ с компьютера пользователя в каталог загрузки. Может быть загружен один ТФ или архив zip, содержащий множество ТФ"/>
                        <g:cell verticalAlignment="middle">
                            <g:Label addStyleNames="{style.marginLeft15}" text="Загрузка ТФ с компьютера пользователя. Может быть загружен один ТФ или архив zip, содержащий множество ТФ."/>
                        </g:cell>
                        <g:FormPanel ui:field="formPanel" encoding="multipart/form-data" method="post">
                            <g:FileUpload ui:field="uploader" name="uploader" visible="false"/>
                        </g:FormPanel>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel>
                        <g:Button ui:field="loadButton" width="300px"
                                  text="Обработать ТФ из каталога загрузки"
                                  title="Обработка всех доступных ТФ, находящихся в централизованном каталоге загрузки."/>
                        <g:cell verticalAlignment="middle">
                            <g:Label addStyleNames="{style.marginLeft15}" text="Загрузка всех доступных ТФ, находящихся в централизованном каталоге загрузки."/>
                        </g:cell>
                    </g:HorizontalPanel>

                </g:VerticalPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>