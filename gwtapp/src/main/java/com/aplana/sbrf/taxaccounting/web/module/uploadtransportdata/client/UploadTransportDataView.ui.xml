<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:fm="urn:import:com.aplana.gwt.client.form"
             xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:fileupload="urn:import:com.aplana.sbrf.taxaccounting.web.module.uploadtransportdata.client.fileupload">

    <ui:style>
        .titleText {
            font-size: 14px;
            color: #636460;
        }
        .marginRight5{
            margin-right: 5px;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <fileupload:FileUploadWidget ui:field="uploadWidget" width="185px"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Загрузка транспортных файлов в каталог загрузки"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel spacing="5">
                    <g:Label text="Подразделение:"/>
                    <picker:DepartmentPickerPopupWidget ui:field="departmentPicker" multiselection="false"
                                                        width="250px" enabled="false" />
                </g:HorizontalPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>