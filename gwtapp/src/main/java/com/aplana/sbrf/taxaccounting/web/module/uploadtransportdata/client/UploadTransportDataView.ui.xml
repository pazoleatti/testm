<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:fm="urn:import:com.aplana.gwt.client.form">
    <ui:style>
        .marginLeft15{
            margin-left: 15px;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label text="Загрузка файлов"/>
                    </fm:Resizable>
                </fm:resizable>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:VerticalPanel spacing="10">
                    <g:HorizontalPanel ui:field="uploadPanel">
                        <g:Button ui:field="uploadButton" width="300px"
                                  text="Загрузить файл"
                                  title="Загружаются только те файлы, которые пользователь предоставляет системе по нажатию этой кнопки"/>
                        <g:cell verticalAlignment="middle">
                            <g:Label addStyleNames="{style.marginLeft15}" text="Загружаются только те файлы, которые пользователь предоставляет системе по нажатию этой кнопки."/>
                        </g:cell>
                        <g:FormPanel ui:field="formPanel" encoding="multipart/form-data" method="post">
                            <g:FileUpload ui:field="uploader" name="uploader" visible="false"/>
                        </g:FormPanel>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel ui:field="loadPanel">
                        <g:Button ui:field="loadButton" width="300px"
                                  text="Обработать файлы из каталога загрузки"
                                  title="Загружаются файлы из каталогов загруки"/>
                        <g:cell verticalAlignment="middle">
                            <g:Label addStyleNames="{style.marginLeft15}" text="Загружаются файлы из каталогов загруки."/>
                        </g:cell>
                    </g:HorizontalPanel>

                </g:VerticalPanel>
            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>

</ui:UiBinder>