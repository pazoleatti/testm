<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:fm="urn:import:com.aplana.gwt.client.form"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
        >
    <ui:style>
        .titleText {
            font-size: 14px !important;
            color: #636460;
            white-space: nowrap;
        }

        .titleText div {
            font-size: 14px !important;
        }

        .btnPanel {
            height: 30px;
            padding-left: 10px;
        }

        .btnPanel td {
            vertical-align: middle !important;
        }

        .splitter {
            position: absolute !important;
            bottom: 0;
            right: 0;
            left: 0;
            top: 34px; /*@see com.aplana.sbrf.taxaccounting.web.module.refbookdata.client.RefBookHierView.DEFAULT_HIERARCHY_PANEL_TOP_POSITION*/
            border-top: 1px solid #aeaeac;
        }

        .marginRight5 {
            margin-right: 5px;
        }

        .marginRight2{
            margin-right: 2px;
        }

        .verSep {
            height: 22px;
            margin: 0 9px;
            border-right: 1px solid #aeaeac;
        }

        .printAnchor {
            padding-left: 14px;
            padding-right: 6px;
        }
    </ui:style>

    <ui:style field="lock">
        .lockInformation {
            height: 25px;   /*@see com.aplana.sbrf.taxaccounting.web.module.refbookdata.client.RefBookHierView.LOCK_INFO_BLOCK_HEIGHT*/
            line-height: 24px;
            background: #FFDC82;
            padding-left: 15px;
            margin: 2px;
            font-size: 14px;
            border: 1px solid #DBDBDB;

            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            -ms-text-overflow: ellipsis;
        }
    </ui:style>

    <fm:MainContainer>
        <fm:header>
            <fm:HeaderContainer>
                <fm:left>
                    <fm:Left>
                        <style:LeftBar marginRight="5" childValign="middle" height="100%">
                            <style:LinkAnchor ui:field="backAnchor" title="Перейти к списку справочников" text="Справочники"
                                              href="#!refbooklist" disableImage="true"
                                              addStyleNames="{style.titleText}, {style.marginRight5}"/>
                            <style:LinkButton ui:field="backToRefBookAnchor" title="Перейти к справочнику" text="Справочники" disableImage="true"
                                              addStyleNames="{style.titleText}, {style.marginRight5}" visible="false"/>
                            <g:Label text="—" addStyleNames="{style.titleText}"/>
                        </style:LeftBar>
                    </fm:Left>
                </fm:left>
                <fm:resizable>
                    <fm:Resizable>
                        <g:Label ui:field="titleDesc"/>
                    </fm:Resizable>
                </fm:resizable>
                <fm:right>
                    <fm:Right>
                        <style:LeftBar marginRight="10" childValign="middle" height="100%">
                            <style:DropdownButton ui:field="printAnchor" text="Формирование отчетов" img="resources/img/printer-16.png"
                                                  title="Формирование отчетов" panelStyleName="{style.printAnchor}"/>
                            <style:LinkButton ui:field="upload" text="Загрузить файл" img="resources/img/up_cc.png"
                                              title="Загрузить файл" addStyleNames="{style.printAnchor}"/>
                        </style:LeftBar>
                    </fm:Right>
                </fm:right>
            </fm:HeaderContainer>
        </fm:header>
        <fm:body>
            <fm:BodyContainer>
                <g:HorizontalPanel verticalAlignment="middle" width="100%" addStyleNames="{style.btnPanel}">
                    <g:HorizontalPanel verticalAlignment="middle">
                        <style:LinkButton title="Добавить запись" text="Добавить запись" ui:field="addRow"
                                          img="resources/img/row-add.png" addStyleNames="{style.marginRight5}"/>
                        <style:LinkButton title="Удалить запись" text="Удалить запись" ui:field="deleteRow"
                                          img="resources/img/row-delete.png" addStyleNames="{style.marginRight5}"/>
                        <g:HTML ui:field="separator" addStyleNames="{style.verSep}"/>
                    </g:HorizontalPanel>

                    <g:HorizontalPanel verticalAlignment="middle">
                        <g:Label wordWrap="false" text="Дата актуальности: " addStyleNames="{style.marginRight2}"
                                 ui:field="relevanceDateLabel"/>
                        <d:DateMaskBoxPicker ui:field="relevanceDate" width="110px"/>
                    </g:HorizontalPanel>

                    <g:cell>
                        <g:HorizontalPanel verticalAlignment="middle" addStyleNames="{style.marginRight5}">
                            <g:HTML ui:field="separatorVersion" addStyleNames="{style.verSep}"/>
                            <g:TextBox width="210px" ui:field="filterText" addStyleNames="{style.marginRight5}" maxLength="200"/>
                            <g:Button title="Найти" width="70px" text="Найти" ui:field="search"/>
                        </g:HorizontalPanel>
                    </g:cell>
                    <g:cell horizontalAlignment="left" width="100%">
                        <g:CheckBox ui:field="exactSearch" wordWrap="false" text="Искать по точному совпадению" enabled="false"/>
                    </g:cell>

                    <g:HorizontalPanel verticalAlignment="middle" addStyleNames="{style.marginRight5}">
                        <g:Button title="Завершить редактирование" text="Завершить редактирование"
                                  ui:field="cancelEdit" visible="false"/>
                        <style:LinkButton title="Редактировать" text="Редактировать" ui:field="edit"/>
                    </g:HorizontalPanel>

                </g:HorizontalPanel>

                <g:Label ui:field="lockInformation" visible="false"  addStyleNames="{lock.lockInformation}"/>

                <g:SplitLayoutPanel ui:field="hierarchyPanel" addStyleNames="{style.splitter}">
                    <g:center>
                        <g:SimplePanel ui:field="mainPanel"/>
                    </g:center>
                    <g:east size="500">
                        <g:SimplePanel ui:field="contentPanel"/>
                    </g:east>
                </g:SplitLayoutPanel>


            </fm:BodyContainer>
        </fm:body>
    </fm:MainContainer>
</ui:UiBinder>