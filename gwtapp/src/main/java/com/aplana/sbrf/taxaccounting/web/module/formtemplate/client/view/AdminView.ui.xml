<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">
    <ui:style>
        .title {
            font-size: 16px;
            margin: 10px;
        }
    </ui:style>
    <g:ScrollPanel>
    	<g:FlowPanel>
            <g:HorizontalPanel>
                <g:Label styleName="{style.title}">Список шаблонов форм</g:Label>
                <g:FlowPanel width="100%" ui:field="filterContentPanel" />
            </g:HorizontalPanel>
			<g:VerticalPanel width="100%">
        		<style:GenericCellTable ui:field="formTemplateTable" width="100%" />
        	</g:VerticalPanel>
    	</g:FlowPanel>
    </g:ScrollPanel>
</ui:UiBinder>
