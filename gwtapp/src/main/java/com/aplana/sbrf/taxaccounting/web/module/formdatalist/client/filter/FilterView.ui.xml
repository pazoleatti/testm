<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">

    <g:VerticalPanel>
        <g:cell height="50px">
            <g:HorizontalPanel>
                <g:cell width="250px">
                    <g:VerticalPanel ui:field="reportPeriodPanel">
                        <g:Label width="200px" text="Отчетный период" />
                    </g:VerticalPanel>
                </g:cell>
                <g:cell width="250px">
                    <g:VerticalPanel>
                        <g:Label width="200px" text="Тип налоговой формы"/>
                        <g:ValueListBox width="200px" ui:field="formDataKind" />
                    </g:VerticalPanel>
                </g:cell>
                <g:cell width="250px">
                    <g:VerticalPanel>
                        <g:Label width="200px" text="Вид налоговой формы"/>
                        <g:ValueListBox width="200px" ui:field="formTypeId" />
                    </g:VerticalPanel>
                </g:cell>
                <g:cell width="250px">
                    <g:VerticalPanel>
                        <g:Label width="200px" text="Состояние"/>
                        <g:ValueListBox width="200px" ui:field="formState"/>
                    </g:VerticalPanel>
                </g:cell>
            </g:HorizontalPanel>
        </g:cell>
        <g:cell height="50px">
            <g:HorizontalPanel>
                <g:cell width="250px" verticalAlignment="bottom">
                    <g:FlowPanel ui:field="departmentSelectionTreePanel">
                        <g:Label width="200px" text="Подразделение" />
                    </g:FlowPanel>
                </g:cell>
                <g:cell verticalAlignment="bottom">
                    <style:Bar>
                        <style:LeftBar>
                            <g:Button ui:field="create">Создать</g:Button>
                            <g:Button ui:field="apply">Поиск</g:Button>
                        </style:LeftBar>
                    </style:Bar>
                </g:cell>
            </g:HorizontalPanel>
        </g:cell>
    </g:VerticalPanel>

</ui:UiBinder> 