<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:lbe="urn:import:com.aplana.sbrf.taxaccounting.web.widget.listeditor.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HorizontalPanel spacing="5" width="100%">
		<g:VerticalPanel width="100%">
			<g:Label text="Отчетный период" />
			<lbe:ListBoxEditor ui:field="period"
				multipleSelect="true" width="100%"/>
		</g:VerticalPanel>
		<g:VerticalPanel width="100%">
			<g:Label text="Подразделение" />
			<lbe:ListBoxEditor ui:field="department"
				multipleSelect="true" width="100%"/>
		</g:VerticalPanel>
		<g:VerticalPanel width="100%">
			<g:Label text="Налоговая форма (тип)" />
			<lbe:ListBoxEditor ui:field="formtype"
				multipleSelect="true" width="100%"/>
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 