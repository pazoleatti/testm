<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style">

	<g:VerticalPanel>
		<g:cell height="50px">
			<g:HorizontalPanel>
				<g:cell width="250px">
					<g:FlowPanel>
						<g:Label width="200px" text="Подразделение" />
						<g:SimplePanel ui:field="departmentSelectionTreePanel" width="200px" />
					</g:FlowPanel>
				</g:cell>
				<g:cell width="250px">
					<g:VerticalPanel>
						<g:Label width="200px" text="Тип налоговой формы" />
						<g:ValueListBox width="200px" ui:field="formDataKind" />
					</g:VerticalPanel>
				</g:cell>
				<g:cell width="250px">
					<g:VerticalPanel>
						<g:Label width="200px" text="Вид налоговой формы" />
						<style:ListBoxWithTooltip width="200px"
							ui:field="formTypeId" showTooltip="true" />
					</g:VerticalPanel>
				</g:cell>
				<g:cell width="250px">
					<g:VerticalPanel>
						<g:Label width="200px" text="Состояние" />
						<g:ValueListBox width="200px" ui:field="formState" />
					</g:VerticalPanel>
				</g:cell>
				<g:cell width="250px">
					<g:VerticalPanel>
						<g:Label width="200px" text="Признак возврата" />
						<g:ValueListBox width="200px" ui:field="returnState" />
					</g:VerticalPanel>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell height="50px">
			<g:HorizontalPanel>
				<g:cell width="250px" verticalAlignment="bottom">
					<g:FlowPanel>
						<g:Label width="200px" text="Отчетный период" />
						<g:SimplePanel ui:field="reportPeriodPanel" width="200px" />
					</g:FlowPanel>
				</g:cell>
				<g:cell verticalAlignment="bottom">
					<style:Bar>
						<style:LeftBar>
							<g:Button ui:field="create">Создать</g:Button>
							<g:Button ui:field="apply">Поиск</g:Button>
						</style:LeftBar>
					</style:Bar>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>

</ui:UiBinder> 