<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:lbe="urn:import:com.aplana.sbrf.taxaccounting.web.widget.listeditor.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>

	<g:HorizontalPanel width="50%">
        <g:VerticalPanel spacing="5" width="100%">
            <g:Label text="Отчетный период" />
		    <lbe:LongListBoxEditor ui:field="period" visibleItemCount="1" />

	        <g:Label text="Подразделение" />
	        <lbe:LongListBoxEditor ui:field="department" visibleItemCount="1"/>
        </g:VerticalPanel>

        <g:VerticalPanel spacing="5" width="100%">
	        <g:Label text="Налоговая форма (тип)"/>
            <lbe:LongListBoxEditor ui:field="formtype" visibleItemCount="1"/>

            <g:Label text="Вид"/>
            <lbe:LongListBoxEditor ui:field="kind" visibleItemCount="1" />
        </g:VerticalPanel>
    </g:HorizontalPanel>

</ui:UiBinder> 