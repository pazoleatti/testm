<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
	<ui:style>
		.important {
			font-weight: bold;
		}

        .departmentTextBox{
            font-weight: bold;
            background-color: #ffffff;
        }

        .departmentSelectionButton{
            text-align: center;
            font-weight: bold;
        }

	</ui:style>

	<g:HorizontalPanel width="50%">
        <g:VerticalPanel spacing="5" width="100%">
            <g:Label width="200px" text="Отчетный период" />
		    <g:ValueListBox width="200px" ui:field="reportPeriodId" />

	        <g:Label width="200px" text="Подразделение" />
            <g:HorizontalPanel >
                <g:TextBox  enabled="false" ui:field="selectedDepartmentTextBox" width="170px" addStyleNames="{style.departmentTextBox}"/>
                <g:Button ui:field="selectDepartmentButton" text="..." addStyleNames="{style.departmentSelectionButton}"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>

        <g:VerticalPanel spacing="5" width="100%">
	        <g:Label width="200px" text="Тип налоговой формы"/>
            <g:ValueListBox width="200px" ui:field="formDataKind" />

            <g:Label width="200px" text="Вид налоговой формы"/>
            <g:ValueListBox width="200px" ui:field="formTypeId" />
        </g:VerticalPanel>

        <g:VerticalPanel spacing="5" width="100%">
            <g:Label width="200px" text="Статус формы"/>
            <g:ValueListBox width="200px" ui:field="formState"/>
        </g:VerticalPanel>
    </g:HorizontalPanel>

</ui:UiBinder> 