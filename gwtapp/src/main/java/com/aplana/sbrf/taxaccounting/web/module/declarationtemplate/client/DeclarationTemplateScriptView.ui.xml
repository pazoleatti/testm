<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cm='urn:import:com.aplana.sbrf.taxaccounting.web.widget.codemirror.client'>
    <ui:style>
        .margin5 {
            margin: 5px;
            min-width: 100px;
            z-index: 0;
            position: absolute !important;
        }

        .margin2 {
            margin: 2px;
        }

        .table {
            z-index: 0;
            position: absolute !important;
            right: 4px;
            left: 200px;
            width: auto !important;
        }

    </ui:style>


        <g:HorizontalPanel >
            <g:VerticalPanel addStyleNames="{style.margin5}">
                <g:Label addStyleNames="{style.margin2}">Выбор скрипта события</g:Label>
                <g:VerticalPanel>
                    <g:ListBox width="100%" visibleItemCount="10" ui:field="eventScriptListBox" addStyleNames="{style.margin2}">
                    </g:ListBox>
                    <g:HorizontalPanel spacing="8" horizontalAlignment="right" verticalAlignment="middle"
                                       width="100%">
                        <g:Button ui:field="addButton" text="Добавить" width="70px"/>
                        <g:Button ui:field="removeButton" text="Удалить" width="70px"/>
                    </g:HorizontalPanel>
                </g:VerticalPanel>

            </g:VerticalPanel>

                <cm:CodeMirror ui:field="createScript" addStyleNames="{style.table}"/>

        </g:HorizontalPanel>

</ui:UiBinder>