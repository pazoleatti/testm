<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 50px;
        }

        .footerButton {
            margin:  14px 17px 14px 0px !important;
        }

        .caption {
            margin: 0px 10px;
        }

        .dateBoxPopup {
            z-index: 1000001;
        }
    </ui:style>


    <dw:ModalWindow glassEnabled="true" ui:field="deadlineDialog" iconUrl="" title="">

        <g:VerticalPanel>
            <g:cell>
                <g:HorizontalPanel addStyleNames="{style.content}">
                    <g:cell horizontalAlignment="ALIGN_LEFT" width="100%" height="100%">
                        <picker:DepartmentTreeWidget header="Подразделение" ui:field="departmentPicker" height="270px" width="300px"/>
                    </g:cell>
                    <g:cell verticalAlignment="MIDDLE">
                        <g:HorizontalPanel width="300px">
                            <g:cell>
                                <g:Label styleName="{style.caption}">Срок сдачи отчетности</g:Label>
                            </g:cell>
                            <g:cell horizontalAlignment="ALIGN_LEFT">
                                <d:CustomDateBox width="130px" ui:field="deadline"/>
                            </g:cell>
                        </g:HorizontalPanel>
                    </g:cell>
                </g:HorizontalPanel>
            </g:cell>

            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" ui:field="saveButton">Сохранить</g:Button>
                    <g:Button addStyleNames="{style.footerButton}" ui:field="cancelButton">Отмена</g:Button>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>

    </dw:ModalWindow>

</ui:UiBinder> 