<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>
        .content {
            margin: 10px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0px !important;
            width: 84px;
        }

        .marginLeft{
            margin-left: 10px;
            border: 1px solid #aeaeac;
        }
    </ui:style>


    <dw:ModalWindow glassEnabled="true" ui:field="deadlineDialog" iconUrl="" title="">

        <g:VerticalPanel>
            <g:cell>
                <g:HorizontalPanel addStyleNames="{style.content}">
                    <g:cell horizontalAlignment="ALIGN_LEFT" width="100%" height="100%">
                        <picker:DepartmentTreeWidget header="Подразделение" ui:field="departmentPicker" height="270px"
                                                     width="300px" multiSelection="false"/>
                    </g:cell>
                    <g:cell verticalAlignment="MIDDLE" height="100%">
                        <g:SimplePanel height="295px"  width="300px" addStyleNames="{style.marginLeft}">
                            <g:VerticalPanel height="100%" >
                                <g:cell verticalAlignment="bottom">
                                    <g:HorizontalPanel spacing="4" width="300px">
                                        <g:cell verticalAlignment="middle">
                                            <g:Label wordWrap="false" text="Срок сдачи отчетности"/>
                                        </g:cell>
                                        <g:cell verticalAlignment="middle">
                                            <d:DateMaskBoxPicker ui:field="deadline" />
                                        </g:cell>
                                    </g:HorizontalPanel>
                                </g:cell>
                                <g:cell horizontalAlignment="right" verticalAlignment="bottom">
                                    <g:HorizontalPanel spacing="4">
                                        <g:Button ui:field="saveButton" text="Сохранить"/>
                                        <g:Button ui:field="cancelButton" text="Отменить"/>
                                    </g:HorizontalPanel>
                                </g:cell>
                            </g:VerticalPanel>
                        </g:SimplePanel>
                    </g:cell>

                </g:HorizontalPanel>
            </g:cell>

            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:FlowPanel addStyleNames="{style.footerPanel}">
                    <g:Button addStyleNames="{style.footerButton}" ui:field="exitButton" text="Закрыть"/>
                </g:FlowPanel>
            </g:cell>
        </g:VerticalPanel>

    </dw:ModalWindow>

</ui:UiBinder> 