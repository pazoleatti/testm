<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:picker="urn:import:com.aplana.sbrf.taxaccounting.web.widget.departmentpicker"
             xmlns:d="urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker"
             xmlns:dw="urn:import:com.aplana.gwt.client">

    <ui:style>

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
            width: 84px;
        }

        .footerButtonLeft {
            margin: 8px 0 8px 10px !important;
            width: 84px;
        }

        .typicalFormBody {
            border: solid 1px #aeaeac;
            padding: 0 5px 5px 5px;
            margin: 10px 10px 5px 10px;
            background-color: #f4f1eb;
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;
        }

        .labelDate {
            font-weight: bold;
        }

    </ui:style>


    <dw:ModalWindow ui:field="deadlineDialog">
        <g:VerticalPanel width="100%" addStyleNames="aplana-ModalWindow-contentBackWhite">
            <g:cell>
                <g:VerticalPanel addStyleNames="{style.typicalFormBody}">
                    <g:cell>
                        <g:HorizontalPanel spacing="4" verticalAlignment="middle">
                                <g:Label addStyleNames="{style.labelDate}" wordWrap="false"
                                         text="Срок сдачи отчетности:"/>
                                <d:DateMaskBoxPicker ui:field="deadline" canBeEmpty="true"/>
                        </g:HorizontalPanel>
                    </g:cell>
                    <g:cell>
                        <picker:DepartmentTreeWidget headerVisible="false" ui:field="departmentPicker" height="250px"
                                                     multiSelection="false"/>
                    </g:cell>
                </g:VerticalPanel>
            </g:cell>
            <g:cell horizontalAlignment="ALIGN_RIGHT">
                <g:HorizontalPanel addStyleNames="{style.footerPanel}">
                    <g:cell>
                        <g:FlowPanel>
                            <g:Button addStyleNames="{style.footerButtonLeft}" ui:field="saveButton" text="Сохранить"/>
                            <g:Button addStyleNames="{style.footerButtonLeft}" ui:field="cancelButton" text="Отменить"/>
                        </g:FlowPanel>
                    </g:cell>
                    <g:cell horizontalAlignment="ALIGN_RIGHT">
                        <g:Button addStyleNames="{style.footerButton}" ui:field="exitButton" text="Закрыть"/>
                    </g:cell>
                </g:HorizontalPanel>
            </g:cell>
        </g:VerticalPanel>

    </dw:ModalWindow>

</ui:UiBinder>