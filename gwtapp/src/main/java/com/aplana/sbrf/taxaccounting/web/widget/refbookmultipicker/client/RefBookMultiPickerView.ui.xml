<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:style="urn:import:com.aplana.sbrf.taxaccounting.web.widget.style"
             xmlns:pager="urn:import:com.aplana.sbrf.taxaccounting.web.widget.pager">

    <ui:style>

        .tableWrapper {
            position: absolute !important;
            top: 0;
            left: 0;
            right: 0;
            bottom: 30px;
        }

        .table {
            background-color: #ffffff;
        }

        .pager {
            white-space: nowrap;

            position: absolute !important;
            bottom: 0;
            right: 0;

            height: 30px;
        }

        .viewWrapper {
            position: relative;
            width: 100%;
            height: 100%;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.viewWrapper}">
        <g:ResizeLayoutPanel addStyleNames="{style.tableWrapper}">
            <style:GenericDataGrid ui:field="cellTable" width="100%" height="100%" addStyleNames="{style.table}"/>
        </g:ResizeLayoutPanel>

        <pager:FlexiblePager ui:field="pager" location="RIGHT" addStyleNames="{style.pager}"
                             showFastForwardButton="false" fastForwardRows="0"
                             showLastPageButton="true" type="refBookPicker" defaultPageSize="100"/>

    </g:HTMLPanel>
</ui:UiBinder>