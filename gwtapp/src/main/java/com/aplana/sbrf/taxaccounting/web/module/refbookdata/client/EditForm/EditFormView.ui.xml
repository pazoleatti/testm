<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:d='urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .editPadding {
            padding: 5px;
            width: 100%;
            height: 100%;
        }

        .horSep {
            height: 0;
            margin-top: 5px;
            border-top: 1px solid #aeaeac;
        }

        .childMiddle td {
            vertical-align: middle !important;

        }

        .wrapper {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            top: 0;
        }

        .scrPanel {
            position: absolute !important;
            left: 0;
            right: 0;
            bottom: 32px;
            top: 0;
        }

        .saveCancel {
            position: absolute;
            bottom: 0;
            border-top: 1px solid #aeaeac;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.wrapper}">

        <g:ScrollPanel addStyleNames="{style.scrPanel}">
            <g:VerticalPanel styleName="{style.editPadding}">
                <g:cell height="30px">
                    <g:HorizontalPanel spacing="4" addStyleNames="{style.childMiddle}">
                        <g:Label wordWrap="false" text="Действует с:"/>
                        <d:DateMaskBoxPicker ui:field="versionStart" width="110px"/>
                        <g:Label text=" по:" width="20px"/>
                        <d:DateMaskBoxPicker ui:field="versionEnd" canBeEmpty="true" width="110px"/>
                    </g:HorizontalPanel>
                </g:cell>
                <g:cell>
                    <style:LinkAnchor ui:field="allVersion" visible="false" disableImage="true"
                                      title="Посмотреть все версии"/>
                </g:cell>
                <g:cell>
                    <g:Label addStyleNames="{style.horSep}"/>
                </g:cell>
                <g:cell height="100%">
                    <g:VerticalPanel spacing="10" ui:field="editPanel" width="100%" styleName="formPanel"/>
                </g:cell>
            </g:VerticalPanel>
        </g:ScrollPanel>

        <g:HorizontalPanel width="100%" height="30px" spacing="5" addStyleNames="{style.saveCancel}">
            <g:cell width="50%" horizontalAlignment="right">
                <g:Button ui:field="save" enabled="false" text="Сохранить" width="80px"/>
            </g:cell>
            <g:cell width="50%" horizontalAlignment="left">
                <g:Button ui:field="cancel" enabled="false" text="Отмена" width="80px"/>
            </g:cell>
        </g:HorizontalPanel>

    </g:HTMLPanel>


</ui:UiBinder>