<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:d='urn:import:com.aplana.sbrf.taxaccounting.web.widget.datepicker'
             xmlns:style='urn:import:com.aplana.sbrf.taxaccounting.web.widget.style'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .editPadding {
            padding: 5px;
        }
    </ui:style>
    <g:VerticalPanel styleName="{style.editPadding}" width="100%" height="100%">
        <g:cell height="5%">
            <g:HorizontalPanel width="80%" spacing="10">
                <g:VerticalPanel spacing="5">
                        <g:Label text="Действует с:"/>
                        <d:CustomDateBox ui:field="versionStart"/>
                </g:VerticalPanel>
                <g:VerticalPanel spacing="5">
                        <g:Label text="Действует по:"/>
                        <d:CustomDateBox ui:field="versionEnd" canBeEmpty="true"/>
                </g:VerticalPanel>
            </g:HorizontalPanel>
        </g:cell>
        <g:cell height="5%" horizontalAlignment="ALIGN_CENTER">
            <g:HorizontalPanel>
                <style:LinkAnchor ui:field="allVersion" visible="false"/>
            </g:HorizontalPanel>
        </g:cell>
        <g:cell height="80%">
            <g:ScrollPanel height="100%">
                <g:VerticalPanel spacing="10" ui:field="editPanel" styleName="formPanel" verticalAlignment="ALIGN_TOP"/>
            </g:ScrollPanel>
        </g:cell>
        <g:cell height="10%">
            <g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_BOTTOM">
                <g:HorizontalPanel spacing="5">
                    <g:Button ui:field="save" enabled="false">Сохранить</g:Button>
                    <g:Button ui:field="cancel" enabled="false">Отмена</g:Button>
                </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:cell>
    </g:VerticalPanel>

</ui:UiBinder>