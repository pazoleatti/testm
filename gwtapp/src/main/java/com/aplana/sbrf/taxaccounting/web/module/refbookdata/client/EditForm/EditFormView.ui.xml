<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .editPadding{
            padding: 5px;
        }
    </ui:style>
    <g:VerticalPanel styleName="{style.editPadding}" width="100%" height="100%">
        <g:cell height="95%">
            <g:ScrollPanel height="100%">
                <g:VerticalPanel spacing="10" ui:field="editPanel" styleName="formPanel" verticalAlignment="ALIGN_TOP"/>
            </g:ScrollPanel>
        </g:cell>
        <g:cell>
            <g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_BOTTOM">
                <g:HorizontalPanel  spacing="5">
                    <g:Button ui:field="save" enabled="false">Сохранить</g:Button>
                    <g:Button ui:field="cancel" enabled="false">Отмена</g:Button>
                </g:HorizontalPanel>
            </g:HorizontalPanel>
        </g:cell>
    </g:VerticalPanel>

</ui:UiBinder>