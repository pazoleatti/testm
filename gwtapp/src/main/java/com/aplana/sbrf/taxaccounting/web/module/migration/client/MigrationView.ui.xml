<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .titleLabel {
            font-size: 26px;
            margin: 10px;
        }

        .fix {
            padding: 2px !important;    /*у TextArea сдвиг влево по маргину идет и поэтому полностью не влазит, применил этот фикс*/
        }
    </ui:style>
    <g:DockLayoutPanel ui:field="dockPanel">
        <g:north size="90">
            <g:VerticalPanel>
                <g:Label styleName="{style.titleLabel}" text="Миграция исторических данных"/>
                <g:Button ui:field="loadButton" text="Загрузить"/>
            </g:VerticalPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel styleName="{style.fix}">
                <g:TextArea ui:field="textArea" readOnly="true" width="1000px" height="400px" />
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>