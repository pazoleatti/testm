<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dw='urn:import:com.aplana.gwt.client'>
    <ui:style>

        .content {
            margin: 10px 10px 35px 10px;
            min-height: 50px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin:  8px 10px 8px 0px !important;
            width: 64px;
        }

        .image{
            margin-right: 10px;
        }

    </ui:style>

    <g:VerticalPanel width="450px">
        <g:HorizontalPanel addStyleNames="{style.content}">
            <g:cell verticalAlignment="MIDDLE">
                <g:FlowPanel addStyleNames="{style.image}" ui:field="imagePanel"/>
            </g:cell>
            <g:cell verticalAlignment="MIDDLE">
                <g:Label ui:field="message" />
            </g:cell>
        </g:HorizontalPanel>
        <g:cell horizontalAlignment="ALIGN_RIGHT" >
            <g:FlowPanel addStyleNames="{style.footerPanel}" >
                <g:Button ui:field="yesButton" addStyleNames="{style.footerButton}" text="Да" visible="false"/>
                <g:Button ui:field="noButton" addStyleNames="{style.footerButton}" text="Нет" visible="false"/>
                <g:Button ui:field="okButton" addStyleNames="{style.footerButton}" text="Ок" visible="false"/>
                <g:Button ui:field="cancelButton" addStyleNames="{style.footerButton}" text="Отмена" visible="false"/>
                <g:Button ui:field="closeButton" addStyleNames="{style.footerButton}" text="Закрыть" visible="false"/>
            </g:FlowPanel>
        </g:cell>
    </g:VerticalPanel>

</ui:UiBinder>