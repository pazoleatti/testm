<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

        .content {
            margin: 10px 10px 35px 10px;
            min-height: 50px;
        }

        .footerPanel {
            background-color: #E8E1CF;
            width: 100%;
            height: 38px;
        }

        .footerButton {
            margin: 8px 10px 8px 0 !important;
            width: 64px;
        }

        .image {
            margin-right: 10px;
        }

        .bgcolor {
            background-color: white;
        }

    </ui:style>

    <g:VerticalPanel addStyleNames="{style.bgcolor}" verticalAlignment="TOP">
        <g:HorizontalPanel addStyleNames="{style.content}" verticalAlignment="MIDDLE">
            <g:FlowPanel addStyleNames="{style.image}" ui:field="imagePanel"/>
            <g:Label ui:field="message"/>
        </g:HorizontalPanel>
        <g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="BOTTOM">
            <g:FlowPanel addStyleNames="{style.footerPanel}">
                <g:Button ui:field="yesButton" addStyleNames="{style.footerButton}" text="Да" visible="false"/>
                <g:Button ui:field="noButton" addStyleNames="{style.footerButton}" text="Нет" visible="false"/>
                <g:Button ui:field="okButton" addStyleNames="{style.footerButton}" text="OK" visible="false"/>
                <g:Button ui:field="cancelButton" addStyleNames="{style.footerButton}" text="Отменить" visible="false"/>
                <g:Button ui:field="closeButton" addStyleNames="{style.footerButton}" text="Закрыть" visible="false"/>
            </g:FlowPanel>
        </g:cell>
    </g:VerticalPanel>

</ui:UiBinder>