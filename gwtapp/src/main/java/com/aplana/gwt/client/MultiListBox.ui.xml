<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.aplana.gwt.client'>

    <ui:style>
        .btn {
            width: 22px;
            height: 22px;
            /*margin-top: 2px;*/
        }

        .txt {
           /* border: 1px solid #AFAEAB;*/
            background-color: #FFFFFF;
            color: #000000;
            width: 100%;
            margin-left: 0px;
        }

        .footerPanel {
            margin: 15px 0px 0px 0px;
            background-color: #E8E1CF;
            border: solid 1px #D0CECA;
            width: 100%;
            height: 50px;
        }

        .countSelected {
            font-weight: bold;
        }

        .popupPanel {
            border: solid 1px #D0CECA;
            padding: 0;
        }

    </ui:style>
    <g:VerticalPanel width="100%" visible="true">
        <g:HorizontalPanel width="100%" ui:field="panel">
            <g:cell width="100%">
                <g:TextBox width="100%" ui:field="txt" enabled="false" addStyleNames="{style.txt}"/>
            </g:cell>
            <g:cell>
                <g:Button ui:field="showButton" width="22px" height="21px"/>
            </g:cell>
        </g:HorizontalPanel>
        <g:FlowPanel visible="false">
            <g:PopupPanel addStyleNames="{style.popupPanel}" ui:field="popupPanel" autoHideEnabled="true" modal="true">
                <g:VerticalPanel>
                    <g:cell>
                        <g:VerticalPanel ui:field="checkBoxPanel"/>
                    </g:cell>
                    <g:cell>
                        <g:HorizontalPanel spacing="1" ui:field="footerPanel" addStyleNames="{style.footerPanel}" horizontalAlignment="ALIGN_RIGHT">
                            <g:Label>Выбрано:</g:Label>
                            <g:Label addStyleNames="{style.countSelected}" ui:field="cnt"/>
                            <g:Button ui:field="selectButton">Выбрать</g:Button>
                            <g:Button ui:field="cancelButton">Отмена</g:Button>
                        </g:HorizontalPanel>
                    </g:cell>
                </g:VerticalPanel>
            </g:PopupPanel>
        </g:FlowPanel>
    </g:VerticalPanel>

    <!--<g:HorizontalPanel>
        <g:CellPanel></g:CellPanel>
    </g:HorizontalPanel>-->

</ui:UiBinder>