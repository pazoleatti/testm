<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .txt {
            background-color: #FFFFFF;
            color: #000000;
            margin: 0px;
            font-size: 11px;
            font-weight: bold;
        }

        .footerPanel {
            margin: 0px;
            min-width: 190px;
            background-color: #E8E1CF;
            border: solid 1px #D0CECA;
            vertical-align: middle;
        }

        .countSelected {
            font-weight: bold;
            margin: 9px 5px 8px 0px;
        }

        .selectedLabel{
            margin: 9px 5px 8px 10px;
        }

        .popupPanel {
            border: solid 1px #D0CECA;
            padding: 0;
        }

        .selectButton{
            margin-top: 8px;
            margin-bottom: 8px;
            margin-right: 10px;
        }

        .cancelButton{
            margin-top: 8px;
            margin-bottom: 8px;
            margin-right: 10px;
        }

        .showButton{
            margin: 0px;
        }

    </ui:style>
    <g:VerticalPanel width="100%" visible="true">
        <g:HorizontalPanel width="100%" ui:field="panel">
            <g:cell width="100%">
                <g:TextBox width="100%" height="16px" ui:field="txt" enabled="false" addStyleNames="{style.txt}"/>
            </g:cell>
            <g:cell>
                <g:Button ui:field="showButton" addStyleNames="{style.showButton}" width="25px" >...</g:Button>
            </g:cell>
        </g:HorizontalPanel>
        <g:FlowPanel visible="false">
            <g:PopupPanel addStyleNames="{style.popupPanel}" ui:field="popupPanel" autoHideEnabled="true" modal="true">
                <g:VerticalPanel>
                    <g:cell>
                        <g:ScrollPanel ui:field="scrollPanel">
                            <g:VerticalPanel ui:field="checkBoxPanel"/>
                        </g:ScrollPanel>
                    </g:cell>
                    <g:cell>
                        <g:HorizontalPanel width="100%" height="38px" spacing="1" ui:field="footerPanel" addStyleNames="{style.footerPanel}" >
                            <g:cell>
                                <g:HorizontalPanel>
                                    <g:Label addStyleNames="{style.selectedLabel}">Выбрано:</g:Label>
                                    <g:Label addStyleNames="{style.countSelected}" ui:field="cnt"/>
                                </g:HorizontalPanel>
                            </g:cell>
                            <g:cell horizontalAlignment="ALIGN_RIGHT">
                                <g:FlowPanel>
                                    <g:Button addStyleNames="{style.selectButton}" ui:field="selectButton">Выбрать</g:Button>
                                    <g:Button visible="false" addStyleNames="{style.cancelButton}" ui:field="cancelButton">Закрыть</g:Button>
                                </g:FlowPanel>
                            </g:cell>
                        </g:HorizontalPanel>
                    </g:cell>
                </g:VerticalPanel>
            </g:PopupPanel>
        </g:FlowPanel>
    </g:VerticalPanel>

    <!--<g:HorizontalPanel>
        <g:CellPanel></g:CellPanel>
    </g:HorizontalPanel>-->

</ui:UiBinder>