<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.aplana.gwt.client'>

    <ui:style >
        .rbtext{
            width: 100%;
            margin-left: 0px;
            margin-right: 0px;
            border: 1px solid #AFAEAB;
        }
    </ui:style>

    <g:HorizontalPanel  width="100%">
        <g:cell width="100%">
            <g:TextBox addStyleNames="{style.rbtext}" ui:field="text"   />
        </g:cell>

        <g:cell>
            <g:HorizontalPanel ui:field="buttonPanel" />
        </g:cell>


    </g:HorizontalPanel>

</ui:UiBinder>