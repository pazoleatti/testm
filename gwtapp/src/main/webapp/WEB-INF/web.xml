<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/applicationContext.xml
			/WEB-INF/security.xml
			/WEB-INF/security-preauth.xml
            /WEB-INF/spring-ejb.xml
			classpath:com/aplana/sbrf/taxaccounting/dao.xml
            classpath:com/aplana/sbrf/taxaccounting/script-support.xml
			classpath:com/aplana/sbrf/taxaccounting/service.xml
			classpath:com/aplana/sbrf/taxaccounting/cache.xml
		</param-value>
	</context-param>
	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <filter>
        <!--<filter-name>springSecurityFilterChain</filter-name>-->
        <filter-name>filterChainProxy</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <!--<filter-name>springSecurityFilterChain</filter-name>-->
        <filter-name>filterChainProxy</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
  		<servlet-name>mvc-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
  	</servlet>
  	<servlet-mapping>
		<servlet-name>mvc-dispatcher</servlet-name>
		<url-pattern>/download/*</url-pattern>
        <url-pattern>/upload/*</url-pattern>
        <url-pattern>/cache/*</url-pattern>
        <url-pattern>/j_spring_security_logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>dispatch</servlet-name>
		<servlet-class>org.springframework.web.context.support.HttpRequestHandlerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatch</servlet-name>
		<url-pattern>/dispatch/*</url-pattern>
	</servlet-mapping>

<!--	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.aplana.sbrf.taxaccounting.web.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>-->

	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Main.jsp</welcome-file>
	</welcome-file-list>

	<resource-ref>
		<description>TaxAccounting DataSource Reference</description> 
		<res-ref-name>jdbc/TaxAccDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type> 
		<res-auth>Container</res-auth>
	</resource-ref> 
	
	<resource-ref>
		<description>TaxAccounting FormType Dynacache Reference</description>
		<res-ref-name>services/cache/aplana/taxaccounting/FormType</res-ref-name>
		<res-type>com.ibm.websphere.cache.DistributedMap</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	
	<resource-ref>
		<description>TaxAccounting FormTemplate Dynacache Reference</description>
		<res-ref-name>services/cache/aplana/taxaccounting/FormTemplate</res-ref-name>
		<res-type>com.ibm.websphere.cache.DistributedMap</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	
	<resource-ref>
		<description>TaxAccounting Department Dynacache Reference</description>
		<res-ref-name>services/cache/aplana/taxaccounting/Department</res-ref-name>
		<res-type>com.ibm.websphere.cache.DistributedMap</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>	
	
	<resource-ref>
		<description>TaxAccounting User Dynacache Reference</description>
		<res-ref-name>services/cache/aplana/taxaccounting/User</res-ref-name>
		<res-type>com.ibm.websphere.cache.DistributedMap</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>	
		
	<resource-ref>
		<description>TaxAccounting DeclarationType Dynacache Reference</description>
		<res-ref-name>services/cache/aplana/taxaccounting/DeclarationType</res-ref-name>
		<res-type>com.ibm.websphere.cache.DistributedMap</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>

	<resource-ref>
		<description>TaxAccounting DeclarationTemplate Dynacache Reference</description>
		<res-ref-name>services/cache/aplana/taxaccounting/DeclarationTemplate</res-ref-name>
		<res-type>com.ibm.websphere.cache.DistributedMap</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>	
	
	<resource-ref>
		<description>Хранилище для кэширования бинарных отчетов по данным декларации</description>
		<res-ref-name>services/cache/aplana/taxaccounting/DataBlobsCache</res-ref-name>
		<res-type>com.ibm.websphere.cache.DistributedMap</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>

	<security-role>
		<description>Все аутентифицированные пользователи</description>	
		<role-name>taxaccountingUsers</role-name>
	</security-role>

	<login-config>
			<auth-method>FORM</auth-method>
			<realm-name>defaultWIMFileBasedRealm</realm-name>
			<form-login-config>
				<form-login-page>/login</form-login-page>
				<form-error-page>/login</form-error-page>
			</form-login-config>
	</login-config>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Protected Pages</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
			<http-method>HEAD</http-method>
			<http-method>TRACE</http-method>
			<http-method>OPTIONS</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>taxaccountingUsers</role-name>
		</auth-constraint>
		<user-data-constraint>
			<description>SSL or MSSL not required</description>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<!-- Exclude some URL's from authentication. See also security.xml. -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Unsecured</web-resource-name>
			<url-pattern>/login</url-pattern>
            <!--<url-pattern>/logout</url-pattern>-->
			<url-pattern>/j_security_check</url-pattern>
			<url-pattern>/GenericAccountManagementService</url-pattern>
			<url-pattern>/GenericAccountManagementService/*</url-pattern>
			<url-pattern>/TaxAccountingSupportingData</url-pattern>
			<url-pattern>/TaxAccountingSupportingData/*</url-pattern>
		</web-resource-collection>
	</security-constraint>

    <!-- Mime types -->
    <mime-mapping>
        <extension>htc</extension>
        <mime-type>text/x-component</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml;charset=utf-8</mime-type>
    </mime-mapping>

</web-app>
