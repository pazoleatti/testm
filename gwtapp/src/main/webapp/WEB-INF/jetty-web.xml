<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure class="org.mortbay.jetty.webapp.WebAppContext">

	<Get name="securityHandler">
		<Set name="userRealm">
			<New class="org.mortbay.jetty.security.HashUserRealm">
				<Set name="name">TaxAccounting Realm</Set>
				<Set name="config">
				<SystemProperty name="jetty.home" default="."/>/src/test/config/jetty-realm.properties</Set>
			</New>
		</Set>
	</Get>

	<New id="ds" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg>java:comp/env/jdbc/TaxAccDS</Arg>
		<Arg>
			<New class="org.apache.commons.dbcp.BasicDataSource">
				<Set name="driverClassName">com.ibm.db2.jcc.DB2Driver</Set>
				<Set name="url">jdbc:db2://172.16.127.4:50000/TAX</Set>
				<Set name="username">taxuser</Set>
				<Set name="password">taxuser</Set>
				<Set name="connectionProperties">currentSchema=TAX;currentFunctionPath=TAX;</Set>
			</New>
		</Arg>
	</New>

	<New id="tx" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg>java:comp/UserTransaction</Arg>
		<Arg>
			<Call name="getTransactionManager" class="bitronix.tm.TransactionManagerServices" />
		</Arg>
	</New>

</Configure>