<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
		http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.1.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.aplana.sbrf.taxaccounting.web.main.api.server"/>
	<bean class="com.aplana.sbrf.taxaccounting.web.main.entry.server.MainServerModule" />

	<bean id="logger" class="com.gwtplatform.dispatch.server.spring.LoggerFactoryBean">
		<constructor-arg>
			<bean class="java.util.logging.Logger" factory-method="getAnonymousLogger">
				<property name="level">
					<value>FINEST</value>
				</property>
			</bean>
		</constructor-arg>
	</bean>

    <jee:jndi-lookup id="jmsConnectionFactory" jndi-name="java:comp/env/jms/jmsConnectionFactory" />
    <jee:jndi-lookup id="jmsTopic" jndi-name="java:comp/env/jms/myTopic" />

    <!-- Слушалель JMS-сообщений -->
    <bean id="jmsMessageListener" class="com.aplana.sbrf.taxaccounting.jms.JmsMessageListener" />

    <!-- Spring-аналог EJB Message Driven Bean -->
    <!-- Раскомментировать для работы с JMS
    <bean id="messageListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsConnectionFactory"/>
        <property name="destination" ref="jmsTopic"/>
        <property name="messageListener" ref="jmsMessageListener"/>
    </bean>-->

    <jee:jndi-lookup id="dataSource" jndi-name="java:comp/env/jdbc/TaxAccDS" />
	<tx:jta-transaction-manager/>
	
</beans>
