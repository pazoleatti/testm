<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <jee:local-slsb
            id="asyncTaskManager"
            jndi-name="ejblocal:${releaseName}/async-core.jar/AsyncManagerBean#com.aplana.sbrf.taxaccounting.async.manager.AsyncManagerLocal"
            business-interface="com.aplana.sbrf.taxaccounting.async.manager.AsyncManager"
            lookup-home-on-startup="true"
            />
    <jee:local-slsb
            id="asyncInterruptionManager"
            jndi-name="ejblocal:${releaseName}/async-core.jar/AsyncInterruptionManagerSingleton#com.aplana.sbrf.taxaccounting.async.manager.AsyncInterruptionManagerLocal"
            business-interface="com.aplana.sbrf.taxaccounting.async.manager.AsyncInterruptionManager"
            lookup-home-on-startup="true"
            />
    <!--<jee:local-slsb
            id="commonService"
            jndi-name="ejblocal:${releaseName}/common-core.jar/CommonServiceBean#com.aplana.sbrf.taxaccounting.common.service.CommonServiceLocal"
            business-interface="com.aplana.sbrf.taxaccounting.common.service.CommonService"
            lookup-home-on-startup="true"
            />-->
    <context:component-scan base-package="com.aplana.sbrf.taxaccounting.common"/>

    <bean id="transactionManager" class="org.springframework.transaction.jta.WebSphereUowTransactionManager">
        <property name="allowCustomIsolationLevels" value="true"/>
    </bean>
</beans>
