        <update tableName="DECLARATION_TEMPLATE">
            <column name="CREATE_SCRIPT" valueClobFile="templates-3.9.1\ndfl\consolidated_rnu_ndfl\v2016\consolidated_rnu_ndfl.groovy"/>
            <where>declaration_type_id = 101</where>
        </update>
    </changeSet>

</databaseChangeLog>
