        <update tableName="BLOB_DATA">
            <column name="data" valueBlobFile="templates/ndfl/primary_rnu_ndfl/v2016/rnu_ndfl_light.xsd"/>
            <where>id in (select dt.xsd from declaration_template dt where dt.id = 100)</where>
        </update>
    </changeSet>

