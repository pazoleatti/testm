		<delete tableName="async_task_type">
            <where>id = 29</where>
		</delete>
	</changeSet>

	<!-- https://jira.aplana.com/browse/SBRFNDFL-6527 Новое значение не указано при редактировании ПНФ с помощью ТФ Excel -->
