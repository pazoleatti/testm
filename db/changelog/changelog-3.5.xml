	<!--https://jira.aplana.com/browse/SBRFNDFL-6452 Реализовать изменение определения настроек подразделений ТБ при консолидации-->
	<changeSet id="3.5-dnovikov-2" author="dnovikov">
		<sql>
			create view department_config as
			select * from (
