<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/jee
       http://www.springframework.org/schema/jee/spring-jee.xsd">

   <jee:remote-slsb id="dsHolder"
                     jndi-name="ejblocal:${buildName}/mdb.jar/DataSourceHolderBean#com.aplana.sbrf.taxaccounting.service.DataSourceHolderServiceLocal"
                     business-interface="com.aplana.sbrf.taxaccounting.service.DataSourceHolderService"/>

   <bean id="dataSource" class="com.aplana.sbrf.taxaccounting.service.MigrationDataSource" factory-method="getDataSource">
       <constructor-arg ref="dsHolder"/>
   </bean>

    <import resource="classpath:com/aplana/sbrf/taxaccounting/dao.xml"/>

    <context:annotation-config/>
</beans>